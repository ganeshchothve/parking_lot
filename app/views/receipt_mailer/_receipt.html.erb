<div class="card">
  <div class="card-body">
    <h5 class="text-center"><strong>Payment Details</strong></h5>
    <% labels = t('mongoid.attributes.receipt').with_indifferent_access %>
    <table class="table table-striped table-sm mt-3">
      <tbody>
        <tr>
          <td><%= labels['receipt_id'] %></td>
          <td class="text-right"><%= @receipt.receipt_id %></td>
        </tr>
        <tr>
          <td><%= labels['payment_mode'] %></td>
          <td class="text-right"><%= Receipt.available_payment_modes.find{|x| x[:id] == receipt.payment_mode}[:text] %></td>
        </tr>
        <tr>
          <td><%= labels['issuing_bank'] %></td>
          <td class="text-right"><%= receipt.issuing_bank %></td>
        </tr>
        <tr>
          <td><%= labels['issuing_bank_branch'] %></td>
          <td class="text-right"><%= receipt.issuing_bank_branch %></td>
        </tr>
        <tr>
          <td><%= labels['issued_date'] %></td>
          <td class="text-right"><%= receipt.issued_date %></td>
        </tr>
        <tr>
          <td><%= labels['payment_identifier'] %></td>
          <td class="text-right"><%= receipt.payment_identifier %></td>
        </tr>
        <tr>
          <td><%= labels['status'] %></td>
          <td class="text-right"><%= Receipt.available_statuses.find{|x| x[:id] == receipt.status}[:text] %></td>
        </tr>
        <tr>
          <td><%= labels['processed_on'] %></td>
          <td class="text-right"><%= receipt.processed_on %></td>
        </tr>
        <tr>
          <td><%= labels['total_amount'] %></td>
          <td class="text-right"><%= number_to_indian_currency(receipt.total_amount) %></td>
        </tr>
      </tbody>
    </table>
    <div class="mt-3 text-muted small">Please note that cheque / RTGS / NEFT payments are subject to clearance</div>
  </div>
</div>
