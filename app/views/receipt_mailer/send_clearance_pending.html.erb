  <%= @receipt.receipt_id %><br/>
  Rs. <%= @receipt.total_amount %><br/>
  <%= @receipt.status %><br/>
<% else %>
  <%= @receipt.receipt_id %><br/>
  Rs. <%= @receipt.total_amount %><br/>
  <%= @receipt.status %><br/>
<% end %>
