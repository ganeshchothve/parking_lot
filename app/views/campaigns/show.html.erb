<% campaign_labels = t("mongoid.attributes.campaign").with_indifferent_access %>
<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="box-card">
        <div class="box-header bg-gradient br-rd-tr-4">
          <h2 class="icon-set icon-file-kycs-white"><%= Campaign.model_name.human %></h2>
        </div>
        <div class="box-content br-rd-bl-4 bg-white p-0 pt-1">
          <div class="pd-box">
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:name] %></label>
              <div>
                <%= @campaign.name %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:description] %></label>
              <div>
                <%= @campaign.description %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:about_campaign_manager] %></label>
              <div>
                <%= @campaign.about_campaign_manager %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:terms_and_conditions] %></label>
              <div>
                <%= @campaign.terms_and_conditions %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:campaign_slab_offer_text] %></label>
              <div>
                <%= @campaign.campaign_slab_offer_text %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:campaign_slab_offer_percentage] %></label>
              <div>
                <%= @campaign.campaign_slab_offer_percentage %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:campaign_slab_offer_amount] %></label>
              <div>
                <%= @campaign.campaign_slab_offer_amount %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:campaign_id] %></label>
              <div>
                <%= @campaign.campaign_id %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:total_budget] %></label>
              <div>
                <%= @campaign.total_budget %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:total_invested_amount] %></label>
              <div>
                <%= @campaign.total_invested_amount %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:start_date] %></label>
              <div>
                <%= @campaign.start_date %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:end_date] %></label>
              <div>
                <%= @campaign.end_date %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:campaign_type] %></label>
              <div>
                <%= Campaign.campaign_types.find{|x| x[:id] == @campaign.campaign_type }[:text] %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:status] %></label>
              <div>
                <%= Campaign.statuses.find{|x| x[:id] == @campaign.status }[:text] %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:estimated_cost_per_lead] %></label>
              <div>
                <%= @campaign.estimated_cost_per_lead %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:sources] %></label>
              <div>
                <%= @campaign.sources.collect{|x| Campaign.sources.find{|s| s[:id] == x }[:text] }.to_sentence %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:focus] %></label>
              <div>
                <%= Campaign.focuses.find{|x| x[:id] == @campaign.focus }[:text] %>
              </div>
            </div>
            <div class="form-group">
              <% if @campaign.focus == 'project_based' %>
                <label class="small text-muted"><%= campaign_labels[:projects] %></label>
                <div>
                  <%= @campaign.projects.collect{|x| x.name}.to_sentence %>
                </div>
              <% else %>
                <label class="small text-muted"><%= campaign_labels[:target_areas] %></label>
                <div>
                  <%= @campaign.target_areas.to_sentence %>
                </div>
              <% end %>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:campaign_manager] %></label>
              <div>
                <%= @campaign.campaign_manager.name %>
              </div>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:campaign_budgets] %></label>
              <%= render partial: 'admin/campaign_budgets/show', collection: @campaign.campaign_budgets, as: :campaign_budget %>
            </div>
            <div class="form-group">
              <label class="small text-muted"><%= campaign_labels[:campaign_slabs] %></label>
              <%= render partial: 'admin/campaign_slabs/show', collection: @campaign.campaign_slabs, as: :campaign_slab %>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-3"></div>
    </div>
  </div>
</div>