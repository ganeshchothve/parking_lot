<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <%#= render 'breadcrumbs', {campaign: @campaign} %>
      <div class="card">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-7">
              <% if policy([current_user_role_group, Campaign.new]).new? %>
                <%= link_to "Add #{global_labels['campaign']}", new_admin_campaign_path, class: 'btn btn-primary modal-remote-form-link', data:{event_category: 'Section', event_action: 'Click', event_name: 'Add Campaign'} %>
              <% end %>
            </div>
            <div class="col-md-5 text-md-right">
              <h6 class="mt-2">Total <%= global_labels[:campaigns] %>: <%= @campaigns.total_entries %></h6>
            </div>
          </div>
          <%= render 'campaigns/index', {campaigns: @campaigns} %>
        </div>
      </div>
    </div>
  </div>
</div>
