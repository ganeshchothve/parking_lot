<table class='table table-responsive'>
  <thead class='thead-default'>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>DOB</th>
      <th>PAN</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_kycs.each do |user_kyc| %>
      <tr>
        <td><%= user_kyc.name %></td>
        <td><%= user_kyc.email %></td>
        <td><%= user_kyc.phone %></td>
        <td><%= user_kyc.dob %></td>
        <td><%= user_kyc.pan_number %></td>
        <td>
          <% if UserKycPolicy.new(current_user, user_kyc).edit? %>
            <% if current_user.role?('user') %>
              <%= link_to 'Edit', edit_user_kyc_path(user_kyc) %>
            <% else %>
              <%= link_to 'Edit', edit_admin_user_user_kyc_path(@user, user_kyc) %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if UserKycPolicy.new(current_user, UserKyc.new(user: @user)).new? %>
  <% if current_user.role?('user') %>
    <%= link_to 'New User Kyc', new_user_kyc_path %>
  <% else %>
    <%= link_to 'New User Kyc', new_admin_user_user_kyc_path(user: @user) %>
  <% end %>
<% end %>
