<%= content_for :breadcrumbs do %>
  <% unless current_user.role?('user') %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%= after_sign_in_path_for(current_user) %>">Dashboard</a></li>
      <% if UserPolicy.new(current_user, User).index? %>
        <li class="breadcrumb-item"><a href="<%= admin_users_path %>">Users</a></li>
      <% end %>
      <li class="breadcrumb-item active" aria-current="page">User KYCs</li>
    </ol>
  </nav>
  <% end %>
<% end %>
<table class='table'>
  <thead class='thead-default'>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>DOB</th>
      <th>PAN</th>
      <th class="text-right">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @user_kycs.each do |user_kyc| %>
      <tr>
        <td><%= user_kyc.name %></td>
        <td><%= user_kyc.email %></td>
        <td><%= user_kyc.phone %></td>
        <td><%= user_kyc.dob %></td>
        <td><%= user_kyc.pan_number %></td>
        <td class="text-right">
          <div class="dropdown show">
            <a class="btn btn-light dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
            <div class="dropdown-menu dropdown-menu-right">
              <% if UserKycPolicy.new(current_user, user_kyc).edit? %>
                <% if current_user.role?('user') %>
                  <%= link_to 'Edit', edit_user_kyc_path(user_kyc), class: 'dropdown-item' %>
                <% else %>
                  <%= link_to 'Edit', edit_admin_user_user_kyc_path(@user, user_kyc), class: 'dropdown-item' %>
                <% end %>
              <% end %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @user_kycs %>

<% if UserKycPolicy.new(current_user, UserKyc.new(user: @user)).new? %>
  <% if current_user.role?('user') %>
    <%= link_to 'Add User KYC', new_user_kyc_path, class: 'btn btn-primary' %>
  <% else %>
    <%= link_to 'Add User KYC', new_admin_user_user_kyc_path(@user), class: 'btn btn-primary' %>
  <% end %>
<% end %>
