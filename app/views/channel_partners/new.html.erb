<section class="auth login-page pb-5 mb-5">
  <div class="container">
    <div class="col-lg-6 col-xs-12 col-md-12 col-sm-12 p-0">
      <div class="login-form-wrapper pt-2">
        <p> <strong>Partner Registration</strong></p>
        <div class="box-card">
          <div class="box-header bg-gradient br-rd-tr-4">
            <h2><strong>Basic details</strong></h2>
          </div>
          <div class="box-content br-rd-bl-4 bg-white p-0 pt-1">
            <%= form_with(model: @channel_partner, local: true, html: {id: 'channel_partner_form', class: 'validate-form', multipart: true}) do |form| %>
              <% if @channel_partner.errors.full_messages.present? %>
                <div class="mb-3 alert alert-danger">
                  <strong>The form contains <%= @channel_partner.errors.full_messages.length %> errors.</strong>
                  <ul class="mt-3 pl-3">
                  <% @channel_partner.errors.full_messages.each do |x| %>
                    <li><%= x %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <%= render "form_fields", {form: form} %>
              <div class="signin-btn col-lg-12 pl-0 pr-0 pt-4 pb-5">
                <%= form.submit "Register", class: "sign-in-btn" %>
              </div>
              <%= render "devise/shared/links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#channel_partner_form"));
  });
<% end %>

