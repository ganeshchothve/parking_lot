<% if params[:from_cp_admin].present? %>
  <%= simple_form_for(@channel_partner, local: true, remote: true, html: {"data-resource-type": global_labels['channel_partner'], "data-type": "json", id: 'channel_partner_form', class: 'modal-remote-form validate-form'}) do |form| %>
    <div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header bg-gradient-cd white">
            <h3 class="title"><%= t("controller.channel_partners.#{action_name}.link_name") %></h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true" class="white">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= render "form_fields", {form: form} %>
          </div>
          <div class="modal-footer">
            <%= form.submit "Save", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <section class="auth login-page" style="<%= login_image() %>">
    <div class="container no-pd">
      <div class="col-lg-6 col-xs-12 col-md-12 col-sm-12 p-0">
        <div class="login-form-wrapper pt-5">
          <% template = ::Template::UITemplate.where(name: 'channel_partner/new').first %>
          <% if template.present? %>
            <%= get_view_erb(template) %>
          <% end %>
          <div class="box-card">
            <div class="box-header bg-gradient br-rd-tr-4">
              <h2><strong>Basic details</strong></h2>
            </div>
            <div class="box-content br-rd-bl-4 bg-white px-3 pt-3">
              <%= simple_form_for(@channel_partner, local: true, html: { id: 'channel_partner_form', class: 'validate-form', multipart: true, novalidate: false }) do |form| %>

                <%= render "form_fields", {form: form} %>
                <div class="signin-btn col-lg-12 pl-0 pr-0 pb-4">
                  <%= form.submit "Register", class: "sign-in-btn", data: { disable_with: "Please wait..." } %>
                </div>
                <%= render "devise/shared/links" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#channel_partner_form"));
  });
<% end %>

