<%= simple_form_for(@channel_partner, url: create_company_channel_partners_path, local: true, html: { id: 'company_form', class: 'validate-form', multipart: true, novalidate: false }) do |form| %>
<div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="title"><%= t("controller.channel_partners.#{action_name}.link_name") %></h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body theme-form">
        <div class="row">
          <div class="col-md-6">
            <%= form.input :first_name, required: true, autofocus: true, disabled: !policy([:admin, @user]).editable_field?("first_name") %>
          </div>
          <div class="col-md-6">
            <%= form.input :last_name, required: true, autofocus: true, disabled: !policy([:admin, @user]).editable_field?("last_name") %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= form.input :phone, required: true, disabled: !policy([:admin, @user]).editable_field?("phone"), as: :tel, input_html: { class: 'phone' } %>
          </div>
          <div class="col-md-6">
            <%= form.input :email, disabled: !policy([:admin, @user]).editable_field?("email"), input_html: { class: 'email'} %>
          </div>
        </div>
        <%= render "form_fields", {form: form} %>
      </div>
      <div class="modal-footer text-end">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#company_form"));
  });
<% end %>
