<div class="mt-5 pt-5"></div>
<section class="cp-login-otp-sec col-lg-4 mg-auto">
  <div class="cp-login-otp-wrap">
    <h2 class="px-4 pt-3 pb-3">Account Registration In Company</h2>
    <p class="px-4 pt-3 pb-1 font-weight-medium"><%= @user.name %> is requesting to register his account into your Company</p>
    <div class="cp-signup-form-wrap px-4 cp-form-wrap">
      <div class="mb-3 pt-3 pb-3">
        <%= link_to t('controller.users.change_state.active'), change_state_admin_user_path(@user, {user: {user_status_in_company_event: 'active', channel_partner_id: @channel_partner.id}}), method: :patch, class: 'btn btn-primary', data:{event_category: 'Section', event_action: 'Click', event_name: t('users.change_state.approve') } %>
        <%= link_to t('controller.users.change_state.inactive'), change_state_admin_user_path(@user, {user: {user_status_in_company_event: 'inactive'}}), method: :patch, class: 'btn btn-secodary', data:{event_category: 'Section', event_action: 'Click', event_name: t('users.change_state.reject') } %>
      </div>
    </div>
  </div>
</section>
