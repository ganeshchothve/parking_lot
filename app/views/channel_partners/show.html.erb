<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">Channel Partner</div>
          <div class="card-body">
            <div class="form-group">
              <label>Last Sync Log Status:</label>
              <div>
                <% if @resource.sync_logs.present? %>
                  <%= @resource.sync_logs.desc(:created_at)[0].status.present? ? @resource.sync_logs.desc(:created_at)[0].status : "-" %>
                <% else %>
                  <%= "Not synced" %>
                <% end %>
              </div>
            </div>
            <div class="form-group">
              <% if policy([:admin, SyncLog.new]).resync? && @resource.sync_logs.present? %>
                <%= link_to "Resync", controller: "admin/sync_logs", action: "resync", id: @resource.sync_logs.desc(:created_at)[0].id, class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
