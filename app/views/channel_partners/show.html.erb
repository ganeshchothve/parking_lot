<section class="bookings my-4 mb-4">
  <div class="container">
    <div class="col-md-12">
      <div class="box-card">
        <div class="box-header bg-gradient br-rd-tr-4 row">
          <h2><%= ChannelPartner.model_name.human %></h2>
        </div>
        <div class="box-content br-rd-bl-4 bg-white row">
          <div class="col-md-12 col-lg-12 col-sm-12">
            <ul class="booking-apart-info">
              <li>
                <span><%= t('mongoid.attributes.channel_partner.name') %></span>
                <p class="break-word"><%= @channel_partner.name %></p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.channel_partner.email') %></span>
                <p class="break-word"><%= @channel_partner.email %></p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.channel_partner.rera_id') %></span>
                <p><%= @channel_partner.rera_id.presence || '-' %></p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.channel_partner.gstin_number') %></span>
                <p><%= @channel_partner.gstin_number.presence || '-' %></p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.channel_partner.status') %></span>
                <p><%= t("mongoid.attributes.channel_partner/status.#{@channel_partner.status}") %></p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.channel_partner.company_name') %></span>
                <p class="break-word"><%= @channel_partner.company_name.presence || '-' %></p>
              </li>

              <li>
                <span><%= t('mongoid.attributes.channel_partner.pan_number') %></span>
                <p><%= @channel_partner.pan_number.presence || '-' %></p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.channel_partner.aadhaar') %></span>
                <p><%= @channel_partner.aadhaar.presence || '-' %></p>
              </li>

              <li>
                <span><%= t('mongoid.attributes.channel_partner.manager_name') %></span>
                <p class="break-word"><%= @channel_partner.manager_name.presence || '-' %></p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.channel_partner.cp_code') %></span>
                <p class="break-word"><%= @channel_partner.cp_code.presence || '-' %></p>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <% if policy([:admin, Crm::Base.new()]).choose_crm? && apis = Crm::Base.active_apis(@channel_partner).presence %>
      <div class="col-md-12 mt-3">
        <%= render 'admin/crm/base/crms', { apis: apis, resource: @channel_partner } %>
      </div>
    <% end %>
    <div class="col-md-12 mt-3 p-0">
      <%#= render 'sync_logs/sync', { record: @channel_partner } if current_client.external_api_integration? && policy([current_user_role_group, SyncLog.new]).index? %>
    </div>

  </div>
</section>
