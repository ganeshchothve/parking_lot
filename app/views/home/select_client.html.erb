<div class="mt-5 pt-5"></div>
<section class="cp-login-otp-sec col-lg-4 mg-auto mt-2" id="otp_user_section">
  <div class="cp-login-otp-wrap">
    <h2 class="px-4 pt-3 pb-3 font-light">Select Client</h2>
    <div class="cp-signup-form-wrap px-4 cp-form-wrap">
      <%= form_tag(select_client_path, id: 'select_client_form') do %>
        <div class='mt-3'>
          <% if current_user.role.in?(%w(superadmin)) %>
            <%= select_tag 'selected_client_id', options_for_select(Client.in(id: current_user.client_ids).collect{|x| [ x.name, x.id.to_s]}, (params.dig(:selected_client_id) || '')), {prompt: "Select Client to Log in", class: "selectize"} %>
          <% end %>
        </div>

        <div class="mb-3 pt-3 pb-3">
          <button class="btn btn-primary font-medium" type="submit">Submit</button>
          <%= link_to t('sign_out', scope: "devise"), destroy_session_path(current_user), class: "btn btn-primary no-fill font-medium ms-2", method: :delete %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#select_client_form"));
  });
<% end %>
