<div class="row">
    <div class="col-md-12">
        <% if @response[:success] == "true" %>
            <h3 class='text-center'>Thank You!</h3>
            <div class="alert alert-success">
                <h4><%= @response.dig(:message) %></h4>
            </div>
        <% else %>
            <div class="alert alert-danger">
                <h4><%= @response.dig(:response, :code) %> - <%= @response.dig(:response, :message) %></h4>
            </div>
        <% end %>
    </div>
</div>