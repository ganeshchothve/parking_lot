<section class="notes my-4 mb-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd cursor-pointer" data-toggle="collapse" href="#collapseNotes" role="button" aria-expanded="false" aria-controls="collapseNotes">
        <div class="table-title pt-1">
          <h2 class="title text-dark icon-set icon-file-contract-black">
            <%= Note.model_name.human(count: notable.notes.count )%>
          </h2>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">

          <% if policy([current_user_role_group, Note.new(notable: notable)]).new? %>
            <%= link_to t('helpers.new.link_name', model: Note.model_name.human), new_notable_path(notable_type: notable.class.model_name.i18n_key.to_s, notable_id: notable.id), class: 'btn modal-remote-form-link db-small-btn light-blue bg-white fn-400' %>
          <% end %>
          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= notable.notes.count %></button>

        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd bg-white collapse" id="collapseNotes">
        <%= render '/notes/index', notable: notable %>
      </div>
    </div>
  </div>
</section>