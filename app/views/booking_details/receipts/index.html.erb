<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-5 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title">
          <h1 class="title icon-rupee-black icon-set">
            <%= Receipt.model_name.human(count: @receipts.total_entries) %>
          </h1>
        </div>
      </div>
      <div class="col-lg-7 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">
          <% if current_client.cancellation_amount > 0 %>
            <div class="btn db-small-btn light-blue width-300 disclaimer bg-white">
              <%= t('controller.booking_details.receipts.form.refund_disclaimer') %>
            </div>
          <% end %>

          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= @receipts.total_entries %></button>
          <% if policy([current_user_role_group, Receipt.new(user: @lead.user, booking_detail: @booking_detail)]).new? %>
            <%= link_to t('controller.booking_details.receipts.new.link_name'), [:new, current_user_role_group, @lead, @booking_detail, :receipt], class: 'nowrap btn db-small-btn light-blue bg-white fn-400 modal-remote-form-link width-200' %>
          <% end %>
        </div>
      </div>

      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'receipts/index', {receipts: @receipts} %>
        </div>
      </div>
    </div>
  </div>
</section>
