<section class="documents my-4 mb-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 p-0 cursor-pointer" data-toggle="collapse" href="#collapseDocuments" role="button" aria-expanded="false" aria-controls="collapseDocuments">
        <div class="table-title pt-1">
          <h2 class="title text-dark icon-set icon-file-contract-black">
            <%= Asset.model_name.human(count: assets.count) %>
          </h2>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 p-0">
        <div class="table-btn-set float-right pb-3">
          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= assets.count %></button>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 p-0 bg-white collapse" id="collapseDocuments">
        <% if assets.present? %>
          <div class="card card-body">
            <div id="record_gallery_<%= record.id %>" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">'
                <% assets.each_with_index do |asset, index| %>
                  <li data-target="#record_gallery_<%= record.id %>" data-slide-to="<%= index %>" class="<%= index.zero? ? "active" : "" %>"></li>
                <% end %>
              </ol>

              <div class="carousel-inner">
                <% assets.each_with_index do |asset, index| %>
                  <% if asset.try(:file).present? && asset.try(:file).try(:url).present? %>
                    <div class="carousel-item <%= index.zero? ? "active" : "" %>">
                      <%= image_tag asset.file.url, class: 'd-block img-fluid m-auto', alt: record.name %>
                    </div>
                  <% end %>
                <% end %>
              </div>

              <a class="carousel-control-prev bg-white" href="#record_gallery_<%= record.id %>" role="button" data-slide="prev">
                <span class="fas fa-chevron-left text-dark" aria-hidden="true"></span>
                <span class="sr-only"><%= t('global.previous')%></span>
              </a>

              <a class="carousel-control-next bg-white" href="#record_gallery_<%= record.id %>" role="button" data-slide="next">
                <span class="fas fa-chevron-right text-dark" aria-hidden="true"></span>
                <span class="sr-only"><%= t('global.next') %></span>
              </a>
            </div>
          </div>
        <% else %>
          <div class="alert alert-primary">
            <%= t('assets.image.not_found') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>


