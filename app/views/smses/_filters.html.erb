<div class="card h-100">
  <div class="card-body">
    <% url = smses_path %>
    <%= form_tag url, method: "get", id: "sms_search_form" do %>
      <div class="form-group">
        <%= label_tag "", 'Filters', class: "control-label d-block d-lg-inline" %>
        <%= submit_tag :Apply, class: "btn btn-primary btn-sm float-lg-right" %>
      </div>
      <div class="clearfix"></div>
      <hr />
      <div class="form-group">
        <%= label_tag "fltrs[status]", "Status", class: "control-label" %>
        <%= select_tag "fltrs[status]", options_for_select(Sms.allowed_statuses.pluck(:id).each {|x| x}, (params[:fltrs].present? ? params[:fltrs][:status] : "")), {prompt: "Select Status", class: "selectize"} %>
      </div>
      <div class="form-group">
        <%= label_tag "fltrs", "Sent on", class: "control-label" %>
        <%= text_field_tag "fltrs[sent_on]", (params[:fltrs].present? ? params[:fltrs][:sent_on] : ""), class: "form-control daterangefilter", data: {locale: {format: "DD/MM/YYYY"}, opens: "left", drops: "down"} %>
      </div>
      <div class="form-group">
        <%= label_tag "fltrs", "Body", class: "control-label" %>
        <%= text_field_tag "fltrs[body]", (params[:fltrs].present? ? params[:fltrs][:body] : ""), prompt: "Enter Content", class: "form-control"%>
      </div>
    <% end %>
    <script>
      $(document).ready(function(){
        FormInitializer.init($("#sms_search_form"));
      });
    </script>
  </div>
</div>
