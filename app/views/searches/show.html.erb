<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <% unless current_user.buyer? %>
        <div class="alert alert-danger">
          You are taking a booking for <%= @user.name %>
        </div>
        <div class="mt-3"></div>
      <% end %>
      <% labels = t('mongoid.attributes.search').with_indifferent_access %>
      <div class="card d-none d-md-block">
        <div class="row">
          <div class="col-md-3 border-right">
            <%= render "searches/tabs/new", {search: @search, labels: labels} %>
          </div>
          <div class="col-md-3 border-right">
            <%= render "searches/tabs/filter", {search: @search, labels: labels} %>
          </div>
          <div class="col-md-3 border-right">
            <%= render "searches/tabs/towers", {search: @search, labels: labels} %>
          </div>
          <div class="col-md-3">
            <%= render "searches/tabs/project_unit", {search: @search, labels: labels} %>
          </div>
        </div>
      </div>
      <div class="card p-2 d-block d-md-none">
        <% if @search.step == "filter" %>
          Step 2: <span class="font-weight-bold">Choose <%= labels[:project_tower_id] %></span>
        <% elsif @search.step == "towers" %>
          Step 3: <span class="font-weight-bold">Choose <%= labels[:project_unit_id] %></span>
        <% elsif @search.step == "project_unit" %>
          Step 4: <span class="font-weight-bold">Set up your <%= global_labels[:user_kyc] %></span>
        <% end %>
      </div>
      <div class="mt-3"></div>
      <%= render "step_#{@search.step}" %>
    </div>
  </div>
</div>
