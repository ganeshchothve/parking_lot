<section class="my-customer my-4 mb-5 pb-5">
  <div class="container">
    <div class="row">
      <% unless current_user.buyer? %>
        <div class="col-lg-12 col-xs-12 col-sm-12 col-md-12 no-pd">
          <div class="alert alert-danger">
            You are taking a booking for <%= @user.name %>
          </div>
        </div>
        <div class="mt-3"></div>
      <% end %>
      <div class="col-lg-12 col-xs-12 col-sm-12 col-md-12 no-pd">
        <div class="row">
          <div class="col-lg-3 col-xs-12 col-sm-12 col-md-6">
            <h1 class="page-title">Apartment Selector</h1>
          </div>
          <div class="col-lg-9 col-xs-12 col-sm-12 col-md-6">
            <div class="float-right float-unset-xs">
              <ul class="filter-home">
                <li><a href="javascript:;" class="br-lf-rd-4"><span><%= @search.try(:bedrooms) || 'all'%></span><img src="<%= asset_path 'bed-gray.svg' %>" class="bed-icon"></a></li>
                <li><a href="javascript:;"><span><%= @search.try(:agreement_price) || 'all' %></span><img src="<%= asset_path 'file-contract-black-gray.svg' %>" class="file-icon"></a></li>
                <li><a href="javascript:;"  class="br-rt-rd-4"><span><%= @search.try(:all_inclusive_price) || 'all' %></span><img src="<%= asset_path 'rupee-black-gray.svg' %>" class="rupee-icon"></a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="separate-line"></div>
      </div>
      <div class="row">
        <% labels = t('mongoid.attributes.search').with_indifferent_access %>
          <%= render "searches/tabs/new", {search: @search, labels: labels} %>
          <%= render "searches/tabs/filter", {search: @search, labels: labels} %>
          <%= render "searches/tabs/towers", {search: @search, labels: labels} %>
          <%= render "searches/tabs/project_unit", {search: @search, labels: labels} %>
      </div>
      <div class="card p-2 d-block d-md-none">
        <% if @search.step == "filter" %>
          Step 2: <span class="font-weight-bold">Choose <%= labels[:project_tower_id] %></span>
        <% elsif @search.step == "towers" %>
          Step 3: <span class="font-weight-bold">Choose <%= labels[:project_unit_id] %></span>
        <% elsif @search.step == "project_unit" %>
          Step 4: <span class="font-weight-bold">Set up your <%= global_labels[:user_kyc] %></span>
        <% end %>
      </div>
      <div class="col-md-12"> <%= render "step_#{@search.step}" %></div>
    </div>
  </div>
</section>
