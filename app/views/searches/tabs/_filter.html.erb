<div class="row border-top border-thick <%= search.crossed_step('filter') ? 'border-primary' : 'border-light' %> py-2">
  <div class="col-2">
    <% if search.crossed_step('filter') %>
      <h4 class="mt-3">
        <%= icon "far", "check-circle", class: "text-primary" %>
      </h4>
    <% else %>
      <h1 class="text-muted mt-2"><%= search.allowed_steps.index(search.step) + 2 %></h1>
    <% end %>
  </div>
  <div class="col-10">
    <h6 class="d-inline">
      <%= labels[:project_tower_id] %>
    </h6>
    <div class="text-muted small">
      <% if search.crossed_step('filter') %>
        <%= search.project_tower.name %><br/>
        Lorem ipsum Helo Lowad adf2
        <%= link_to "Change", "javascript:;", class: "modal-remote-form-link small position-absolute", style: "right:10px; top:0;" %>
      <% else %>
        Choose towers that suit your requirements
      <% end %>
    </div>
  </div>
</div>
