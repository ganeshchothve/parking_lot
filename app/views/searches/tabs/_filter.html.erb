<div class="row border-top border-thick <%= search.crossed_step('filter') ? 'border-primary' : (search.step == 'filter' ? 'border-secondary' : 'border-light') %> py-2">
  <div class="col-md-2">
    <% if search.crossed_step('filter') %>
      <h4 class="mt-3">
        <%= icon "far", "check-circle", class: "text-primary" %>
      </h4>
    <% else %>
      <h1 class="text-muted mt-2"><%= search.allowed_steps.index("filter") + 2 %></h1>
    <% end %>
  </div>
  <div class="col-md-10">
    <h6 class="d-inline">
      Choose <%= labels[:project_tower_id] %>
    </h6>
    <div class="text-muted small">
      <% if search.crossed_step('filter') %>
        <%= search.project_tower.name %><br/>
        lorem ipsum
        <% if @search.previous_step.present? %>
          <%= form_for [:user, @search], html: {class: 'validate-form'} do |f| %>
            <div class="form-group">
              <%= f.hidden_field :step, value: "filter" %>
            </div>
            <div class="form-group">
              <%= f.submit "Change", class: "small position-absolute", style: "right: 10px; top:0;" %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        Choose towers that suit your requirements
      <% end %>
    </div>
  </div>
</div>
