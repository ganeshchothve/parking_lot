<div class="row border-top border-thick <%= search.crossed_step('project_unit') ? 'border-primary' : (search.step == 'project_unit' ? 'border-secondary' : 'border-light') %> py-2 mr-0">
  <div class="col-md-2">
    <% if search.crossed_step('project_unit') %>
      <h4 class="mt-3">
        <%= icon "far", "check-circle", class: "text-primary" %>
      </h4>
    <% else %>
      <h1 class="text-muted mt-2"><%= search.allowed_steps.index("project_unit") + 2 %></h1>
    <% end %>
  </div>
  <div class="col-md-10">
    <h6 class="d-inline">
      Set up your <%= global_labels[:user_kyc] %>
    </h6>
    <div class="text-muted small">
      Set up your <%= global_labels[:user_kyc] %> & hold your <%= global_labels[:project_unit] %>
    </div>
  </div>
</div>
