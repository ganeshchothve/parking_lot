<%
  if current_user.buyer?
    if @search.persisted?
      url = user_search_path(@search)
    else
      url = user_searches_path
    end
  else
    if @search.persisted?
      url = admin_user_search_path(@user, @search)
    else
      url = admin_user_searches_path(@user)
    end
  end
%>
<div class="container">
  <% unless current_user.buyer? %>
    <div class="alert alert-danger">
      You are taking a booking for <%= @user.name %>
    </div>
    <div class="mt-md-5"></div>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-md-7">
      <div class="card h-100">
        <div class="card-body">
          <%= form_for @search, url: url, html: {class: 'validate-form', id: "search_form"} do |f| %>
            <%= render "form_fields", {f: f, data: @data} %>
            <div class="form-group">
              <%= f.submit "Search", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <% if SearchPolicy.new(current_user, Search.new(user_id: @user.id)).three_d? %>
      <div class="col-md-5">
        <div class="card h-100">
          <div class="card-body text-center">
            <h5 class="mb-3">Book in 3D View</h5>
            <%= link_to (image_tag("3d-building.jpg", class: "img-fluid")).html_safe, three_d_admin_user_searches_path %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#search_form"));
});
<% end %>
