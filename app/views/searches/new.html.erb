<div class="row vh-100">
  <div class="col-lg-3 booking-flow-step px-0 mh-100">
    <p class="fn-16 mb-0">
      <i class="fa fa-check-circle me-2 fill-success"></i>
      <!-- <span class="">1</span> -->
      <%= t('controller.searches.select_project.link_name') %>
    </p>
    <p class="fn-16 mb-0  active">
      <!-- <i class="fa fa-check-circle me-2 fill-success"></i> -->
      <span><%= t('controller.searches.filter.step') %></span>
      <%= I18n.t("controller.searches.filter.link_name") %>
    </p>
    <p class="fn-16 mb-0">
      <!-- <i class="fa fa-check-circle me-2 fill-theme"></i> -->
      <span><%= t('controller.searches.towers.step') %></span>
      <%= I18n.t("controller.searches.towers.link_name") %>
    </p>
    <p class="fn-16 mb-0">
      <!-- <i class="fa fa-check-circle me-2 fill-theme"></i> -->
      <span><%= t('controller.searches.apartments.step') %></span>
      <%= I18n.t("controller.searches.apartments.link_name") %>
    </p>
  </div>
  <div class="col-lg-9 px-5 mh-100">
    <div class="row">
      <div class="col-lg-12 project_box px-0">
        <div class="row p-3 py-2">
          <div class="col-2">
            <% if SearchPolicy.new(current_user, Search.new(lead_id: @lead.id, booking_portal_client: current_user.booking_portal_client)).three_d? %>
            <%
                  if current_user.buyer?
                    url = three_d_lead_searches_path
                  else
                    url = three_d_admin_lead_searches_path(@lead)
                  end
              %>
            <%= link_to (image_tag("3d-building.jpg", class: "rounded img-fluid", width: 100, height: 87)).html_safe, url %>
            <% else %>
            <!--<%# <div class="" width="160" height="87" style="background-image:url('<%= client_asset_image_url('unit_selection_filter_image') || 'search-home-img.png' %>'); height:87px;width:160px"></div> %>-->
            <%= image_tag project_asset_image_url(@lead.project, 'unit_selection_filter_image') || 'search-home-img.png', class: 'rounded', width: 100, height: 87 %>
            <% end %>
          </div>
          <div class="col-lg-4">
            <h5 class="card-title mb-1 font-normal fn-20 mt-2"><%= @lead.project.name %></h5>
            <p class="card-text"><%= @lead.project.developer_name %></p>
          </div>
          <div class="col-lg-4">
            <p class="card-text small mt-2"><%= t('mongoid.attributes.project.micro_market') %></p>
            <p class="text-primary"><i
                class="fas fa-map-marker-alt fill-primary me-2"></i><%= "#{@lead.project.micro_market.present? ? @lead.project.micro_market&.titleize + ', ': ''}#{@lead.project.city&.titleize}".presence || '-' %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-lg-12 mt-3 px-0">
        <hr class="mb-4"/>
        <%= form_for @search, url: search_next_step_url, html: {class: 'validate-form row theme-form', id: "search_form"} do |f| %>
        <%= render "form_fields", {f: f, data: @data} %>
        <div class="mb-3">
          <%= f.submit I18n.t("global.search"), class: "theme-btn btn-primary px-3 py-1 d-inline-block w-auto" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="booking-flow-footer position-fixed w-100 bottom-0 start-0 p-2 py-3 bg-white border-top text-end">
    <a href="" class="btn btn-primary no-fill font-medium ms-2"><%= t('global.cancel') %></a>
    <a href="" class="btn btn-primary font-medium border-primary ms-2"><%= t('global.next') %></a>
  </div>
</div>

<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#search_form"));
  });
<% end %>
