<%
  if current_user.buyer?
    if @search.persisted?
      url = user_search_path(@search)
    else
      url = user_searches_path
    end
  else
    if @search.persisted?
      url = admin_user_search_path(@user, @search)
    else
      url = admin_user_searches_path(@user)
    end
  end
%>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7 col-xs-12 mt-md-5">
      <% unless current_user.buyer? %>
        <div class="alert alert-danger">
          You are taking a booking for <%= @user.name %>
        </div>
        <div class="mt-3"></div>
      <% end %>
      <div class="card">
        <div class="card-body">
          <%= form_for @search, url: url, html: {class: 'validate-form', id: "search_form"} do |f| %>
            <%= render "form_fields", {f: f, data: @data} %>
            <div class="form-group">
              <%= f.submit "Search", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#search_form"));
});
<% end %>
