<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <%= render 'dashboard/project_unit_overview', {project_unit: @project_unit} %>
      <div class="mt-3"></div>
      <%= render 'dashboard/project_unit_cost_sheet', {project_unit: @project_unit} %>
      <div class="mt-3"></div>
      <%
        alert = (current_client.cancellation_amount.present? && current_client.cancellation_amount.to_f > 0) ? "#{number_to_indian_currency(current_client.cancellation_amount)} processing charges will be applied on cancellation of booking" : ""
      %>
      <% if @project_unit.status == "hold" %>
        <%= form_for @project_unit, url: make_available_user_search_path(@search), method: 'post', html: {class: 'validate-form'} do |f| %>
          <%= f.hidden_field :status, value: 'available' %>
          <%= link_to (current_user.buyer? ? "I Agree" : "I Agree on behalf of #{@project_unit.user.name}"), payment_user_search_path(@search), class: 'btn btn-primary', style:'margin-top:0px' , data:{event_category: 'Section', event_action: 'Click', event_name: 'I Agree'}, onclick: alert %>
          <%= f.submit 'Cancel', class: 'btn btn-danger' , data:{event_category: 'Section', event_action: 'Click', event_name: 'Cancel'} %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
