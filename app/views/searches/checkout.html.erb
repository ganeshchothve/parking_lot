<section class="checkout-sec my-4 mb-5">
  <div class="px-3">
    <div class="">
      <div class="col-lg-12 col-xs-12 col-sm-12 col-md-12 bg-white">
        <div class="row">
          <div class="col-lg-4 col-xs-12 col-sm-12 col-md-12 p-0 border rounded">
            <div class="left-info bg-primary p-2 text-center position-relative  rounded-top">
              <% template = ::Template::UITemplate.where(booking_portal_client_id: current_client.try(:id), name: 'searches/checkout').first %>
              <i class="fa fa-info-circle fill-white position-absolute" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title='<%= template.present? ? get_view_erb(template) : '' %>' data-bs-html="true"></i>
              <div class="payment-timer jquery-countdown-container white fs-1 font-medium" id="held-until-countdown"></div>
            </div>
            <div class="form-sec-title pl-0 fn-24 p-3"><%= Scheme.model_name.human %></div>
            <%= nested_form_for([ current_user_role_group, @booking_detail, @booking_detail_scheme], local: true, remote: true, html: {class: 'modal-remote-form validate-form px-3', "data-resource-type": global_labels['schemes'], "data-type": "json", id: 'scheme_form'}) do |f| %>
                <%= render 'booking_detail_schemes/form', booking_detail_scheme: @booking_detail_scheme, booking_detail: @booking_detail, f: f %>
                <%= f.submit I18n.t("global.apply"), class: "save-kyc-btn border-primary btn text-primary fn-500 p-1 px-3 shadow-none" %>
              <% end %>
          </div>
          <div class="col-lg-8 col-xs-12 col-sm-12 col-md-12">
            <div class="right-info border rounded pb-4">
              <div class="checkout-menu-list ps-3 py-3 border-bottom">
              <ul class="theme-sticky-tab p-0 mb-0">
                <li class="p-0">
                  <a rel="apartment" class="scroll-sec active fn-16 p-2 display-inline-block theme-txt-color"><%= ProjectUnit.model_name.human %></a>
                </li>
                <li class="p-0">
                  <a rel="cost-sheet" class="scroll-sec fn-16 p-2 display-inline-block theme-txt-color"> <%= t('mongoid.attributes.project_unit.cost_sheet')%></a>
                </li>
                <li class="p-0">
                  <a rel="payment-schedule" class="scroll-sec fn-16 p-2 display-inline-block theme-txt-color"><%= t('mongoid.attributes.project_unit.payment_schedule')%></a>
                </li>
              </ul>
              </div>
              <div class="bookings scroll-fixed-height">
                <div class="px-3">
                  <div class="row">
                    <div class='col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd' id='apartment'>
                      <%= render 'booking_details/details', booking_detail: @booking_detail %>
                    </div>
                    <div class='col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd mt-4' id='cost-sheet'>
                      <%= render 'booking_details/cost_sheet', booking_detail: @booking_detail  %>
                    </div>
                    <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd mt-4" id="payment-schedule">
                      <%= render "booking_details/payment_schedule", booking_detail: @booking_detail, search: @search %>
                    </div>
                    <%
                      alert = (current_client.cancellation_amount.present? && current_client.cancellation_amount.to_f > 0) ? I18n.t("controller.searches.booking_cancellation_charges", name: number_to_indian_currency(current_client.cancellation_amount)) : ""
                    %>
                    <% if current_client.disclaimer.present? %>
                    <div class="col-lg-12">
                      <div class="card card-body small pb-0" style="height: 100px; overflow: auto;">
                        <div class="font-weight-bold mb-2"><%= I18n.t("controller.searches.disclaimer") %>:</div>
                        <%= current_client.disclaimer %>
                      </div>
                      </div>
                      <div class="mt-3"></div>
                    <% end %>
                    <% if @booking_detail_scheme.present? && @booking_detail_scheme.editable_payment_adjustments_present? %>
                    <div class="col-lg-12">
                      <div class="alert alert-danger">
                        <%= I18n.t("controller.searches.msg.scheme_approval_first") %>
                      </div>
                      </div>
                    <% end %>
                    <% if @project_unit.status == "hold" %>
                      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd mt-2 agree-check">
                        <% unless @booking_detail.project.payment_enabled? %>
                          <% if @booking_detail_scheme.present? && @booking_detail_scheme.editable_payment_adjustments_present? %>
                            <%= link_to I18n.t("controller.searches.proceed_without_payment.link_name"), send_under_negotiation_admin_lead_booking_detail_path(@lead.id, @booking_detail.id), class: 'btn submit-payemnt-btn fn-12 fn-500 btn-primary d-inline-block', style:'margin-top:0px', onclick: alert, method: :patch %>
                          <% else %>
                            <%= link_to I18n.t("controller.searches.proceed_without_payment.link_name"), send_blocked_admin_lead_booking_detail_path(@lead.id, @booking_detail.id), class: 'btn submit-payemnt-btn fn-12 fn-500 btn-primary d-inline-block', style:'margin-top:0px', onclick: alert, method: :patch %>
                          <% end %>
                        <% else %>
                          <% if !current_user.buyer? %>
                            <% if @lead.unattached_blocking_receipt.blank? %>
                              <%= link_to I18n.t("controller.searches.proceed_without_payment.text", name: @lead.name), new_admin_lead_booking_detail_receipt_path(@lead.id, @booking_detail.id) , class: 'btn submit-payemnt-btn fn-12 fn-500 modal-remote-form-link btn-primary d-inline-block', style:'margin-top:0px', onclick: alert %>
                              <% if policy([:admin, @lead]).send_payment_link? %>
                                <%= link_to I18n.t("controller.leads.payment_link.link_name"), send_payment_link_admin_lead_path(@lead, {booking_detail_id: @booking_detail.try(:id).try(:to_s)}), class: "btn submit-payemnt-btn fn-12 fn-500 btn-primary d-inline-block" %>
                              <% end %>
                            <% elsif @booking_detail_scheme.present? && @booking_detail_scheme.editable_payment_adjustments_present? %>
                              <%= link_to I18n.t("controller.searches.proceed_without_payment"), send_under_negotiation_admin_lead_booking_detail_path(@lead.id, @booking_detail.id), class: 'btn submit-payemnt-btn fn-12 fn-500 btn-primary d-inline-block', style:'margin-top:0px', onclick: alert, method: :patch %>
                            <% else %>
                              <%= link_to I18n.t("controller.searches.proceed_without_payment.agree_on_behalf", name: @lead.name), booking_admin_lead_booking_detail_path(@lead.id, @booking_detail.id), method: :patch, class: 'btn submit-payemnt-btn fn-12 fn-500 btn-primary d-inline-block', style:'margin-top:0px', onclick: alert %>
                            <% end %>
                          <% end %>
                        <% end %>
                        <% if current_user.buyer? %>
                            <% if @lead.try(:unattached_blocking_receipt).blank? %>
                              <%= link_to I18n.t("controller.searches.proceed_without_payment.agree_and_proceed"), new_buyer_booking_detail_receipt_path(booking_detail_id: @booking_detail.id), class: 'btn btn-primary submit-payemnt-btn fn-12 fn-500 modal-remote-form-link', style:'margin-top:0px', onclick: alert %>
                            <% elsif @booking_detail_scheme.present? && @booking_detail_scheme.editable_payment_adjustments_present? %>
                              <%= link_to I18n.t("controller.searches.proceed_without_payment.link_name"), send_under_negotiation_admin_lead_booking_detail_path(@lead.id, @booking_detail.id), class: 'btn submit-payemnt-btn fn-12 fn-500 btn-primary d-inline-block', style:'margin-top:0px', onclick: alert, method: :patch %>
                            <% else %>
                              <%= link_to I18n.t("controller.searches.proceed_without_payment.user_agree"), booking_buyer_lead_booking_detail_path(@lead,@booking_detail), method: :patch, class: 'btn submit-payemnt-btn fn-12 fn-500 btn-primary d-inline-block', style:'margin-top:0px', onclick: alert %>
                            <% end %>
                        <% else %>
                          <% unless @booking_detail.project.payment_enabled? %>
                            <div class="alert alert-danger">
                              You do not have access to take a Clearance pending <%= global_labels[:receipt] %> on behalf of <%= @lead.name %>.
                            </div>
                          <% end %>
                        <% end %>
                        <%= form_for @project_unit, url: make_available_lead_search_path(@search), method: 'post', html: {class: 'validate-form float-start d-inline-block'} do |f| %>
                          <%= f.hidden_field :status, value: 'available' %>
                          <%= f.submit I18n.t("global.cancel"), class: 'btn cancel-btn fn-12 fn-500 border me-2' , data:{event_category: 'Section', event_action: 'Click', event_name: 'Cancel'} %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="booking-flow-footer position-fixed w-100 bottom-0 start-0 p-2 py-3 bg-white border-top text-end">
    <a href="" class="btn btn-primary no-fill font-medium ms-2">Cancel</a>
    <a href="" class="btn btn-primary font-medium border-primary ms-2">Next</a>
  </div>
</section>
<%= javascript_tag do %>
  $(window).scroll(function () {
    header_sub_menu = $('.checkbox-sec').offset().top -70;
    if ($(document).scrollTop() > header_sub_menu) {
      $('.checkbox-sec').addClass('scroll-fixed');
      $('.checkbox-sec .bookings').addClass('scroll-fixed-height');
    }
  });
  $(document).ready(function(){
    var countdown_time = "<%= (@project_unit.held_on + @project_unit.holding_minutes.minutes).in_time_zone(current_user.time_zone).strftime("%m/%d/%Y %H:%M:%S") %>";
    $("#held-until-countdown").countdown(countdown_time, {
      elapse: false
    }).on('update.countdown', function(event) {
      if (!event.elapsed) {
        $(this).text(event.strftime('%M:%S'));
      }
    }).on('finish.countdown', function(){
      window.location.reload();
    });
    FormInitializer.init($("#update_scheme_booking_detail_form"))
  });
<% end %>
