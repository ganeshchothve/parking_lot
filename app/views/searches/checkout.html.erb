<div class="row justify-content-center">
  <div class="col-7">
    <%= render 'dashboard/project_unit_overview', {project_unit: @project_unit} %>
    <div class="mt-3"></div>
    <div class="card">
      <div class="card-body">
        <% if @project_unit.status == "hold" %>
          <%= form_for @project_unit, url: make_available_user_search_path(@search), method: 'post', html: {class: 'validate-form'} do |f| %>
            <%= f.hidden_field :status, value: 'available' %>
            <% if current_user.buyer? %>
              <%= link_to "I Agree", payment_user_search_path(@search), class: 'btn btn-primary', style:'margin-top:0px' , data:{event_category: 'Section', event_action: 'Click', event_name: 'I Agree'}, onclick: 'alert("Rs. 5,000 processing charges will be applied on cancellation of booking")' %>
            <% else %>
              <%
                if policy(Receipt.new(project_unit_id: @project_unit)).editable_field?("status")
                  url = new_admin_user_receipt_path(@user, project_unit_id: @project_unit.id)
                else
                  url = new_admin_user_receipt_path(@user, reference_project_unit_id: @project_unit.id)
                end
              %>
              <%= link_to "Add #{global_labels['receipt']}", url, class: 'btn btn-primary modal-remote-form-link', style:'margin-top:0px' , data:{event_category: 'Section', event_action: 'Click', event_name: 'I Agree'}, onclick: 'alert("Rs. 5,000 processing charges will be applied on cancellation of booking to the customer.")' %>
            <% end %>
            <%= f.submit 'Cancel', class: 'btn btn-danger' , data:{event_category: 'Section', event_action: 'Click', event_name: 'Cancel'}%>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
