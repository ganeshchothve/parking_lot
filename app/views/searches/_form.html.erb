<%= form_for @search, remote: true, url: search_next_step_url, html: {class: 'modal-remote-form validate-form', "data-resource-type": global_labels['search'], "data-type": "json", id: "search_form"} do |f| %>
  <div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <%= t('controller.searches.new.header')%>
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render "form_fields", {data: data, f: f} %>
        </div>
        <div class="modal-footer">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#search_form"));
});
<% end %>
