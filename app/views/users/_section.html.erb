<% hex_id = "collapseUsers_#{SecureRandom.hex(4)}" %>
<section class="users my-4 mb-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd cursor-pointer" data-toggle="collapse" href="#<%= hex_id %>" role="button" aria-expanded="false" aria-controls="<%= hex_id %>">
        <div class="table-title pt-1">
          <h2 class="title text-dark icon-set icon-users-black">
            <%= name %>
          </h2>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">
          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= users.total_entries %></button>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd bg-white collapseUsers collapse" id="<%= hex_id %>">
        <%= render "admin/users/index", users: users %>
      </div>
    </div>
  </div>
</section>
<%= javascript_tag do %>
  $(document).ready(function(){
      var count = <%= raw users.total_entries %>
      if(count != 0){
        $('.collapseUsers').collapse('show')
      }
  });
<% end %>
