<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1">
          <i class="fa fa-list"></i><h1 class="title"><%= PortalStagePriority.model_name.human %></h1>
          <span>( In order of their priority. )</span>
          <p class='small'>Move any stage up or down to change its priority.</p>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">
          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= @portal_stage_priorities.count %></button>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render "admin/portal_stage_priorities/index", portal_stage_priorities: @portal_stage_priorities %>
        </div>
      </div>
    </div>
  </div>
</section>
