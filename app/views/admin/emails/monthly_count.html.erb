<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-6 col-sm-12 no-pd text-end mt-2">
        <div class="filter-popup">
            <a class="db-filter-btn fn-500" href="javascript:;">
              <i class="fa fa-filter fill-theme"></i>
            </a>
          </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd mt-4">
        <div class="box-card relative">
          <% if @monthly_count.is_a?(Hash) %>
            <table class='table my-customer-table responsive-tbl mb-5'>
              <thead class="th-default">
                  <thead>
                    <tr class="bg-primary white">
                      <th>Month</th>
                      <th>Count</th>
                    </tr>
                  </thead>
              </thead>
              <tbody>
                <% @monthly_count.each do |key, value| %>
                  <tr>
                    <% unless key == 'Total' %>
                      <td data-title='Month'><%= key %></td>
                      <td class='non-action-td' data-title='Count'><%= value.try(:to_i) || 0 %></td>
                    <% else %>
                      <td data-title='All Time'><strong><%= key %></strong></td>
                      <td class='non-action-td' data-title='Total'><strong><%= value.try(:to_i) || 0 %></strong></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <%= @monthly_count %>
          <% end %>
          <div class="filter-box">
            <%= render 'monthly_count_filter', url: monthly_count_admin_emails_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
