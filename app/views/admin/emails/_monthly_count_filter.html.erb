<% labels = t('mongoid.attributes.email').with_indifferent_access %>
<div class="filter-inner modal-content ps-2 pe-2 fixed-header-footer">
  <div class="modal-header filter-header">
  <h3 class="title">Filter</h3>
      <a href="javascript:;" class="close-filter-btn btn-close"></a>
  </div>
  <%= form_tag url, method: "get", id: "email_monthly_count_filter_form" do %>
   <div class="filter-content modal-body ps-0 pe-0">
      <div class="row">
        <div class="mb-3 col-lg-6 col-xs-12 col-md-6 col-sm-12">
          <%= label_tag "fltrs", labels[:sent_on], class: "control-label" %>
          <%= text_field_tag "fltrs[sent_on]", (params[:fltrs].present? ? params[:fltrs][:sent_on] : ""), class: "form-control daterangefilter", data: {locale: {format: "DD/MM/YYYY"}, opens: "left", drops: "down"}, placeholder: 'dd/mm/yyyy - dd/mm/yyyy' %>
        </div>
      </div>
    </div>
    <div class="filter-footer modal-footer text-end">
      <%= submit_tag :Apply, class: "btn btn-primary f-save-btn db-small-btn bg-light-blue fn-500 float-end" %>
      <button type="button" class="btn btn-secondary f-cancel-btn float-end">Cancel</button>
    </div>
  <% end %>
</div>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#email_monthly_count_filter_form"));
  });
<% end %>
