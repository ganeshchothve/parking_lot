<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>To</th>
      <th>Subject</th>
      <th>Status</th>
      <th>Sent On</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.to %></td>
        <td><%= email.subject %></td>
        <td><%= email.status %></td>
        <% if email.sent_on.blank? %>
          <td><%= "--" %></td>
        <% else %>
          <td><%= email.sent_on.strftime("%d/%m/%Y") %></td>
        <% end %>
        <td><%= link_to 'Show', admin_email_path(email) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
