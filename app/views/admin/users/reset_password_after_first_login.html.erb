<div class="mt-5 pt-5"></div>
<div class="cp-email-verify top-notification" hidden>
  <div class="email-notify col-lg-4 mg-auto h-auto">
    <p class='mb-0'><em><span class='top-message'></span></em> <i class="fa fas fa-check"></i></p>
  </div>
</div>
<section class="cp-login-email-sec col-lg-4 mg-auto" id="standard_login_section">
  <div class="cp-login-email-wrap">
    <h2 class="px-4 pt-3 pb-3"><%= t('controller.users.change_password.link_name') %></h2>
    <div class="cp-signup-form-wrap cp-form-wrap px-4">
      <div class="row justify-content-center">
        <div class="col-md-11">
          <div class="h-100">
            <div class = 'fn-18 theme-txt-color mb-2'>
              <div class="card-body">
                <%= form_for [current_user_role_group, @user], action: :update_password, local: true, html: {id: "reset_password_after_login_form", class: "validate-form mr-3 ml-3", "data-resource-type": global_labels['user']} do |f| %>
                  <div class="mb-3">
                    <%= f.label :password, class: 'label-required' %>
                    <%= f.password_field :password, class: 'form-control', autofocus: true, required: 'required', disabled: !policy([current_user_role_group, @user]).editable_field?("password") %>
                  </div>
                  <div class="mb-3">
                    <%= f.label :password_confirmation, class: 'label-required' %>
                    <%= f.password_field :password_confirmation, class: 'form-control', autofocus: true, required: 'required', disabled: !policy([current_user_role_group, @user]).editable_field?("password") %>
                  </div>
                  <%= f.hidden_field :is_first_login, value: true %>
                  <div class="text-end">
                    <%= f.submit t('controller.users.change_password.link_name'), class: 'btn btn-primary' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
