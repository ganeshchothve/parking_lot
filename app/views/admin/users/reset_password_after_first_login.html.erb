<div class="mt-5 pt-5"></div>
<section class="cp-email-verify mt-5">
	<div class="cp-pwd-create">
		<h2 class="pt-3 px-4"><%= I18n.t("devise.keys.change_your_password") %></h2>
		<p class="pb-3 px-4"><%= I18n.t("devise.help_text.enter_password") %></p>
		<div class="cp-signup-form-wrap pt-2 pb-3 px-4 cp-form-wrap">
			<%= simple_form_for([current_user_role_group, @user], action: :update_password, local: true, html: { novalidate: false, class: 'validate-form', id: 'reset_password_after_login_form', "data-resource-type": global_labels['user'] }) do |f| %>
				<div class="mb-3">
          <%= f.input :password, required: true, input_html: {autofocus: true, autocomplete: false, class: 'form-control', disabled: !policy([current_user_role_group, @user]).editable_field?("password")} %>
				</div>
				<div class="mb-3">
          <%= f.input :password_confirmation, required: true, input_html: {autofocus: false, autocomplete: false, class: 'form-control', disabled: !policy([current_user_role_group, @user]).editable_field?("password")} %>
				</div>
        <%= f.hidden_field :is_first_login, value: true %>
				<div class="mb-3 pt-3">
					<%= f.submit t('controller.users.change_password.link_name'), class: 'btn cp-btn sign-in-btn',  data:{event_category: 'Section', event_action: 'Click', event_name: 'Send me reset password instructions'}  %>
				</div>
			<% end %>
		</div>
	</div>
</section>
<%= javascript_tag do %>
  $(document).ready(function(){
    $('section.login-page').css('height', $( window ).height() - $('section.login-page').offset().top );
    FormInitializer.init($("#reset_password_after_login_form"));
  });
<% end %>
