<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-3 no-pd mb-5">
  <div class="box-card relative table-responsive">
    <table class="table my-customer-table responsive-tbl caption-top rounded mt-3 mb-0">
      <thead class="th-default">
        <tr class="bg-primary white">
          <th><%= Project.model_name.human %></th>
          <th>No. of <%= Lead.model_name.human(count: 2) %></th>
          <th>No. of <%= BookingDetail.model_name.human(count: 2) %></th>
          <th>Total <%= t('mongoid.attributes.booking_detail.agreement_price') %></th>
        </tr>
      </thead>
      <tbody>
        <% Project.where(Project.user_based_scope(current_user)).each do |p| %>
          <tr>
            <td data-title='<%= Project.model_name.human %>'><%= p.name.titleize %></td>
            <td data-title='Walk ins'><%= @walkins[p.id].try(:count) || 0 %></td>
            <td data-title='Bookings'><%= @bookings[p.id].try(:count) || 0 %></td>
            <% sum_of_av = (@bookings[p.id].try(:pluck, :agreement_price).try(:sum) || 0) %>
            <td class='non-action-td' data-title='Agreement Value'><%= number_to_indian_currency(sum_of_av) %>(<%= number_to_inr(sum_of_av, {precision: 2, significant: false}) %>)</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
