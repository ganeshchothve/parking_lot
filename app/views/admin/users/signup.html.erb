<div class="mt-5 pt-5"></div>
<div class="cp-email-verify top-notification" hidden>
  <div class="email-notify col-lg-4 mg-auto h-auto">
    <p class='mb-0'><em><span class='top-message'></span></em> <i class="fa fas fa-check"></i></p>
  </div>
</div>
<section class="cp-login-email-sec col-lg-4 mg-auto" id="standard_login_section">
  <div class="cp-login-email-wrap mb-5">
  <h2 class="px-4 pt-3 pb-3 font-normal">Sign Up</h2>
    <div class="cp-signup-form-wrap cp-form-wrap px-4">
      <%= form_for(@user, url: user_register_path, html: {class: 'validate-form', id: 'mp_user_from'}) do |f| %>

        <div class="mb-3">
          <%= f.label :first_name, class: 'label-required' %>
          <%= f.text_field :first_name, class: 'form-control', autofocus: true, required: 'required' %>
        </div>

        <div class="mb-3">
          <%= f.label :last_name, class: 'label-required' %>
          <%= f.text_field :last_name, class: 'form-control', autofocus: true, required: 'required' %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: 'label-required' %>
          <%= f.email_field :email, class: 'form-control', autofocus: true, required: 'required' %>
        </div>

        <div class="mb-3">
          <%= f.label :phone, class: 'form-label' %>
          <%= f.text_field :phone, class: 'form-control phone', required: 'required' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: 'label-required' %>
          <%= f.password_field :password, class: 'form-control', autofocus: true, required: 'required' %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: 'label-required' %>
          <%= f.password_field :password_confirmation, class: 'form-control', autofocus: true, required: 'required' %>
        </div>

        <div class="mb-3">
          <%= f.label :company_name, class: 'label-required' %>
          <%= f.text_field :name, class: 'form-control', autofocus: true, required: 'required', value: @client.name %>
        </div>

        <div class="mb-3">
          <%= f.label :sender_email, t('mongoid.attributes.client.sender_email'), class: 'label-required' %>
          <% help_text = t('controller.clients.sender_email.help_text') %>
          <span data-bs-toggle="tooltip" data-bs-placement="top"
              data-bs-custom-class="custom-tooltip"
              title="<%= strip_tags(help_text).html_safe %>"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle text-primary" style="cursor: pointer;" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
      </svg></span>
          <%= f.email_field :sender_email, class: 'form-control', autofocus: true, required: 'required' %>
        </div>

        <div class="mb-3">
          <%= f.label :booking_portal_domains, t('mongoid.attributes.client.booking_portal_domains'), class: 'form-label' %>
          <%= f.text_field :booking_portal_domains, name: "user[booking_portal_domains][]", class: 'form-control', autofocus: true %>
        </div>

        <div class="mt-3">
          <%= f.submit 'Register', class: 'sign-in-btn btn btn-primary d-block' %>
        </div>

      <% end %>
    </div>
    <div class="signin-footer text-center mt-4">
      <div class="p-style opacity-5 d-inline-block"><%= t("sessions.new.link.pre_text") %></div>
      <%= link_to t("sessions.new.link.name"), new_user_session_path, data:{event_category: 'Section', event_action: 'Click', event_name: 'Log In'}, class: "p-style opacity-5 fn-500 d-inline-block ms-2 primary" %><br/>
    </div>
  </div>
</section>

<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#mp_user_from"));
  });
<% end %>
