<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-3 mb-5">
  <div class="box-card relative table-responsive">
    <table class="table my-customer-table responsive-tbl caption-top rounded mt-3 mb-0">
      <thead class="th-default">
        <tr class="bg-primary white">
          <th><%= t("mongoid.attributes.user/role.channel_partner") %> /<br> <%= t("mongoid.attributes.user/role.cp_owner") %></th>
          <% if policy([:admin, Lead]).index? %>
            <th><%= Lead.model_name.human(count: 2) %></th>
          <% end %>
          <th>Pending<br> <%= SiteVisit.model_name.human(count: 2) %></th>
          <th>Approved<br> <%= SiteVisit.model_name.human(count: 2) %></th>
          <th>Rejected<br> <%= SiteVisit.model_name.human(count: 2) %></th>
          <th><%= BookingDetail.model_name.human(count: 2) %></th>
          <th>Total<br> <%= t('mongoid.attributes.booking_detail.agreement_price') %></th>
        </tr>
      </thead>
      <tbody>
        <% user = params[:channel_partner_id].present? ? ChannelPartner.where(id: params[:channel_partner_id]).first&.users&.cp_owner&.first : current_user %>
        <% User.filter_by_role(%w(cp_owner channel_partner)).where(User.user_based_scope(user || current_user)).each do |p| %>
          <tr>
            <td data-title='<%= t("mongoid.attributes.user/role.channel_partner") %>'><%= p.name.titleize %></td>
            <% if policy([:admin, Lead]).index? %>
              <td data-title='<%= Lead.model_name.human(count: 2) %>'><%= @leads[p.id].try(:count) || 0 %></td>
            <% end %>
            <td data-title='Pending <%= SiteVisit.model_name.human(count: 2) %>'><%= @pending_site_visits[p.id].try(:count) || 0 %></td>
            <td data-title='Approved <%= SiteVisit.model_name.human(count: 2) %>'><%= @approved_site_visits[p.id].try(:count) || 0 %></td>
            <td data-title='Rejected <%= SiteVisit.model_name.human(count: 2) %>'><%= @rejected_site_visits[p.id].try(:count) || 0 %></td>
            <td data-title='<%= BookingDetail.model_name.human(count: 2) %>'><%= @bookings[p.id].try(:count) || 0 %></td>
            <% sum_of_av = (@bookings[p.id].try(:pluck, :agreement_price)&.map(&:to_f)&.sum || 0) %>
            <td class='non-action-td' data-title='<%= t('mongoid.attributes.booking_detail.agreement_price') %>'><%= number_to_indian_currency(sum_of_av) %>(<%= number_to_inr(sum_of_av, {precision: 2, significant: false}) %>)</td>
          </tr>
        <% end %>
        <tr >
          <th data-title="<%= t('global.total') %>"><%= t('global.total') %></th>
          <% if policy([:admin, Lead]).index? %>
            <td data-title='<%= Lead.model_name.human(count: 2) %>'><%= @leads.values&.flatten&.count || 0 %></td>
          <% end %>
          <td data-title='Pending <%= SiteVisit.model_name.human(count: 2) %>'><%= @pending_site_visits.values&.flatten&.count || 0 %></td>
          <td data-title='Approved <%= SiteVisit.model_name.human(count: 2) %>'><%= @approved_site_visits.values&.flatten&.count || 0 %></td>
          <td data-title='Rejected <%= SiteVisit.model_name.human(count: 2) %>'><%= @rejected_site_visits.values&.flatten&.count || 0 %></td>
          <td data-title='<%= BookingDetail.model_name.human(count: 2) %>'><%= @bookings.values&.flatten&.count || 0 %></td>
          <% sum_of_av = (@bookings.values&.flatten&.pluck(:agreement_price)&.map(&:to_f)&.sum || 0) %>
          <td class='non-action-td' data-title='<%= t('mongoid.attributes.booking_detail.agreement_price') %>'><%= number_to_indian_currency(sum_of_av) %>(<%= number_to_inr(sum_of_av, {precision: 2, significant: false}) %>)</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
