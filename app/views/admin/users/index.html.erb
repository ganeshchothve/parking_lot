<div class="container">
  <div class="row justify-content-center">
    <div class="<%= @user.blank? ? 'col-md-9' : 'col-md-12' %>">
      <%= render 'breadcrumbs' %>
      <div class="card h-100">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-7">
              <div class="dropdown float-left">
                <a class="btn btn-primary dropdown-toggle" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Add new</a>
                <div class="dropdown-menu">
                  <% User.available_roles(current_client).each do |role| %>
                    <% if UserPolicy.new(current_user, User.new(role: role[:id])).new? %>
                      <%= link_to "New #{role[:text]}", new_admin_user_path(role: role[:id]), class: 'modal-remote-form-link dropdown-item' %>
                      <% end %>
                  <% end %>
                </div>
              </div>
              <% if UserPolicy.new(current_user, User).export? %>
                <%= link_to "Export all #{global_labels['users']}", export_admin_users_path, class: 'btn btn-primary ml-2' %>
              <% end %>
            </div>
            <div class="col-md-5 text-md-right">
              <h6 class="mt-2">Total <%= global_labels[:users] %>: <%= @users.count %></h6>
            </div>
          </div>
          <%= render "admin/users/index", users: @users %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="d-md-none mt-3"></div>
      <%= render "filters" %>
    </div>
  </div>
</div>
