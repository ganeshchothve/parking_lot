<canvas id="barChart5" height="300" class="pl-3 pr-3"></canvas>
<%= javascript_tag do %>
  var canvas = document.getElementById("barChart5");
  var ctx = canvas.getContext('2d');

  // Global Options:
   Chart.defaults.global.defaultFontColor = 'dodgerblue';
   Chart.defaults.global.defaultFontSize = 10;

  // Data with datasets options
  var data = {
      labels: <%= @data.keys.to_json.html_safe %>,
      datasets: [{
                  label: 'Users',
                  borderColor: '#ffffff',
                    borderWidth: 1,
                    data: <%= @data.values.to_json.html_safe %>
                  }]
  };

  var options = {
          plugins: {
            colorschemes: {
              scheme: 'brewer.PuOr3'
            }
          },
          title: {
            display: true,
            text: 'Users'
          },
          tooltips: {
            mode: 'index',
            intersect: true
          },
          responsive: true,
          scales: {
            xAxes: [{
              stacked: false,
            }],
            yAxes: [{
              stacked: true
            }]
          }
        };
  // Chart declaration:
  var myBarChart = new Chart(ctx, {
      type: 'bar',
      data: data,
      options: options
  });
<% end %>