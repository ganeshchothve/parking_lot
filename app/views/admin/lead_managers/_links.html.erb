<% if policy([:admin, lead_manager]).show? %>
  <%= link_to t('controller.lead_managers.show.link_name'), admin_lead_manager_path(lead_manager), class: "dropdown-item" %>
<% end %>

<% if policy([:admin, lead_manager]).asset_create? %>
  <%= link_to current_user.role?(:channel_partner) ? 'Upload Site Visit Form' : 'Site Visit Forms' , admin_lead_path(lead_manager.lead, 'remote-state': assetables_path(assetable_type: lead_manager.class.model_name.i18n_key.to_s, assetable_id: lead_manager.id) ), class: "dropdown-item" %>
<% end %>

<% if policy([:admin, lead_manager]).edit? %>
  <%= link_to t('controller.lead_managers.edit.link_name'), edit_admin_lead_manager_path(lead_manager), class: "dropdown-item modal-remote-form-link" %>
<% end %>

<% if policy([:admin, lead_manager]).extend_validity? %>
  <%= link_to t('controller.lead_managers.extend_validity.link_name'), extend_validity_admin_lead_manager_path(lead_manager), class: "dropdown-item modal-remote-form-link" %>
<% end %>

<% if policy([:admin, lead_manager]).accompanied_credit? %>
  <%= link_to t('controller.lead_managers.accompanied_count_to_cp'), accompanied_credit_admin_lead_manager_path(lead_manager), class: "dropdown-item modal-remote-form-link" %>
<% end %>
