<section class="my-customer">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1">
          <i class='fa fa-key'></i><h1 class="title"><%= global_labels['accounts'] %></h1>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">
          <div class="new-menu display-initial" >
            <button class="db-small-btn bg-light-blue white fn-500 dropdown-toggle" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Add New</button>
            <div class="dropdown-menu dropdown-menu-right">
              <% Client.available_payment_gateways.collect {|x| x[:id]}.each do |acct_type| %>
                <%= link_to acct_type, new_admin_account_path(account_type: "#{acct_type}Payment".underscore), class: 'dropdown-item modal-remote-form-link' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'index', {accounts: @accounts} %>
        </div>
      </div>
    </div>
  </div>
</section>
