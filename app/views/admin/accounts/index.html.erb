<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1">
          <h1 class="title icon-set icon-key-black">
            <%= Account.model_name.human(count: @accounts.total_entries) %>
          </h1>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">
          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= @accounts.total_entries %></button>
          <div class="new-menu display-initial" >
            <button class="db-small-btn white light-blue bg-white fn-400 dropdown-toggle width-130" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= t('controller.accounts.new.link_name', model: Account.model_name.human) %></button>
            <div class="dropdown-menu">
              <% Client::PAYMENT_GATEWAYS.each do |acct_type| %>
                <%= link_to t("client.payment_gatways.#{acct_type}"), new_admin_account_path(account_type: "#{acct_type}Payment".underscore), class: 'dropdown-item modal-remote-form-link' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'index', {accounts: @accounts} %>
        </div>
      </div>
    </div>
  </div>
</section>
