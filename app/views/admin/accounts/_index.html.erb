<div class="table-responsive">
  <table class='table striped-table payment-breakup' width="100%" cellpadding="10" cellspacing="0">
    <thead class="th-default">
      <% labels = t('mongoid.attributes.scheme').with_indifferent_access %>
      <tr>
        <th><%= 'Account Number' %></th>
        <th><%= 'Default Account' %></th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% accounts.each do |account| %>
      <tr>
        <td>
          <%= account.account_number %>
          <div class="small">
            Phase
            <%= account.phase.present? ? account.phase.name : '-' %>
          </div>
        </td>
        <td>
          <% if account.by_default %>
            <%= 'Yes'%>
          <% else %>
            <%= 'No' %>
          <% end %>
        </td>
        <td class="text-right">
          <div class="dropdown">
            <a class="btn btn-light dropdown-toggle" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
            <div class="dropdown-menu dropdown-menu-right">
              <% url = edit_admin_account_path(account, request_type: 'razorpay_payment') %>
              <%= link_to 'Edit', url, class: 'modal-remote-form-link dropdown-item' %>
              <% url = admin_account_path(account, request_type: 'razorpay_payment') %>
              <%= link_to 'Show', url, class: 'dropdown-item' %>
              <%= link_to 'Delete', url, class: 'dropdown-item', method: :delete %>
            </div>
          </div>
        </td>
      </tr>
      <% end %>
      <tr>
        <td colspan="4">
          <div class="mt-5 pt-5"></div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<%= will_paginate accounts, list_classes: %w(pagination justify-content-center) %>
