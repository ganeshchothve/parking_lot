<div class="table-responsive">
  <table class='table striped-table payment-breakup' width="100%" cellpadding="10" cellspacing="0">
    <thead class="th-default">
      <tr>
        <th><%= t('mongoid.attributes.account.names') %></th>
        <th><%= t('mongoid.attributes.account.account_number') %></th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% accounts.each do |account| %>
      <tr>
        <td>
          <%= account.name %>
          <% if account.by_default %>
            <span class="badge badge-primary" title="Default Account" data-toggle="popover" data-trigger="focus" data-content="System need only one default account, which contains first payment of each unit.">Default</span>
          <% end %>
        </td>
        <td>
          <%= account.account_number %>
        </td>
        <td class="text-right">
          <div class="dropdown">
            <a class="btn btn-light dropdown-toggle" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to 'Edit', edit_admin_account_path(account, request_type: 'razorpay_payment'), class: 'modal-remote-form-link dropdown-item' %>
              <% url = admin_account_path(account, request_type: 'razorpay_payment') %>
              <%= link_to 'Show', url, class: 'dropdown-item' %>
              <%= link_to 'Delete', url, class: 'dropdown-item', method: :delete %>
            </div>
          </div>
        </td>
      </tr>
      <% end %>
      <tr>
        <td colspan="4">
          <div class="mt-5 pt-5"></div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<%= will_paginate accounts, list_classes: %w(pagination justify-content-center) %>
