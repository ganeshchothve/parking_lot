<table class='table my-customer-table responsive-tbl caption-top rounded mt-3 mb-0'>
  <thead class="th-default">
    <thead>
      <tr class="bg-primary white">
        <th><%= t('mongoid.attributes.account.names') %></th>
        <th><%= t('mongoid.attributes.account.account_number') %></th>
        <th>Actions</th>
      </tr>
    </thead>
  </thead>
  <tbody>
    <% accounts.each do |account| %>
      <tr>
        <td>
          <%= link_to account.name, admin_account_path(account, account_type: account.account_type), class: "primary col-title" %>
          <% if account.by_default %>
            <span class="badge badge-primary" title="Default Account" data-toggle="popover" data-trigger="focus" data-content="<%= t('controller.accounts.by_default.hint')%>"> <%= t('mongoid.attributes.account.by_default') %></span>
          <% end %>
        </td>
        <td>
          <span class="col-title"><%= account.account_number %></span>
        </td>
        <td>
          <div class="dropdown show text-center">
            <a class="btn table-dropdown-btn black-clr" href="#" role="button" id="dropdownAccount" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></a>
            <div class="dropdown-menu" aria-labelledby="dropdownAccount">
              <%= link_to t('helpers.edit.link_name', model: Account.model_name.human), edit_admin_account_path(account, account_type: account.account_type), class: 'modal-remote-form-link dropdown-item' %>
              <%= link_to t('controller.accounts.destroy.link_name'), admin_account_path(account, account_type: account.account_type), class: 'dropdown-item', method: :delete %>
           </div>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="col-lg-12 py-3 white mb-2 px-2">
  <div class="row">
    <div class="col-lg-6">
      <p class="table-entry">Showing 1 - 5 of <%= @accounts.total_entries %> items</p>
    </div>
    <div class="col-lg-6 table-pagination">
       <%= will_paginate accounts, list_classes: %w(pagination justify-content-end) %>
    </div>
  </div>
</div>