<section class="mb-5 mt-3">
  <div class="px-4">
  <div class="card p-0">
    <div class="card-header pt-2 bg-white">
      <div class="row">
        <div class="col-11">
          <h2 class="fn-18 theme-txt-color pt-2"><%= t('mongoid.attributes.accounts', count: 1 ) %> : <%= @account.name %></h2>
        </div>
        <div class=" col-1 dropdown text-end pt-2 pe-3">
          <a href="javascript:void(0);" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            <i class="fa fa-ellipsis-v theme-txt-color" aria-hidden="true"></i></a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
            <%= link_to t('controller.accounts.print.link_name'), 'javascript:;', class: 'print d-print-none dropdown-item' %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body box-content rounded-bottom bg-white">
      <div class="row ml-0">
            <div class="col-lg-3 col-xs-12">
              <span class="fn-12 txt-light-blue"> <%= t('mongoid.attributes.account.account_number') %></span>
              <p class="fn-14 theme-txt-color"> <%= @account.account_number %> </p>
            </div>
            <div class="col-lg-3 col-xs-12">
              <span class="fn-12 txt-light-blue"> <%= t('mongoid.attributes.account.by_default') %> </span>
              <p class="fn-14 theme-txt-color">
                <%= t("mongoid.attributes.account/by_default.#{@account.by_default || false }") %>
              </p>
            </div>

            <% case @account.account_type %>
            <% when 'razorpay_payment' %>
              <div class="col-lg-3 col-xs-12">
                <span class="fn-12 txt-light-blue"><%= t('mongoid.attributes.account.key') %></span>
                <p class="fn-14 theme-txt-color"> <%= @account.key %> </p>
              </div>
              <div class="col-lg-3 col-xs-12">
                <span class="fn-12 txt-light-blue"><%= t('mongoid.attributes.account.secret') %></span>
                <p class="fn-14 theme-txt-color"> <%= @account.secret %> </p>
              </div>
            <% when 'cc_avenue_payment' %>
              <div class="col-lg-3 col-xs-12">
                <span class="fn-12 txt-light-blue"><%= t('mongoid.attributes.account.merchant_id') %></span>
                <p class="fn-14 theme-txt-color"> <%= @account.merchant_id %> </p>
              </div>
              <div class="col-lg-3 col-xs-12">
                <span class="fn-12 txt-light-blue"><%= t('mongoid.attributes.account.access_code') %></span>
                <p class="fn-14 theme-txt-color"> <%= @account.access_code %> </p>
              </div>
              <div class="col-lg-3 col-xs-12">
                <span class="fn-12 txt-light-blue"><%= t('mongoid.attributes.account.working_key') %></span>
                <p class="fn-14 theme-txt-color"> <%= @account.working_key %> </p>
              </div>
            <% end %>
      </div>
    </div>
  </div>
  <div class="box-card mt-3 mb-5">
      <% receipts = @account.receipts.paginate(page: params[:page] || 1, per_page: params[:per_page])%>
    <div class="box-content br-rd-bl-4 bg-white p-0">
      <%= render 'receipts/index', { receipts: receipts } %>
    </div>
  </div>
</div>
</section>
