<div class="container mb-5">
  <div class="box-card">
    <div class="box-header bg-gradient br-rd-tr-4">
      <div class="row">
        <div class="col-11">
          <h2><%= t('mongoid.attributes.accounts', count: 1 ) %> : <%= @account.name %></h2>
        </div>
        <div class="dropdown text-right col-1">
          <div class="dropdown show text-center float-right">
            <a class="btn dropdown-toggle table-dropdown-btn" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span></span><span></span><span></span></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
              <%= link_to t('controller.accounts.print.link_name'), 'javascript:;', class: 'print d-print-none dropdown-item' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="box-content br-rd-bl-4 bg-white">
      <div class="row ml-0">
        <div class="col-md-12 col-lg-12 col-sm-12">
          <ul class="booking-apart-info">
            <li>
              <span> <%= t('mongoid.attributes.account.account_number') %></span>
              <p> <%= @account.account_number %> </p>
            </li>
            <li>
              <span> <%= t('mongoid.attributes.account.by_default') %> </span>
              <p>
                <%= t("mongoid.attributes.account/by_default.#{@account.by_default || false }") %>
              </p>
            </li>

            <% case @account.account_type %>
            <% when 'razorpay_payment' %>
              <li>
                <span><%= t('mongoid.attributes.account.key') %></span>
                <p> <%= @account.key %> </p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.account.secret') %></span>
                <p> <%= @account.secret %> </p>
              </li>
            <% when 'cc_avenue_payment' %>
              <li>
                <span><%= t('mongoid.attributes.account.merchant_id') %></span>
                <p> <%= @account.merchant_id %> </p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.account.access_code') %></span>
                <p> <%= @account.access_code %> </p>
              </li>
              <li>
                <span><%= t('mongoid.attributes.account.working_key') %></span>
                <p> <%= @account.working_key %> </p>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="box-card mt-3">
    <div class="box-header br-rd-tr-4">
      <% receipts = @account.receipts.paginate(page: params[:page] || 1, per_page: params[:per_page])%>
      <h2 class='text-dark icon-set icon-rupee-black'><%= receipts.total_entries %> <%= Receipt.model_name.human(count: receipts.total_entries) %> </h2>
    </div>
    <div class="box-content br-rd-bl-4 bg-white p-0">
      <%= render 'receipts/index', { receipts: receipts } %>
    </div>
  </div>
</div>
