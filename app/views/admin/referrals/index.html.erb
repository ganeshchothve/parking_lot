<section class="mb-5 mt-3">
  <div class="px-4">
    <div class="row">
      <div class="col-lg-4 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1 mb-3">
          <h1 class="title icon-set icon-refferal-black fn-18">
            <%= User.model_name.human(count: @referrals.total_entries ) %>
          </h1>
        </div>
      </div>
      <div class="col-lg-8 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3 text-end">
          <div class="m-0">
            <h6 class="mr-1 d-inline-block mt-1 me-2"><%= t('mongoid.attributes.user.referral_code') %>:</h6><%= get_referral_code %>
          <% if policy([:admin, :referral]).new? %>
            <div class="invite-friend-link p-2 px-3 d-inline-block ms-2">
              <%= invite_friend_link %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'admin/users/index', users: @referrals %>
        </div>
      </div>
    </div>
  </div>
</section>
