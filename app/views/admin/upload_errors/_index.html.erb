<% labels = I18n.t("mongoid.attributes.upload_error").with_indifferent_access %>
<div class="table-responsive">
  <table class='table my-customer-table responsive-tbl bg-white' width="100%" cellpadding="10" cellspacing="0">
    <thead class="th-default">
      <tr class="bg-gradient-cd white">
        <th><%= labels["row"] %></th>
        <th><%= labels["errors"] %></th>
      </tr>
    </thead>
    <tbody>
      <% upload_errors.each do |upload_error| %>
      <tr>
        <td>
          <%= upload_error.row %>
        </td>
        <td>
          <%= upload_error.messages.try(:join, '<br/>').html_safe %>
        </td>
      </tr>
      <% end %>
      <tr>
        <td colspan=2>
      </tr>
    </tbody>
  </table>
</div>
<div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 pt-2">
  <%= will_paginate upload_errors, list_classes: %w(pagination justify-content-center) %>
</div>
