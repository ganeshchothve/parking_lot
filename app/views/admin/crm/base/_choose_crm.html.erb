<table class='table my-customer-table responsive-tbl'>
  <thead class="th-default">
    <thead>
      <tr class="bg-gradient-cd white">
        <th><%= t('mongoid.attributes.crm.base.name') %></th>
        <% if current_user.role?('superadmin') %>
          <th><%= t('mongoid.attributes.crm.base.domain') %></th>
        <% end %>
        <th></th>
        <% if current_user.role?('superadmin') %>
          <th></th>
        <% end %>
      </tr>
    </thead>
  </thead>
  <tbody class='bg-white'>
    <% crms.each do |crm| %>
      <tr>
        <td><%= crm.name %></td>
        <% if current_user.role?('superadmin') %>
          <td><%= crm.domain %></td>
          <% end %>
        <% if (api = apis.where(_type: Crm::Api::Get, resource_class: resource.class.to_s, base_id: crm.id).first) && resource.third_party_references.where(crm_id: crm.id).present? %>
          <td class = 'text-right'><%= link_to t("mongoid.attributes.crm.api.request_types.get"), admin_crm_base_api_show_response_path(api.base, api, resource_id: resource.id, type: api._type , is_active: true), class: 'db-small-btn light-blue bg-white fn-400 btn unset-width modal-remote-form-link' %></td>
        <% else %>
          <td></td>
        <% end %>
        <% if current_user.role?('superadmin') %>
          <% if api = apis.where(_type: Crm::Api::Post, resource_class: resource.class, is_active: true).first %>
            <td class = 'text-right'>
              <% if ApiLog.where(crm_api_id: api.id, status: "Success", resource_id: resource.id).blank? %>
                <%= link_to t("mongoid.attributes.crm.api.request_types.post"), admin_crm_base_api_show_response_path(api.base, api, resource_id: resource.id, type: api._type), "data-disable-with":"Loading...", class: 'db-small-btn light-blue bg-white fn-400 btn unset-width' %>
              <% else %>
                <%= link_to "Synced - See previous logs", admin_api_logs_path(fltrs: {resource_id: resource.id, status: 'Success'}), "data-disable-with":"Loading...", class: 'db-small-btn light-blue bg-white fn-400 btn unset-width' %>
              <% end %>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
