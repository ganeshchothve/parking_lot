<table class='table my-customer-table responsive-tbl'>
  <thead class="th-default">
    <thead>
      <tr class="bg-gradient-cd white">
        <th><%= t('mongoid.attributes.crm.base.name') %></th>
        <% if current_user.role?('superadmin') %>
          <th><%= t('mongoid.attributes.crm.base.domain') %></th>
        <% end %>
        <th></th>
      </tr>
    </thead>
  </thead>
  <tbody class='bg-white'>
    <% crms.each do |crm| %>
      <tr>
        <td><%= crm.name %></td>
        <% if current_user.role?('superadmin') %>
          <td><%= crm.domain %></td>
        <% end %>

        <td class='text-right'>
          <% if (api = apis.where(_type: Crm::Api::Get, resource_class: resource.class.to_s, base_id: crm.id).first) && resource.third_party_references.where(crm_id: crm.id).present? %>
            <%= link_to t("mongoid.attributes.crm.api.request_types.get"), admin_crm_base_api_show_response_path(api.base, api, resource_id: resource.id, type: api._type , is_active: true), class: 'db-small-btn light-blue bg-white fn-400 btn unset-width modal-remote-form-link mr-2' %>
          <% end %>

          <% if %w[superadmin admin].include?(current_user.role) && api = apis.where(_type: Crm::Api::Post, resource_class: resource.class, is_active: true).first %>
            <%# if ApiLog.where(crm_api_id: api.id, status: "Success", resource_id: resource.id).blank? %>
              <%= link_to t("mongoid.attributes.crm.api.request_types.post"), admin_crm_base_api_show_response_path(api.base, api, resource_id: resource.id, type: api._type), "data-disable-with":"Loading...", class: 'db-small-btn light-blue bg-white fn-400 btn unset-width mr-2' %>
            <% if ApiLog.where(crm_api_id: api.id, resource_id: resource.id).present? %>
              <%= link_to "See previous logs", admin_api_logs_path(fltrs: {resource_id: resource.id, status: 'Success'}), "data-disable-with":"Loading...", class: 'db-small-btn light-blue bg-white fn-400 btn unset-width mr-2' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
