<div class="mb-5 mt-3">
  <div class="px-4">
  <div class="box-card">
    <div class="box-header bg-gradient br-rd-tr-4">
      <div class="row">
        <div class="col-11">
          <h2><%= Crm::Base.model_name.human %> : <%= @crm.name %></h2>
        </div>
        <div class="dropdown text-right col-1">
          <div class="dropdown show text-center float-right">
            <a class="btn table-dropdown-btn" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></a>
            <% [Crm::Api::Get, Crm::Api::Post, Crm::Api::Put] if Rails.env.development? %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
              <% Crm::Api.descendants.each do |type| %>
                <%= link_to t('helpers.new.link_name', model: type.model_name.human), new_admin_crm_base_api_path(@crm, type: type), class: 'modal-remote-form-link dropdown-item' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="box-content br-rd-bl-4 bg-white br-1 py-0">
      <div class="row pd-box">
        <div class="col-md-12 col-lg-12 col-xs-12 col-sm-12 no-pd">
          <ul class="booking-apart-info pt-2">
            <li>
              <span class="font-weight-bold"><%= t("mongoid.attributes.crm.base.domain")%> </span>
              <p><%= @crm.domain %></p>
            </li>
            <li>
              <span class="font-weight-bold"><%= t("mongoid.attributes.crm.base.request_header")%> </span>
              <p><%= @crm.request_headers || "-" %></p>
            </li>
            <li>
              <span class="font-weight-bold"><%= t("mongoid.attributes.crm.base.request_payload")%> </span>
              <p><%= @crm.request_payload || "-" %></p>
            </li>
          </ul>

        </div>
        </div>
      </div>
    </div>
  <%if @apis.present? %>
    <div class="box-card mt-3 pt-2 pb-5">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 pt-3 pb-0 pl-0">
        <div class="table-title pt-1">
          <h1 class="title">
            <%= Crm::Api.model_name.human(count: 2) %>
          </h1>
        </div>
      </div>  
      <div class="box-content br-rd-bl-4 bg-white p-0">
        <%= render 'admin/crm/api/index', { apis: @apis } %>
      </div>
    </div>
  <% end %>
</div>
</div>
