<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1">
          <h1 class="title">
            <%= Crm::Base.model_name.human(count: 2) %>
          </h1>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">
          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= @crms.total_entries %></button>
          <div class="new-menu display-initial" >
            <% if policy([:admin, Crm::Base]).new? %>
              <%= link_to t('helpers.new.link_name', model: Crm::Base.model_name.human), new_admin_crm_base_path, class: 'db-small-btn light-blue bg-white fn-400 modal-remote-form-link btn unset-width' %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'index', {crms: @crms} %>
        </div>
      </div>
    </div>
  </div>
</section>
