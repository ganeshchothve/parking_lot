<%= form_for [:admin, @receipt],:url=> { action: "update_token_number"}, remote: true, local: true, html: {id: "token_number_form", class: "modal-remote-form validate-form", "data-type": "json"} do |f| %>
  <div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Token Number</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <%= f.label :token_number %>
                <%= f.number_field :token_number, class: 'form-control', autofocus: true, disabled: !policy([current_user_role_group, @receipt]).editable_field?("token_number"), min: 1 %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#token_number_form"));
  });
<% end %>
