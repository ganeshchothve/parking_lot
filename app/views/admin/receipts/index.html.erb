<section class="mb-5">
  <div class="container">
    <div class="row">
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-title pt-1">
        <img src="<%= asset_path 'rupee-black.svg' %>" alt="user icon"> <h1 class="title"><%= @receipts.total_entries %><%= t('mongoid.models.receipt', count: @receipts.total_entries) %></h1>
      </div>
    </div>
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-btn-set float-right pb-3">
      <a class="db-small-btn light-blue bg-white fn-400 dropdown-toggle btn" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= t('controller.receipts.exports.link_name', name: nil)%></a>
      <div class="dropdown-menu dropdown-menu-right">
        <%= link_to t('controller.receipts.exports.link_name', name: t('global.all')), export_admin_receipts_path, class: 'dropdown-item' %>
        <%= link_to t('controller.receipts.exports.link_name', name: t('global.active_filter')), export_admin_receipts_path(fltrs: params["fltrs"].as_json), class: 'dropdown-item' %>
      </div>
      <button class="db-filter-btn white fn-500" type="button"><img src="<%= asset_path 'filter-light-blue.svg' %>" alt="filter icon"></button>
      </div>
    </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'receipts/index', {receipts: @receipts} %>
          <div class="filter-box">
            <%= render "receipts/filters", url: admin_receipts_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
