<section class="mb-5 mt-3">
  <div class="">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="table-btn-set float-end pb-3 text-end">
        <!-- <div class="filter-search">
          <input type="text" name="" placeholder="Search payments">
        </div> -->
        <div class="filter-popup">
          <a class="db-filter-btn fn-500" href="javascript:;">
            <i class="fa fa-filter fill-theme"></i>
          </a>
        </div>
          <% if policy([:admin, Receipt]).export? %>
            <a class="select-btn fn-400 dropdown-toggle btn px-3 border rounded py-2 ms-2" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= t('controller.receipts.exports.link_name', name: nil)%>
            </a>
            <div class="dropdown-menu">
              <%= link_to t('controller.receipts.exports.link_name', name: t('global.all')), export_admin_receipts_path, class: 'dropdown-item' %>
              <%= link_to t('controller.receipts.exports.link_name', name: t('global.active_filter')), export_admin_receipts_path(fltrs: params["fltrs"].as_json), class: 'dropdown-item' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="relative bg-white">
          <%= render 'receipts/index', {receipts: @receipts} %>
          <div class="filter-box">
            <%= render "receipts/filters", url: admin_receipts_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
