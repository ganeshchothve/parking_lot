<div class="filter-box payment_mode_chart_filter_box">
  <%= render "chart_filter" %>
</div>
<div class = "row">
  <div class = "col-12">
    <canvas id="barChart1" height="300" class="pl-3 pr-3"></canvas>
  </div>
</div>
<%= javascript_tag do %>
  var canvas = document.getElementById("barChart1");
  var ctx = canvas.getContext('2d');

  // Global Options:
   Chart.defaults.global.defaultFontColor = 'dodgerblue';
   Chart.defaults.global.defaultFontSize = 10;

  // Data with datasets options
  var data = {
      labels: <%= Receipt::PAYMENT_MODES.map{|payment_mode| t("mongoid.attributes.receipt/payment_mode.#{payment_mode}")}.to_json.html_safe %>,
      datasets: <%= @dataset.to_json.html_safe %>
  };

  var options = {
          tooltips: {
            mode: 'index',
            intersect: true
          },
          responsive: true,
          scales: {
            xAxes: [{
              stacked: true,
              scaleLabel: {
                display: true,
                labelString: 'Payment Mode'
              }
            }],
            yAxes: [{
              stacked: true,
              scaleLabel: {
                display: true,
                labelString: 'Count'
              }
            }]
          }
        };
  // Chart declaration:
  var myBarChart = new Chart(ctx, {
      type: 'bar',
      data: data,
      options: options
  });
<% end %>