<% gst_applicable = @invoice.project.gst_slab_applicable? %>

<%= nested_form_for(@invoice, url: change_state_admin_invoiceable_path(@invoice, invoiceable_type: @invoice.invoiceable_type, invoiceable_id: @invoice.invoiceable_id), local: true, remote: true, html: {class: 'modal-remote-form validate-form', "data-resource-type": global_labels['invoices'], "data-type": "json", id: 'raise_invoice_form'}) do |f| %>
<div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h3 class="title"><%= @invoice.rejected? ? t("controller.invoices.events.re_raise") : t('controller.invoices.events.raise') %></h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body theme-form">
        <%= render "admin/invoices/#{@invoice.invoiceable.class.model_name.i18n_key.to_s}/details", resource: @invoice.invoiceable rescue nil %>
        <div class="mb-3">
          <%= f.label :number, class: 'label-required' %>
          <%= f.text_field :number, autofocus: true, class: "form-control", disabled: !policy([:admin, @invoice]).editable_field?("number") %>
        </div>

        <%= f.hidden_field :event, value: "raise" %>
        <%= f.hidden_field :creator_id, value: current_user.id %>
        <% if policy([:admin, @invoice]).editable_field?("agreement_amount") %>
          <div class="mb-3">
            <%= f.label :agreement_amount, class: 'label-required' %>
            <%= f.number_field :agreement_amount, autofocus: true, required: 'required', class: "form-control", disabled: !policy([:admin, @invoice]).editable_field?("agreement_amount") %>
          </div>
        <% end %>
        <div class="mb-3">
          <%= f.label :amount %>
          <% if policy([:admin, @invoice]).editable_field?("amount") %>
            <%= f.number_field :amount, autofocus: true, class: "form-control", disabled: !policy([:admin, @invoice]).editable_field?("amount") %>
          <% else %>
            <p class='amount'><%= f.object.amount %></p>
          <% end %>
        </div>

        <% if gst_applicable %>
          <div class="mb-3">
            <div class="alert alert-warning" role="alert">
              <%= I18n.t("controller.invoices.text.change_gst_slab") %>
            </div>
            <%= f.label :gst_slab %>
            <% gst_slabs = @invoice.invoiceable.try(:project)&.incentive_gst_slabs || @invoice.invoiceable.booking_portal_client.try(:gst_slabs) || [] %>
            <%= f.select :gst_slab, options_for_select(gst_slabs.collect{|gst| ["#{gst.to_f} %", gst.to_f]} || [], @invoice.gst_slab), {prompt: I18n.t("global.select")}, class: "selectize", disabled: !policy([:admin, @invoice]).editable_field?("gst_slab") %>
          </div>
          <div class="mb-3">
            <%= f.label :gst_amount %>
            <% if policy([:admin, @invoice]).editable_field?("gst_amount") %>
              <%= f.number_field :gst_amount, autofocus: true, class: "form-control", disabled: !policy([:admin, @invoice]).editable_field?("gst_amount") %>
            <% else %>
              <p class='gst-amount'><%= f.object.gst_amount %></p>
            <% end %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :net_amount %>
          <% if policy([:admin, @invoice]).editable_field?("net_amount") %>
            <%= f.number_field :net_amount, autofocus: true, class: "form-control", disabled: !policy([:admin, @invoice]).editable_field?("net_amount") %>
          <% else %>
            <p class='net-amount'><%= f.object.net_amount || 0 %></p>
          <% end %>
        </div>
        <% if policy([:admin, @invoice]).editable_field?("event") && !current_user.role?('channel_partner') && !current_user.role?('billing_team') %>
          <div class="mb-3">
            <%= f.label :status, class: 'control-label label-required' %>
            <% events = available_events(@invoice) %>
            <%= f.select :event, options_for_select(events.collect{|event| [t("controller.invoices.events.#{event.to_s}"), event.to_s]}, @invoice.status), {prompt: t("mongoid.attributes.invoice/status.#{@invoice.status}")}, class: 'selectize', required: 'required', disabled: !policy([:admin, @invoice]).editable_field?("event") %>
          </div>
        <% end %>
        <% if @invoice.rejected? || @invoice.rejection_reason.present? %>
          <div class="mb-3">
            <%= f.label :rejection_reason, class: '' %>
            <% if policy([:admin, @invoice]).editable_field?("rejection_reason") %>
              <%= f.text_area :rejection_reason, autofocus: true, class: "form-control", disabled: !policy([:admin, @invoice]).editable_field?("rejection_reason") %>
            <% else %>
              <p><%= f.object.rejection_reason %></p>
            <% end%>
          </div>
          <div class="mb-3">
            <%= f.label :comments, class: '' %>
            <% if policy([:admin, @invoice]).editable_field?("comments") %>
              <%= f.text_area :comments, autofocus: true, class: "form-control", disabled: !policy([:admin, @invoice]).editable_field?("comments") %>
            <% else %>
              <p><%= f.object.comments %></p>
            <% end%>
          </div>
        <% end %>
      </div>

      <div class="modal-footer text-end">
        <%= f.submit "Raise", class: "btn btn-primary" %>
      </div>

    </div>
  </div>
</div>
<% end %>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#raise_invoice_form"));

    <% if gst_applicable %>
      var netAmt = '<%= @invoice.net_amount %>';
      var invoiceType = '<%= @invoice.class.to_s.underscore.gsub('/', '_') %>';

      $('#' + invoiceType + '_gst_slab, #' + invoiceType + '_amount').on('change', function(event) {

        var gstAmount = 0;
        var amount = parseFloat($('input[name="' + invoiceType + '[amount]"]').val() || $('#raise_invoice_form').find('.amount').html() || 0);

        $('#raise_invoice_form').find('.amount').html(Amura.formatMoney(amount));

        var gstPercVal = $('#' + invoiceType + '_gst_slab').val();

        if(!_.isEmpty(gstPercVal)){
          var gstPercentage = parseFloat(gstPercVal);
          _gstAmount = amount * (gstPercentage/100);

          // Round gst amount to 2 decimal places
          gstAmount = Math.round((_gstAmount + Number.EPSILON) * 100) / 100
        }

        $('#raise_invoice_form').find('.gst-amount').html(Amura.formatMoney(gstAmount));

        netAmt = amount + gstAmount;
        $('#raise_invoice_form').find('.net-amount').html(Amura.formatMoney(netAmt));

      }).trigger('change');
    <% end %>
  });
<% end %>
