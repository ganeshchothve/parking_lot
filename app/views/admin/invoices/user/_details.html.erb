<div class="alert alert-primary">
  <p><%#= t('controller.booking_details.receipts.show.disclaimer')%></p>
  <div class="row">
    <div class="col-md-4">
      <div class="mb-3">
        <label class="small"><%= t('mongoid.attributes.user.name') %></label>
        <div><%= resource.name %></div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="mb-3">
        <label class="small">
          <%= User.human_attribute_name('referred_by') %>
        </label>
        <div><%= resource.referred_by.try(:name) || '-' %></div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="mb-3">
        <label class="small">
          <%= User.human_attribute_name('referred_on') %>
        </label>
        <div><%= resource.invoiceable_date.try(:strftime,'%b %e %Y') || '-' %></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="mb-3">
        <label class="small">
          <%= ChannelPartner.human_attribute_name('company_name') %>
        </label>
        <div><%= resource.invoiceable_manager.try(:name) || '-' %></div>
      </div>
    </div>
  </div>
</div>
