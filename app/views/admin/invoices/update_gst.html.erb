<%= nested_form_for([:admin, @invoice], local: true, remote: true, html: {class: 'modal-remote-form validate-form', "data-resource-type": global_labels['invoices'], "data-type": "json", id: 'edit_invoice_form'}) do |f| %>
<div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">

      <div class="modal-header bg-gradient-cd white">
        <h3 class="title"><%= t("controller.invoices.update_gst.link_name") %></h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div class="mb-3">
          <%= f.label :amount, class: '' %>
          <%= f.number_field :amount, autofocus: true, class: "form-control", disabled: !policy([:admin, @invoice]).editable_field?("amount") %>
        </div>
        <div class="mb-3">
          <%= f.label :gst_amount, class: '' %>
          <%= f.number_field :gst_amount, autofocus: true, class: "form-control", disabled: !policy([:admin, @invoice]).editable_field?("gst_amount") %>
        </div>
        <div class="mb-3">
          <%= f.label :net_amount, "#{t('mongoid.attributes.invoice.net_amount')} (includes approved deductions & adjustments, if any)" %>
          <p class='net-amount'><%= @invoice.net_amount %></p>
        </div>
      </div>

      <div class="modal-footer">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>

    </div>
  </div>
</div>
<% end %>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#edit_invoice_form"));
  var netAmountBeforeGST = <%= @invoice.amount_before_gst %>;
  var netAmt = <%= @invoice.net_amount %>
  $('#edit_invoice_form').find('.net-amount').html(Amura.formatMoney(netAmt));

  $('#edit_invoice_form').find('input[name="invoice[gst_amount]"]').on('blur', function(event) {
    if(!_.isEmpty($(this).val())) {
      $('#edit_invoice_form').find('.net-amount').html(Amura.formatMoney(netAmountBeforeGST + parseFloat($(this).val())));
    } else {
      $('#edit_invoice_form').find('.net-amount').html(Amura.formatMoney(netAmountBeforeGST));
    }
  });
});
<% end %>
