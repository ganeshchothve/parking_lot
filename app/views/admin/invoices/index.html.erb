<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-5 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title">
          <!-- <h1 class="title icon-rupee-black icon-set">
            <%= Invoice.model_name.human(count: 2) %>
          </h1> -->
          <div class="filter-search">
          <input type="text" name="" placeholder="Search projects">
        </div>
        <div class="filter-popup">
          <a class="db-filter-btn fn-500" href="javascript:;">
            <i class="fa fa-filter fill-theme"></i>
          </a>
        </div>
        </div>
      </div>
      <div class="col-lg-7 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-end pb-3">

          <%if policy([:admin, Invoice.new]).export? %>
            <div class="export-menu display-initial mt-2">
              <button class="select-btn fn-400 dropdown-toggle" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <%= t('controller.invoices.exports.link_name', name: nil) %> </button>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to t('controller.invoices.exports.link_name', name: t('global.all')), export_admin_invoices_path, class: 'dropdown-item' %>
                <%= link_to t('controller.invoices.exports.link_name', name: t('global.active_filter')), export_admin_invoices_path(fltrs: params["fltrs"].as_json), class: 'dropdown-item' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <nav class="nav float-left">
          <%= active_link_to "All", admin_invoices_path, active: :exclusive, class: "btn white nav-link nav-link-local me-2 primary border border-primary", id: 'all' %>
          <%= active_link_to "Calculated Invoices", admin_invoices_path({invoice_type: "calculated"}), active: :exclusive, class: "btn white nav-link nav-link-local me-2 primary border border-primary", id: 'calculated' %>
          <%= active_link_to "Manual Invoices", admin_invoices_path({invoice_type: "manual"}), active: :exclusive, class: "btn white nav-link nav-link-local primary border border-primary", id: 'manual' %>
        </nav>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'admin/invoices/index', invoices: @invoices %>
          <div class="filter-box">
            <%= render "admin/invoices/filters" %>
          </div>
          <div class="col-lg-12 py-3 white mb-2 px-2">
            <div class="row">
              <div class="col-lg-6">
                <p class="table-entry">Showing 1 - 5 of <%= @invoices.total_entries %> items</p>
              </div>
              <div class="col-lg-6 table-pagination">
                <%= will_paginate @invoices, list_classes: %w(pagination justify-content-end) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
