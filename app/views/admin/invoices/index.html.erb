<section class="mb-5 mt-3">
  <div class="px-4">
    <div class="row">
      <div class="col-lg-5 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title">
          <div class="dropdown show text-right">
            <button class="select-btn fn-400 dropdown-toggle px-3 border rounded py-2 ms-2" href="javascript:;"
              role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> All Exports</button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
              <%= link_to "All", admin_invoices_path, active: :exclusive, class: "dropdown-item", id: 'all' %>
              <%= link_to "Calculated Invoices", admin_invoices_path({invoice_type: "calculated"}), active: :exclusive, class: "dropdown-item", id: 'calculated' %>
              <%= link_to "Manual Invoices", admin_invoices_path({invoice_type: "manual"}), active: :exclusive, class: "dropdown-item", id: 'manual' %>
            </div>
          </div>
          <nav class="nav float-left">
          </nav>
        </div>
      </div>
      <div class="col-lg-7 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-1 text-end mt-2">
          <div class="filter-search">
            <input type="text" name="" placeholder="Search projects">
          </div>
          <div class="filter-popup">
            <a class="db-filter-btn fn-500" href="javascript:;">
              <i class="fa fa-filter fill-theme"></i>
            </a>
          </div>
          <%if policy([:admin, Invoice.new]).export? %>
          <div class="export-menu display-initial d-inline text-end">
            <button class="select-btn fn-400 dropdown-toggle px-3 border rounded py-2 ms-2" href="javascript:;"
              role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= t('controller.invoices.exports.link_name', name: nil) %> </button>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to t('controller.invoices.exports.link_name', name: t('global.all')), export_admin_invoices_path, class: 'dropdown-item' %>
              <%= link_to t('controller.invoices.exports.link_name', name: t('global.active_filter')), export_admin_invoices_path(fltrs: params["fltrs"].as_json), class: 'dropdown-item' %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'admin/invoices/index', invoices: @invoices %>
          <div class="filter-box">
            <%= render "admin/invoices/filters" %>
          </div>

          <div class="col-lg-12 py-3 bg-white mb-2 px-2">
            <div class="row">
              <div class="col-lg-6">
                <p class="table-entry mb-0 ps-2 pt-2"><%= page_entries_info @invoices %></p>
              </div>
              <div class="col-lg-6 table-pagination">
                <%= will_paginate @invoices, list_classes: %w(pagination justify-content-end) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>