<section class="mb-5">
  <div class="container">
    <div class="row">
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-title pt-1">
        <h1 class="title icon-set icon-file-contract-black">
          <%= Checklist.model_name.human(count: @checklists.total_entries) %>
        </h1>
      </div>
    </div>
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-btn-set float-right pb-3">
        <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= @checklists.total_entries %></button>
        <% if policy([:admin, Checklist]).new? %>
          <%= link_to t('helpers.new.link_name', model: Checklist.model_name.human), new_admin_checklist_path, class: 'db-small-btn light-blue bg-white fn-400 modal-remote-form-link btn unset-width' %>
          <% end %>
      </div>
    </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'index', {checklists: @checklists} %>
        </div>
      </div>
    </div>
  </div>
</section>
