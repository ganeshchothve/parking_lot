<table class='table my-customer-table responsive-tbl caption-top rounded mt-3 mb-0'>
  <thead class="th-default">
    <% labels = t('mongoid.attributes.checklist').with_indifferent_access %>
      <thead>
        <tr class="bg-gradient-cd white">
          <th><%= labels['name'] %></th>
          <th><%= labels['key'] %></th>
          <th><%= labels['tracked_by'] %></th>
          <th><%= labels['order'] %></th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
  </thead>
  <tbody>
    <% checklists.each do |checklist| %>
      <tr>
        <td data-title="Name">
          <%= checklist.name %>
        </td>
        <td data-title="Key">
          <%= checklist.key %>
        </td>
        <td data-title="Tracked By">
          <%= checklist.tracked_by.try(:titleize) %>
        </td>
        <td data-title="Order">
          <%= checklist.order %>
        </td>
        <td>
          <div class="dropdown show text-right">
          <a class="btn table-dropdown-btn black-clr" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <% if policy([:admin, checklist]).edit? %>
                <%= link_to 'Edit', edit_admin_checklist_path(checklist), class: 'dropdown-item modal-remote-form-link' %>
              <% end %>
           </div>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="col-lg-12 py-3 white mb-2 px-2">
  <div class="row">
    <div class="col-lg-6">
      <p class="table-entry">Showing 1 - 5 of <%= @checklists.total_entries %> items</p>
    </div>
    <div class="col-lg-6 table-pagination">
      <%= will_paginate checklists, list_classes: %w(pagination justify-content-center) %>
    </div>
  </div>
</div>
