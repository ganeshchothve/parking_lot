<table class='table my-customer-table responsive-tbl'>
  <thead class="th-default">
    <% labels = t('mongoid.attributes.checklist').with_indifferent_access %>
      <thead>
        <tr class="bg-gradient-cd white">
          <th><%= labels['name'] %></th>
          <th><%= labels['key'] %></th>
          <th><%= labels['tracked_by'] %></th>
          <th><%= labels['order'] %></th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
  </thead>
  <tbody>
    <% checklists.each do |checklist| %>
      <tr>
        <td>
          <%= checklist.name %>
        </td>
        <td>
          <%= checklist.key %>
        </td>
        <td>
          <%= checklist.tracked_by.try(:titleize) %>
        </td>
        <td>
          <%= checklist.order %>
        </td>
        <td>
          <div class="dropdown show text-right">
          <a class="btn dropdown-toggle table-dropdown-btn black-clr" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span></span><span></span><span></span></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <% if policy([:admin, checklist]).edit? %>
                <%= link_to 'Edit', edit_admin_checklist_path(checklist), class: 'dropdown-item modal-remote-form-link' %>
              <% end %>
           </div>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 pt-2">
  <%= will_paginate checklists, list_classes: %w(pagination justify-content-center) %>
</div>
