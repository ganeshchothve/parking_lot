<section class="mb-5 mt-3">
  <div class="">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="table-btn-set float-end pb-3 text-end">
          <!--
          <div class="filter-search">
            <input type="text" name="" placeholder="Search projects">
          </div>
          -->
          <div class="filter-popup">
            <a class="db-filter-btn fn-500" href="javascript:;">
              <i class="fa fa-filter fill-theme"></i>
            </a>
          </div>
          <% if policy([:admin, VariableIncentiveScheme]).new? %>
            <%= link_to t('helpers.new.link_name', model: VariableIncentiveScheme.model_name.human), new_admin_variable_incentive_scheme_path, class: 'bg-border rounded px-3 py-2 bg-primary white border-primary ms-2 d-inline-block modal-remote-form-link btn mt-xs-3' %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'index', { variable_incentive_schemes: @variable_incentive_schemes } %>
          <div class="filter-box">
            <%= render "filters" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
