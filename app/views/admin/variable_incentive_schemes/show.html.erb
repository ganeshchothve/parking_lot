<section class="bookings my-4 mb-4 mb-5">
  <div class="container">
    <div class="box-card">
      <div class="box-header bg-gradient br-rd-tr-4">
        <h2 class="icon-set icon-scheme-white"><%= t('controller.variable_incentive_schemes.show.header') %></h2>
      </div>
      <div class="box-content br-rd-bl-4 bg-white row">
        <div class="col-md-12 col-lg-12 col-sm-12">
          <ul class="booking-apart-info clear">
            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.name') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.name || '-' %></p>
            </li>
            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.status') %></span>
              <p class="break-word"><%= t("mongoid.attributes.variable_incentive_scheme/status.#{@variable_incentive_scheme.status}")%></p>
            </li>
            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.project_ids') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.project_names || '-' %></p>
            </li>

            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.total_bookings_multiplier') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.total_bookings_multiplier || '-' %></p>
            </li>

            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.min_incentive') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.min_incentive || '-' %></p>
            </li>

            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.scheme_days') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.scheme_days || '-' %></p>
            </li>

            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.average_revenue_or_bookings') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.average_revenue_or_bookings || "-" %></p>
            </li>

            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.max_expense_percentage') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.max_expense_percentage %></p>
            </li>
            
            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.start_date') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.start_date.present? ? I18n.l(@variable_incentive_scheme.start_date) : "-" %></p>
            </li>

            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.end_date') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.end_date.present? ? I18n.l(@variable_incentive_scheme.end_date) : "-" %></p>
            </li>

            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.total_bookings') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.total_bookings %></p>
            </li>

            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.total_inventory') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.total_inventory %></p>
            </li> 
            
            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.created_by') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.created_by.try(:name) || "-" %></p>
            </li> 

            <li>
              <span><%= t('mongoid.attributes.variable_incentive_scheme.approved_by') %></span>
              <p class="break-word"><%= @variable_incentive_scheme.approved_by.try(:name) || "-" %></p>
            </li>

          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
