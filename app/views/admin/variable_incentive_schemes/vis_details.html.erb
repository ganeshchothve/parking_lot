<section class="mb-5 mt-3">
  <div class="px-4">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="table-btn-set float-end pb-3 text-end">
          <!--
          <div class="filter-search">
            <input type="text" name="" placeholder="Search projects">
          </div>
          -->
          <div class="filter-popup">
            <a class="db-filter-btn fn-500" href="javascript:;">
              <i class="fa fa-filter fill-theme"></i>
            </a>
          </div>

          <% if policy([:admin, VariableIncentiveScheme.new]).export? %>
            <div class="export-menu display-initial d-inline text-end">
              <button class="select-btn fn-400 dropdown-toggle  px-3 border rounded py-2" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <%= t('controller.leads.exports.link_name', name: nil) %> </button>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to t('controller.leads.exports.link_name', name: t('global.all')), export_admin_variable_incentive_schemes_path, class: 'dropdown-item' %>
                <%= link_to t('controller.leads.exports.link_name', name: t('global.active_filter')), export_admin_variable_incentive_schemes_path(params.as_json), class: 'dropdown-item' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'vis_details', { vis_details: @vis_details } %>
          <div class="filter-box">
            <%= render "vis_filters", { vis_id: @vis_id} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
