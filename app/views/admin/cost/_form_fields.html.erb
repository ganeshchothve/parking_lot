<div class="row">
  <div class="col-md-11">
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :name, class: 'label-required' %>
          <%= f.text_field :name, class: "form-control", required: 'required' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :key, class: 'label-required' %>
          <%= f.text_field :key, class: "form-control", required: 'required' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :absolute_value, class: 'label-required' %>
          <%= f.number_field :absolute_value, class: "form-control", step: 0.01 %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :formula, class: 'label-required' %>
          <%= f.text_field :formula, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :category, class: 'label-required' %>
          <%= f.select :category, I18n.t("mongoid.attributes.cost/available_categories").collect{|k,v| [v,k.to_s]}, {prompt: I18n.t("global.select")}, class: 'selectize', required: 'required', autofocus: true %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="mb-3">
          <%= f.label :order %>
          <%= f.select :order, (1..30).collect{|x| [x, x]}, {prompt: I18n.t("global.select")}, class: 'selectize' %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-1">
    <%= f.link_to_remove icon("far", "times-circle") %>
  </div>
</div>
<hr/>
