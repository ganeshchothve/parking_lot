<div class="row">
  <div class="col-md-10 border border-left-0 border-top-0 border-bottom-0">
    <table class='table'>
      <thead class="th-default">
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>User</th>
          <th>Agreement (Rs.)</th>
          <th>All Incl. (Rs.)</th>
          <th>Paid Amt. (Rs.)</th>
          <th>Booking Amt. Pending (Rs.)</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @project_units.each do |project_unit| %>
        <tr>
          <td><%= project_unit.name %></td>
          <td><%= ProjectUnit.available_statuses.find{|x| x[:id] == project_unit.status}[:text] rescue "-" %></td>
          <td><%= project_unit.user_id.present? ? project_unit.user.name : "-" %></td>
          <td><%= project_unit.costs %></td>
          <td><%= project_unit.costs %></td>
          <td><%= project_unit.total_amount_paid %></td>
          <td><%= project_unit.pending_balance %></td>
          <td class="text-right">
            <div class="dropdown">
              <a class="btn btn-light dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
              <div class="dropdown-menu dropdown-menu-right">
                <% if ['blocked', 'booked_tentative', 'booked_confirmed'].include?(project_unit.status) %>
                  <% if ReceiptPolicy.new(current_user, Receipt).index? %>
                    <%= link_to "View #{global_labels[:receipts]}", admin_user_project_unit_receipts_path(project_unit.user, project_unit), class: 'dropdown-item' %>
                  <% end %>
                  <% if UserPolicy.new(current_user, User).index? %>
                    <%= link_to "View Customer", admin_user_path(project_unit.user), class: 'dropdown-item' %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @project_units %>
  </div>
  <div class="col-md-2">
    <%= render "filters" %>
  </div>
</div>
