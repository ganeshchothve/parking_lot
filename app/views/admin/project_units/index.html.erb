<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-1 text-end mt-2">
          <div class="filter-search">
          <input type="text" name="" placeholder="Search Apartments">
        </div>
        <div class="filter-popup">
          <a class="db-filter-btn fn-500" href="javascript:;">
            <i class="fa fa-filter fill-theme"></i>
          </a>
        </div>
          <% if policy([:admin, User.new]).export? %>
            <div class="export-menu display-initial text-end d-inline ms-2">
              <button class="select-btn fn-400 dropdown-toggle  px-3 border rounded py-2" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= t('controller.project_units.exports.link_name', type: nil) %>
              </button>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to t('controller.project_units.exports.link_name', type: t('global.all')), export_admin_project_units_path, class: 'dropdown-item' %>
                <%= link_to t('controller.project_units.exports.link_name', type: t('global.active_filter')), export_admin_project_units_path(fltrs: params["fltrs"].as_json), class: 'dropdown-item' %>
              </div>
            </div>
          <% end %>
          
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render '/project_units/index', project_units: @project_units %>
          <div class="filter-box">
            <%= render "filters" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= javascript_tag do %>
$(document).ready(function(){
    $(".status").popover({html: true})
    $(".status").click(function(){
      if($(this).attr('value') == 'not_available'){ $(this).popover('show') }
    });
  $('body').on('click', function (e) {
    $('.status').each(function () {
        if (!$(this).is(e.target) && $(this).has(e.target).length === 0 && $('.popover').has(e.target).length === 0) {
            $(this).popover('hide');
        }
    });
});
});
<% end %>
