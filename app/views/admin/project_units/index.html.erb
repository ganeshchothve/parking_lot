<section class="my-customer my-4 mb-5 pb-5">
  <div class="container">
    <div class="row">
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-title pt-4 pb-5">
      <img src="<%= asset_path 'user-black.svg' %>" alt="user icon"> <h1 class="title">My Customers</h1>
      </div>
    </div>
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-btn-set float-right pt-4 pb-4">
        <% if policy([:admin, User.new]).export? %>
          <div class="export-menu display-initial">
            <button class="db-small-btn light-blue bg-white fn-400 dropdown-toggle" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Export</button>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to "All #{global_labels['units']}", export_admin_project_units_path, class: 'dropdown-item' %>
              <%= link_to "Active filter #{global_labels['units']}", export_admin_project_units_path(fltrs: params["fltrs"].as_json), class: 'dropdown-item' %>
            </div>
          </div>
        <% end %>
      <button class="db-filter-btn white fn-500" type="button"><img src="<%= asset_path 'filter-light-blue.svg' %>" alt="filter icon"></button>
      </div>
    </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render '/admin/project_units/index', project_units: @project_units %>
          <div class="filter-box">
            <%= render "filters" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= javascript_tag do %>
$(document).ready(function(){
    $(".status").popover({html: true})
    $(".status").click(function(){
      if($(this).attr('value') == 'not_available'){ $(this).popover('show') }
    });
  $('body').on('click', function (e) {
    $('.status').each(function () {
        if (!$(this).is(e.target) && $(this).has(e.target).length === 0 && $('.popover').has(e.target).length === 0) {
            $(this).popover('hide');
        }
    });
});
});
<% end %>
