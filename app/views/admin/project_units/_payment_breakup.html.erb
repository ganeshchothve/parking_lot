        <% total_wep = (project_unit.wep_price + calculate_percent(project_unit.wep_price,9) + calculate_percent(project_unit.wep_price,9)) %>
        <%= number_to_indian_currency(total_wep.round(2)) %>
      </td>
    </tr>
    <tr>
      <td>
        City infrastructure charges
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(200.round(2)) %>
      </td>
