    <tr>
      <th class="text-left">
        Particulars
      </th>
      <th>
        Land
      </th>
      <th>
        Construction
      </th>
      <th>
        Total
      </th>
    </tr>
    <tr>
      <td>
        SUPER BUILT UP AREA : SFT
      </td>
      <td class="text-center">
        <%= @project_unit.saleable.round(2) %>
      </td>
      <td class="text-center">
        <%= @project_unit.saleable.round(2) %>
      </td>
      <td>
        <%= @project_unit.saleable.round(2) %>
      </td>
    </tr>
    <tr>
      <td>
        USABLE AREA : SFT
      </td>
      <td class="text-center">
        <%= @project_unit.usable.round(2) %>
      </td>
      <td class="text-center">
        <%= @project_unit.usable.round(2) %>
      </td>
      <td>
        <%= @project_unit.usable.round(2) %>
      </td>
    </tr>
    <tr>
      <td>
        CARPET AREA : SFT
      </td>
      <td  class="text-center">
        <%= @project_unit.carpet.round(2) %>
      </td>
      <td  class="text-center">
        <%= @project_unit.carpet.round(2) %>
      </td>
      <td>
        <%= @project_unit.carpet.round(2) %>
      </td>
    </tr>
    <tr>
      <td>
        BASE PRICE PER SFT
      </td>
      <td  class="text-center">
        <%= number_to_indian_currency(@project_unit.land_rate.round(2)) %>
      </td>
      <td  class="text-center">
        <%= number_to_indian_currency((@project_unit.base_rate - @project_unit.land_rate).round(2)) %>
      </td>
      <td>
        <%= number_to_indian_currency(@project_unit.base_rate.round(2)) %>
      </td>
    </tr>
    <tr>
      <td>
        PLC
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(@project_unit.premium_location_charges.round(2)) %>
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(@project_unit.premium_location_charges.round(2)) %>
      </td>
      <td>
        <%= number_to_indian_currency(@project_unit.premium_location_charges.round(2)) %>
      </td>
    </tr>
    <tr>
      <td>
        FLOOR RISE
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(@project_unit.floor_rise.round(2)) %>
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(@project_unit.floor_rise.round(2)) %>
      </td>
      <td>
        <%= number_to_indian_currency(@project_unit.floor_rise.round(2)) %>
      </td>
    </tr>
    <% discount_rate = @project_unit.discount_rate(@project_unit.user_id.present? ? @project_unit.user : current_user) %>
    <% if discount_rate > 0 %>
    <tr>
      <td>
        DISCOUNT RATE
      </td>
      <td class="text-center">
        -
      </td>
      <td class="text-center">
        -
      </td>
      <td>
        <%= number_to_indian_currency(discount_rate.round(2)) %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td>
        EFFECTIVE PRICE PER SFT (BASIC PRICE + PLC + FLOOR RISE <%= ((discount_rate > 0) ? ' - DISCOUNT' : '') %>)
      </td>
      <td class="text-center">
        -
      </td>
      <td class="text-center">
        -
      </td>
      <td>
        <%= number_to_indian_currency((@project_unit.base_rate + @project_unit.premium_location_charges + @project_unit.floor_rise - discount_rate).round(2)) %>
      </td>
    </tr>
    <tr>
      <td>
        LAND COST
      </td>
      <td class="text-center">
        -
      </td>
      <td class="text-center">
        -
      </td>
      <td>
        <%= number_to_indian_currency(@project_unit.land_price.round(2)) %>
      </td>
    </tr>
    <tr>
      <td>
        BASE CONSTRUCTION COST
      </td>
      <td class="text-center">
        -
      </td>
      <td class="text-center">
        -
      </td>
      <td>
        <%= number_to_indian_currency(@project_unit.construction_price.round(2)) %>
      </td>
    </tr>
    <!--
    <% if discount_rate > 0 %>
    <tr>
      <td>
        DISCOUNT
      </td>
      <td class="text-center">
        -
      </td>
      <td class="text-center">
        -
      </td>
      <td>
        <%= number_to_indian_currency(@project_unit.discount(@project_unit.user_id.present? ? @project_unit.user : current_user).round(2)) %>
      </td>
    </tr>
    <% end %>
    -->
    <tr>
      <td>
        GST- 18% ON  CONSTRUCTION COST
      </td>
      <td class="text-center">
        -
      </td>
      <td class="text-center">
        -
      </td>
      <td>
        <%= number_to_indian_currency(@project_unit.gst_on_agreement_price.round(2)) %>
      </td>
    </tr>
    <tr>
      <td class="pink">
        COST OF THE APARTMENT (AGREEMENT VALUE)
      </td>
      <td class="pink">

      </td>
      <td class="pink">

      </td>
      <td class="pink">
        <% @project_unit.calculate_agreement_price %>
        <%= number_to_indian_currency(@project_unit.agreement_price.round(2)) %>
      </td>
    </tr>
  </table>
</div>
<h1 class="f22 bold">Additionals & Deposits</h1>
<div class="table-wrapper">
  <table width="100%" cellspacing="0" cellpadding="5" class="payment-breakup" border="0" outline="1">
