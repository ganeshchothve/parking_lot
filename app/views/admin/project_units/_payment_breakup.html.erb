      <td class="text-center">
        <% total_city_infra = (city_infra + calculate_percent(city_infra,9) + calculate_percent(city_infra,9)) %>
        <%= number_to_indian_currency(total_city_infra.round(2)) %>
      </td>
    </tr>
    <tr>
      <td>
        Advance Maintenance charges @ Rs. 3 psft per year - for 1 years (Rs 3 x 12 months)
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(3.round(2)) %>
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(project_unit.advance_maintenance_charges.round(2)) %>
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(calculate_percent(project_unit.advance_maintenance_charges,9).round(2)) %>
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(calculate_percent(project_unit.advance_maintenance_charges,9).round(2)) %>
      </td>
      <td>
        <% total_advance = (project_unit.advance_maintenance_charges + calculate_percent(project_unit.advance_maintenance_charges,9) + calculate_percent(project_unit.advance_maintenance_charges,9)) %>
        <%= number_to_indian_currency(total_advance.round(2)) %>
      </td>
    </tr>
    <tr>
      <td>
        Club house & amenities Charges
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(125000.round(2)) %>
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(125000.round(2)) %>
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(calculate_percent(125000,9).round(2)) %>
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(calculate_percent(125000,9).round(2)) %>
      </td>
      <td class="text-center">
        <% total_club_house = (125000 + calculate_percent(125000,9) + calculate_percent(125000,9)) %>
        <%= number_to_indian_currency(total_club_house.round(2)) %>
      </td>
    </tr>

    <tr>
      <td>
        Corpus Fund
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(125.round(2)) %>
      </td>
      <td class="text-center">
        <%= number_to_indian_currency(project_unit.corpus_fund.round(2)) %>
      </td>
      <td class="text-center">
        -
      </td>
      <td class="text-center">
        -
      </td>
      <td>
        <%= number_to_indian_currency(project_unit.corpus_fund.round(2)) %>
      </td>

    </tr>
    <tr>
      <td>
        TOTAL
      </td>
      <td>

      </td>
      <td>
        <%= number_to_indian_currency(((project_unit.corpus_fund) + city_infra + (project_unit.advance_maintenance_charges) + (project_unit.clubhouse_amenities_price) + (project_unit.wep_price)).round(2)) %>
      </td>
      <td>
        <% cgst_total = calculate_percent((city_infra + project_unit.advance_maintenance_charges + project_unit.clubhouse_amenities_price + project_unit.wep_price),9) %>
        <%= number_to_indian_currency(cgst_total.round(2)) %>
      </td>
      <td>
        <%= number_to_indian_currency(cgst_total.round(2)) %>
      </td>
      <td>
        <%= number_to_indian_currency((total_wep + total_city_infra + total_advance + total_club_house + project_unit.corpus_fund).round(2)) %>
      </td>
    </tr>
    <tr>
      <td class="pink">
        GRAND TOTAL OF THE APARTMENT
      </td>
      <td class="pink">

      </td>
      <td class="pink">

      </td>
      <td class="pink">

      </td>
      <td class="pink">

      </td>
      <td class="pink">
        <%= number_to_indian_currency(@project_unit.all_inclusive_price.round(2)) %>
      </td>
    </tr>
  </table>
</div>
