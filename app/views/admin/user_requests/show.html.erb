<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <%= render 'admin/user_requests/detail', user_request: @user_request %>
      <div class="mt-3"></div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= render 'dashboard/booking_detail_overview', {booking_detail: @user_request.requestable, with_actions: true } if @user_request.requestable.kind_of?(BookingDetail) %>
    </div>
    <% if @user_request._type == "UserRequest::Swap" && @user_request.resolved? %>
      <% if @user_request.alternative_booking_detail.present? %>
        <div class="col">
          <%= render 'dashboard/booking_detail_overview', {booking_detail: @user_request.alternative_booking_detail, with_actions: true } %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="mt-3"></div>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h5> Payment Details</h5>
        </div>
          <div class="card-body">
            <%= render 'receipts/index', {receipts: @user_request.requestable.receipts.paginate(page:1, per_page: 1000)} if @user_request.requestable.kind_of?(BookingDetail) %>
          </div>
        </div>
      </div>
    <% if @user_request._type == "UserRequest::Swap" && @user_request.resolved? %>
      <div class="col">
        <div class="card">
          <div class="card-header">
          <h5> Payment Details</h5>
          </div>
          <div class="card-body">
            <%= render 'receipts/index', {receipts: Receipt.where(booking_detail_id: @user_request.requestable_id).paginate(page: 1, per_page: 1000)} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
