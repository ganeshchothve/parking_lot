<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-11">
        <h5 class="float-left card-title mt-2 mb-0"><%= params[:request_type] %> <%= user_request.booking_detail.name %></h5>
      </div>
      <div class="col-1">
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label>Booking</label>
          <div>
            <%= user_request.booking_detail.name %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label>Status</label>
          <div>
            <%= t("user_request.status.#{user_request.status}") %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label> Created by </label>
          <div>
            <%= user_request.created_by.try(:name) %>
            </br>
            ( <%= user_request.created_at.strftime('%A, %d %b %Y %l:%M %p') %>)
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label>Resolved by</label>
          <div>
            <%- if user_request.resolved_by.present? %>
              <%= user_request.resolved_by.try(:name) %>
              </br>
              ( <%= user_request.updated_at.strftime('%A, %d %b %Y %l:%M %p')%>)
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label> Request For </label>
          <div>
            <%= user_request.user.try(:name) %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label> Reason </label>
          <div>
            <%= user_request.reason_for_failure || '-' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
