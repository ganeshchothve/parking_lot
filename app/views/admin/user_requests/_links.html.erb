<% if policy([:admin, Asset.new(assetable: user_request)]).index? %>
  <%= link_to 'Documents', assetables_path(assetable_type: user_request.class.model_name.i18n_key.to_s, assetable_id: user_request.id), class: 'dropdown-item modal-remote-form-link' %>
<% end %>

<% if !current_user.buyer? && policy([:admin, user_request]).show? && !(params[:controller] == 'admin/user_requests' && params[:action] == 'show') %>
  <%= link_to 'Details', admin_user_request_path(request_type: user_request.class.model_name.element, id: user_request.id), class: 'dropdown-item' %>
<% end %>

<% if Object.const_get("Admin::#{user_request.class.model_name.name}Policy").new(current_user, user_request).edit? %>
  <%= link_to t("controller.user_requests.#{user_request.class.model_name.element}.edit.link_name"), edit_admin_user_request_path(user_request, request_type: user_request.class.model_name.element), class: 'modal-remote-form-link dropdown-item' %>
<% end %>

<% if policy([:admin, user_request]).choose_template_for_print? %>
  <%= link_to t('controller.templates.choose_template_for_print.link_name'), choose_template_for_print_admin_custom_templates_path(subject_class: user_request.class.model_name.i18n_key.to_s, subject_class_id: user_request.id.to_s), class: 'dropdown-item modal-remote-form-link' %>
<% end %>
