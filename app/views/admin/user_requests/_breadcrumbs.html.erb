<%= content_for :breadcrumbs do %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%= home_path(current_user) %>">Dashboard</a></li>
      <% if user.present? %>
        <% if Admin::LeadPolicy.new(current_user, Lead).index? %>
          <li class="breadcrumb-item"><a href="<%= admin_leads_path %>">Deals</a></li>
        <% end %>
        <% if Admin::LeadPolicy.new(current_user, lead).show? %>
          <li class="breadcrumb-item"><a href="<%= admin_lead_path(lead) %>"><%= lead.name %></a></li>
        <% end %>
      <% end %>
      <% if user_request.present? %>
        <% if lead.present? %>
          <li class="breadcrumb-item"><a href="<%= buyer_user_requests_path(lead, request_type: "all") %>"><%= global_labels['user_requests'] %></a></li>
        <% else %>
          <li class="breadcrumb-item"><a href="<%= buyer_user_requests_path(request_type: "all") %>"><%= global_labels['user_requests'] %></a></li>
        <% end %>
        <li class="breadcrumb-item active" aria-current="page"><%= global_labels['user_request'] %></li>
      <% else %>
        <li class="breadcrumb-item active" aria-current="page"><%= global_labels['user_requests'] %></li>
      <% end %>
    </ol>
  </nav>
<% end %>
