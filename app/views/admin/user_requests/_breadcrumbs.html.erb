<%= content_for :breadcrumbs do %>
  <% unless current_user.buyer? %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%= home_path(current_user) %>">Dashboard</a></li>
      <% if user.present? %>
        <% if UserPolicy.new(current_user, User).index? %>
          <li class="breadcrumb-item"><a href="<%= admin_users_path %>">Users</a></li>
        <% end %>
        <% if UserPolicy.new(current_user, user).show? %>
          <li class="breadcrumb-item"><a href="<%= admin_user_path(user) %>"><%= user.name %></a></li>
        <% end %>
      <% end %>
      <% if user_request.present? %>
        <% if user.present? %>
          <li class="breadcrumb-item"><a href="<%= admin_user_user_requests_path(user) %>"><%= global_labels['user_requests'] %></a></li>
        <% else %>
          <li class="breadcrumb-item"><a href="<%= admin_user_requests_path() %>"><%= global_labels['user_requests'] %></a></li>
        <% end %>
        <li class="breadcrumb-item active" aria-current="page"><%= global_labels['user_request'] %></li>
      <% else %>
        <li class="breadcrumb-item active" aria-current="page"><%= global_labels['user_requests'] %></li>
      <% end %>
    </ol>
  </nav>
  <% end %>
<% end %>
