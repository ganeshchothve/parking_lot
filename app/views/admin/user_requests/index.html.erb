<div class="container">
  <div class="row justify-content-center">
    <div class="<%= @user.blank? ? 'col-md-9' : 'col-md-12' %>">
      <%= render 'breadcrumbs', {user_request: @user_request, user: @user} %>
      <div class="card h-100">
        <div class="card-body">
          <%= render 'index', {user_requests: @user_requests} %>
          <% if UserRequestPolicy.new(current_user, UserRequest.new(user: @user)).new? %>
            <%= link_to "Add #{global_labels['user_request']}", new_user_user_request_path, class: 'btn btn-primary nav-btn modal-remote-form-link' %>
          <% end %>
          <% if UserRequestPolicy.new(current_user, UserRequest).export? %>
            <%= link_to "Export all #{global_labels['user_request']}", export_admin_user_requests_path, class: 'btn btn-outline-primary float-left ml-2 pink-btn margin-xs-left-0' %>
          <% end %>
        </div>
      </div>
    </div>
    <% if @user.blank? %>
      <div class="col-md-3">
        <%= render "filters" %>
      </div>
    <% end %>
  </div>
</div>
