<%= render 'breadcrumbs', {user_request: @user_request, user: @user} %>
<section class="padding-side-30 main-wrapper">
	<div class="container-fluid">
		<div class="row">
		  <!-- <div class="col-12 text-left mtop10 padding-0">
	          <p class="pageTitle big pink">CANCELLATION REQUEST</p>
