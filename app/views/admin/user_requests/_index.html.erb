<div class="row">
  <div class="col-12">
    <p>Total Cancellation Requests : <%= user_requests.count %></p>
  </div>
</div>
<table class='table striped-table payment-breakup' width="100%" cellpadding="10" cellspacing="0">
  <thead class="th-default th-pink">
    <% labels = t('mongoid.attributes.user_request').with_indifferent_access %>
    <tr>
      <th><%= labels['user_id'] %></th>
      <th><%= labels['status'] %></th>
      <th><%= labels['comments'] %></th>
      <th><%= labels['project_unit_id'] %></th>
      <th class="text-right">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% user_requests.each do |user_request| %>
    <tr>
      <td><%= user_request.user.name %></td>
      <td><%= UserRequest.available_statuses.find{|x| x[:id] == user_request.status}[:text] %></td>
      <td><%= user_request.comments %></td>
      <td><%= user_request.project_unit_id.present? ? user_request.project_unit.name : '-' %></td>
      <td class="text-right">
        <div class="dropdown">
          <a class="btn btn-light light-pink-btn dropdown-toggle" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
          <div class="dropdown-menu dropdown-menu-right">
            <% if UserRequestPolicy.new(current_user, user_request).edit? %>
              <%= link_to 'Edit', edit_admin_user_user_request_path(user_request.user_id, user_request), class: 'dropdown-item nav-btn' %>
            <% end %>
          </div>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate user_requests %>
