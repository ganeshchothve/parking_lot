<section class="mt-0">
  <div class="px-0">
    <div class="row g-0">
      <div class="col-lg-12 p-0">
        <% site_visits.reject(&:new_record?).each_with_index do |site_visit, index| %>
        <div class="bg-white rounded-3 float-start wd-100 shadow-sm position-relative <%= index.zero? ? 'mt-2' : 'mt-4 ' %>">
          <div class="float-start wd-100">
            <div class="">
              <div>
                <div class="inner-info d-flex d-xs-no-flex justify-content-between position-relative">
                  <div class="ps-3 py-3 pb-xs-0">
                    <h2 class="fn-16 font-medium d-sm-inline-block mb-0 theme-txt-color me-2 d-block">
                      <% if policy([ current_user_role_group, site_visit]).show? %>
                        <%= link_to site_visit.lead.name, [current_user_role_group, site_visit], class: 'font-medium theme-txt-color' %>
                      <% else %>
                        <%= site_visit.lead.name %>
                      <% end %>
                    </h2>
                    <% if site_visit.lead&.email.present? %>
                    <p class="email-icon small d-inline-block mt-1 fn-16 mb-0">
                      <i class="fa fa-envelope fill-theme me-2 ms-2 fa-sm"></i><%= site_visit.lead.masked_email(current_user) || '' %>
                    </p>
                    <% end %>
                    <% if site_visit.lead&.phone.present? %>
                    <p class="phone-icon small d-inline-block mt-1 ms-2 fn-16 mb-0">
                      <i class="fa fa-phone-alt fill-theme me-2 fa-sm"></i><%= site_visit.lead.masked_phone(current_user) || '' %>
                    </p>
                    <% end %>
                    <% if site_visit.lead.manager_id? && current_user.role.in?(%w(admin superadmin)) %>
                    <p class="fn-14 mt-1 mb-0">
                      <%= "#{t('mongoid.attributes.lead.manager_id')} : #{link_to site_visit.lead.manager_name, [current_user_role_group, site_visit.lead.manager], class: 'theme-txt-color'}".html_safe %>
                    </p>
                    <% end %>
                  </div>
                  <div class="pe-3 py-3 ps-xs-3">
                    <p class="font-medium fn-12 mb-0 d-inline-block me-2"><i
                        class="fa fa-circle info me-2 fa-sm"></i><%= t("mongoid.attributes.site_visit/status.#{site_visit.status}") || '-' %></p>
                    <div class="dropdown d-inline-block top-right-action">
                      <a href="javascript:void(0);" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        <i class="fa fa-ellipsis-v txt-light-blue" aria-hidden="true"></i></a>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                        <%= render "#{current_user_role_group}/site_visits/links", site_visit: site_visit %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="border-bottom col-12"></div>
              </div>
              <div class="d-flex justify-content-between d-xs-no-flex">
                <div class="ps-3 py-3 pb-xs-0 d-flex justify-content-start d-xs-no-flex">
                  <p class="fn-14 mb-0 theme-txt-color">
                    <span class="font-medium theme-txt-color"><%= I18n.l(site_visit.scheduled_on) || '-' %></span>
                  </p>
                  <span class="secondary mx-3 d-sm-inline-block d-none">| </span>
                  <p class="mb-0 theme-txt-color">
                    <%= link_to_if policy([current_user_role_group, site_visit.project]).show?, site_visit.project_name, [current_user_role_group, site_visit.project], class: 'theme-txt-color' %>
                  </p>
                </div>
                <div class="inner-info">
                  <div class="pe-3 py-3 ps-3 pt-xs-0 d-sm-flex justify-content-end">
                    <p class="font-medium fn-14 mb-0 ms-5 theme-txt-color ms-xs-0">
                      <% unless site_visit.verification_pending? %>
                        <i class='fa fn-16 fa-<%= site_visit.verification_approved? ? "check" : "times" %> fill-<%= site_visit.verification_approved? ? "success" : "danger" %> me-12 fa-lg'></i>
                      <% end %>
                      <%= t("mongoid.attributes.site_visit/approval_status.#{site_visit.approval_status}") %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>

      <!----------- Pagination ---------->
      <% if site_visits.is_a? WillPaginate::Collection %>
      <div class="col-lg-12 py-3 bg-white mb-2 px-3 mt-3 shadow-sm">
        <div class="row">
          <div class="col-lg-6 pt-2">
            <p class="table-entry mb-0"><%= page_entries_info site_visits %></p>
          </div>
          <div class="col-lg-6 table-pagination">
            <%= will_paginate site_visits, list_classes: %w(pagination justify-content-end) %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
