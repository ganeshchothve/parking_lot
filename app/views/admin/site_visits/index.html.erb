<section class="mb-5 mt-3">
  <div class="px-4">
    <div class="row">
      <!--
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1 pb-3">
          <h1 class="title icon-set icon-file-kycs-black">
            <%= SiteVisit.model_name.human(count: @site_visits.total_entries ) %>
          </h1>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">
          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= @site_visits.total_entries %></button>
        </div>
      </div>
      -->
      <div class="col-lg-9 col-12 filter-set d-xs-no-flex">
        <%= link_to "Scheduled This Week", admin_site_visits_path(fltrs: {scheduled_on: "#{Date.today.beginning_of_week} - #{Date.today.end_of_week}"}, scheduled_this_week: true), class: "filter-link #{params[:scheduled_this_week].present? ? 'active' : ''}" %>
        <%= link_to "Scheduled Last Week", admin_site_visits_path(fltrs: {scheduled_on: "#{(Date.today-7.days).beginning_of_week} - #{(Date.today-7.days).end_of_week}"}, scheduled_last_week: true), class: "filter-link #{params[:scheduled_last_week].present? ? 'active' : ''}" %>
        <%= link_to "Scheduled For This Month", admin_site_visits_path(fltrs: {scheduled_on: "#{Date.today.beginning_of_month} - #{Date.today.end_of_month}"}, scheduled_this_month: true), class: "filter-link #{params[:scheduled_this_month].present? ? 'active' : ''}" %>
        <%= link_to "Pending Approval", admin_site_visits_path(fltrs: {approval_status: 'pending'}), class: "filter-link #{params.dig(:fltrs, :approval_status) == 'pending' ? 'active' : ''}" %>
      </div>
      <div class="col-lg-3 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-1 text-end mt-2">
          <!--
          <div class="filter-search">
            <input type="text" name="" placeholder="Search Name/Email/Phone">
          </div>
          -->
          <div class="filter-popup">
            <a class="db-filter-btn fn-500" href="javascript:;">
              <i class="fa fa-filter fill-theme"></i>
            </a>
          </div>
          <% if policy([:admin, Lead]).new? %>
            <%= link_to t('helpers.new.link_name', model: t('global.walkin.one')), new_admin_lead_path(walkin: true), class: 'modal-remote-form-link p-2 px-3 btn bg-primary border-primary white d-inline-block ms-2 me-2 border rounded' %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'index', {site_visits: @site_visits} %>
          <div class="filter-box">
            <%= render "filters" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
