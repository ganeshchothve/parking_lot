<%= form_for [:admin, @bulk_upload_report], remote: true, html: {class: 'modal-remote-form validate-form', "data-resource-type": BulkUploadReport.model_name.human, "data-type": "json"} do |f| %>
  <div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Upload Inventory</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.hidden_field :uploaded_by_id, value: current_user.id %>
          <div class = 'form-group'>
            <%= f.fields_for :asset, Asset.new do |p| %>
              <%= render "admin/assets/form_fields", p: p %>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#account_form"));
});
<% end %>
