<% labels = I18n.t("mongoid.attributes.bulk_upload_report").with_indifferent_access %>
<div class="table-responsive">
  <table class='table striped-table' width="100%" cellpadding="10" cellspacing="0">
    <thead class="th-default">
      <tr class="bg-gradient-cd white">
        <th><%= labels["uploaded_by_id"] %></th>
        <th><%= labels["project_id"] %></th>
        <th><%= labels["total_rows"] %></th>
        <th><%= labels["success_count"] %></th>
        <th><%= labels["failure_count"] %></th>
        <th><%= labels["file_uploaded"] %></th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% bulk_upload_reports.each do |bulk_upload_report| %>
      <tr>
        <td>
          <%= bulk_upload_report.uploaded_by.name %>
          <div class="small"><%= "On: #{bulk_upload_report.created_at.in_time_zone("Mumbai").strftime("%d/%m/%y %I:%M %p")}"%></div>
        </td>
        <td>
          <%= bulk_upload_report.project.try(:name) %>
        </td>
        <td>
          <%= bulk_upload_report.total_rows %>
        </td>
        <td>
          <%= bulk_upload_report.success_count %>
        </td>
        <td>
          <%= bulk_upload_report.failure_count %>
        </td>
        <td>
          <%= link_to bulk_upload_report.asset.try(:file_name), bulk_upload_report.asset.try(:file).try(:url) %>
        </td>
        <td>
          <div class="dropdown show text-right">
            <a class="btn dropdown-toggle table-dropdown-btn black-clr" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span></span><span></span><span></span></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
              <% if policy([:admin, bulk_upload_report]).show? %>
                <%= link_to 'Show', admin_bulk_upload_report_path(bulk_upload_report), class: 'dropdown-item' %>
              <% end %>
             </div>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="col-lg-12 py-3 white mb-2 px-2">
  <div class="row">
  <div class="col-lg-6">
    <p class="table-entry">Showing 1 - 5 of <%= @bulk_upload_reports.total_entries %> items</p>
  </div>
  <div class="col-lg-6 table-pagination">
     <%= will_paginate bulk_upload_reports, list_classes: %w(pagination justify-content-end) %>
  </div>
</div>
</div> 