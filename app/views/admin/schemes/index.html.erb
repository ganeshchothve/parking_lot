<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1">
          <!-- <h1 class="title icon-scheme-black icon-set">
            <%= Scheme.model_name.human(count: @schemes.total_entries) %>
          </h1> -->
          <div class="filter-search">
            <input type="text" name="" placeholder="Search Schemes">
          </div>
          <div class="filter-popup">
            <a class="db-filter-btn fn-500" href="javascript:;">
              <i class="fa fa-filter fill-theme"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-end pb-3 text-end">
          <% if policy([:admin, Scheme]).new? %>
            <%= link_to t('helpers.new.link_name', model: Scheme.model_name.human), new_admin_scheme_path, class: 'btn-primary fn-400 modal-remote-form-link btn unset-width' %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'index', { schemes: @schemes } %>
          <div class="filter-box">
            <%= render "filters" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
