<table class='table my-customer-table responsive-tbl'>
  <thead class="th-default">
    <% labels = t('mongoid.attributes.scheme').with_indifferent_access %>
      <thead>
        <tr class="bg-gradient-cd white">
          <th><%= t('mongoid.attributes.scheme.name') %></th>
          <th><%= t('mongoid.attributes.scheme.status') %></th>
          <th><%= t('global.action', count: 3) %></th>
        </tr>
      </thead>
  </thead>
  <tbody>
    <% schemes.each do |scheme| %>
      <tr>
        <td>
          <%= scheme.name %>
          <div class="small">
            <%= t('mongoid.attributes.scheme.created_by')%> :
            <%= scheme.created_by_name || '-' %>
          </div>
          <div class="small">
            <%= t('mongoid.attributes.scheme.approved_by') %> :
            <%= scheme.approved_by.present? ? "#{scheme.approved_by_name} at #{scheme.approved_at.present? ? l(scheme.approved_at.in_time_zone(current_user.time_zone)) : '-'}".html_safe : '-' %>
          </div>
        </td>
        <td><%= t("mongoid.attributes.scheme/status.#{scheme.status}") %></td>
        <td>
          <div class="dropdown show text-right">
          <a class="btn dropdown-toggle table-dropdown-btn black-clr" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span></span><span></span><span></span></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <% if Admin::SchemePolicy.new(current_user, scheme).edit? %>
                <%= link_to t('controller.schemes.edit.link_name'), edit_admin_scheme_path(scheme), class: 'dropdown-item modal-remote-form-link' %>
              <% end %>
           </div>
        </div>
        </td>
      </tr>
      <% end %>
      <tr>
      <td colspan="6">
        <div class="mt-5 pt-5"></div>
      </td>
    </tr>
  </tbody>
</table>
<div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 pt-2">
  <%= will_paginate schemes, list_classes: %w(pagination justify-content-center) %>
</div>
