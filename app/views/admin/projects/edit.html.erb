<%= simple_form_for @project, url: admin_project_path, remote: true, local: true, html: { novalidate: false, id: "project_form", class: "modal-remote-form validate-form", data: { 'resource-type': Project.model_name.human, type: :json } } do |f| %>
  <div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header bg-gradient-cd white">
          <h3 class="title">
            <%= t('helpers.edit.link_name', model: Project.model_name.human)%>
          </h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="white">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <nav>
            <div class="nav nav-tabs" role="tablist">
              <a class="nav-item nav-link active" data-toggle="tab" href="#nav-client-basic" role="tab">Basic Details</a>
              <a class="nav-item nav-link" data-toggle="tab" href="#nav-client-bookings" role="tab">Bookings</a>
              <a class="nav-item nav-link" data-toggle="tab" href="#nav-client-contacts" role="tab">Contacts & Notifications</a>
              <a class="nav-item nav-link" data-toggle="tab" href="#nav-client-integrations" role="tab">Integrations</a>
              <a class="nav-item nav-link" data-toggle="tab" href="#nav-client-pages" role="tab">Content Pages</a>
              <a class="nav-item nav-link" data-toggle="tab" href="#nav-client-logos" role="tab">Images & Documents</a>
            </div>
          </nav>
        <div class="mt-3"></div>
          <div class="tab-content">
            <div class="tab-pane fade show active" id="nav-client-basic" role="tabpanel">
              <%= render 'admin/projects/basic', f: f %>
            </div>
            <div class="tab-pane fade" id="nav-client-bookings" role="tabpanel">
              <%= render 'admin/projects/bookings', f: f %>
            </div>
            <div class="tab-pane fade" id="nav-client-contacts" role="tabpanel">
              <%= render 'admin/projects/contacts', f: f %>
            </div>
            <div class="tab-pane fade" id="nav-client-integrations" role="tabpanel">
              <%= render 'admin/projects/integrations', f: f %>
            </div>
            <div class="tab-pane fade" id="nav-client-pages" role="tabpanel">
              <%= render 'admin/projects/pages', f: f %>
            </div>
            <div class="tab-pane fade" id="nav-client-logos" role="tabpanel">
              <%= render 'admin/projects/logos', f: f %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#project_form"));
  });
<% end %>
