<table class='table my-customer-table responsive-tbl caption-top rounded mt-3 mb-0'>
  <thead class="th-default">
    <thead>
      <tr class="bg-gradient-cd white">
        <th><%= t('mongoid.attributes.unit_configuration.name') %></th>
        <th><%= t('mongoid.attributes.unit_configuration.saleable') %></th>
        <th><%= t('mongoid.attributes.unit_configuration.carpet') %></th>
        <th class="text-right wd-22"></th>
      </tr>
    </thead>
  </thead>
  <tbody>
    <% unit_configurations.each do |unit_configuration| %>
    <tr>
      <td data-title=<%= t('mongoid.attributes.unit_configuration.name') %>>
        <%= unit_configuration.name %>
        <div class=small><strong><%= unit_configuration.project&.name %></strong></div>
      </td>
      <td data-title=<%= t('mongoid.attributes.unit_configuration.saleable') %>>
        <%= unit_configuration.saleable %>
      </td>
      <td data-title=<%= t('mongoid.attributes.unit_configuration.carpet') %>>
        <%= unit_configuration.carpet %>
      </td>
      <td>
        <div class="dropdown d-inline-block">
          <a href="javascript:void(0);" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            <i class="fa fa-ellipsis-v txt-light-blue" aria-hidden="true"></i></a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
            <% if policy([:admin, unit_configuration]).edit? %>
              <%= link_to t('helpers.edit.link_name', model: UnitConfiguration.model_name.human(count: 1)), edit_admin_project_unit_configuration_path(unit_configuration.project, unit_configuration), class: 'dropdown-item modal-remote-form-link' %>
            <% end %>
            <% if policy([:admin, unit_configuration]).asset_create? %>
              <%= link_to Asset.model_name.human(count: 2), admin_project_unit_configurations_path('remote-state': assetables_path(assetable_type: unit_configuration.class.model_name.i18n_key.to_s, assetable_id: unit_configuration.id) ), class: "dropdown-item" %>
            <% end %>
          </div>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="col-lg-12 py-3 bg-white mb-2 px-2">
  <div class="row">
    <div class="col-lg-6">
      <p class="table-entry mb-0 ps-2 pt-2"><%= page_entries_info unit_configurations %></p>
    </div>
    <div class="col-lg-6 table-pagination">
      <%= will_paginate unit_configurations, list_classes: %w(pagination justify-content-end) %>
    </div>
  </div>
</div>
