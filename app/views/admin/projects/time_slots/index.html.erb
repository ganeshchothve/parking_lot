<section class="mb-5 mt-3">
  <div class="">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="table-btn-set float-end pb-3 text-end">
       <div class="filter-search">
          <input type="text" name="" placeholder="Search time slot">
        </div>
         <% if policy([current_user_role_group, TimeSlot.new]).new? %>
                <%= link_to "Add #{global_labels['time_slot']}", new_admin_project_time_slot_path, class: 'btn btn-primary modal-remote-form-link ms-2', data:{event_category: 'Section', event_action: 'Click', event_name: 'Add Event'} %>
              <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="relative bg-white">
          <%= render 'index', {time_slots: @time_slots} %>
        </div>
      </div>
    </div>
  </div>
</section>