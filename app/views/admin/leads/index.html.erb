<section class="mt-3 mb-5">
  <div class="">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-1 text-end mt-2">
          <!--
          <div class="filter-search">
            <input type="text" name="" placeholder="Search Leads">
          </div>
          -->
          <div class="filter-popup">
            <a class="db-filter-btn fn-500" href="javascript:;">
              <i class="fa fa-filter fill-theme"></i>
            </a>
          </div>
          <% if policy([:admin, Lead]).new? %>
            <div class="new-menu display-initial d-inline" >
              <button class="select-btn btn btn-primary fn-400 dropdown-toggle" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= I18n.t("global.add") %></button>
              <div class="dropdown-menu">
                <%= link_to t('helpers.new.link_name', model: Lead.model_name.human), new_admin_lead_path, class: 'modal-remote-form-link dropdown-item' %>
                <% if current_client.enable_site_visit? %>
                  <%= link_to t('helpers.new.link_name', model: t('global.walkin.one')), new_admin_lead_path(walkin: true), class: 'modal-remote-form-link dropdown-item' %>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if policy([:admin, Lead.new]).export? %>
            <div class="export-menu display-initial d-inline text-end">
              <button class="select-btn btn no-fill primary fn-400 dropdown-toggle" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <%= t('controller.leads.exports.link_name', name: nil) %> </button>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to  I18n.t("global.link_to.all_exports"), export_admin_leads_path, class: 'dropdown-item' %>
                <%= link_to  I18n.t("global.link_to.active_filter_exports"), export_admin_leads_path(fltrs: params["fltrs"].as_json), class: 'dropdown-item' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render "admin/leads/index", leads: @leads %>
          <div class="filter-box">
            <%= render "filters" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
