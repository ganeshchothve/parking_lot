<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1">
          <!-- <h1 class="title icon-set icon-users-black icon-bs-15 t-2">
            <%= Lead.model_name.human(count: @leads.total_entries) %>
          </h1> -->
          <div class="filter-search">
            <input type="text" name="" placeholder="Search Leads">
          </div>
          <div class="filter-popup">
            <a class="db-filter-btn fn-500" href="javascript:;">
              <i class="fa fa-filter fill-theme"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-end pb-3 text-end mt-2">
          <% if policy([:admin, Lead]).new? %>
            <%= link_to t('helpers.new.link_name', model: Lead.model_name.human), new_admin_lead_path, class: 'db-small-btn btn btn-primary fn-400 modal-remote-form-link btn unset-width d-inline me-2' %>
          <% end %>

          <% if policy([:admin, Lead.new]).export? %>
            <div class="export-menu display-initial d-inline text-end">
              <button class="select-btn fn-400 dropdown-toggle" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <%= t('controller.leads.exports.link_name', name: nil) %> </button>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link_to t('controller.leads.exports.link_name', name: t('global.all')), export_admin_leads_path, class: 'dropdown-item' %>
                <%= link_to t('controller.leads.exports.link_name', name: t('global.active_filter')), export_admin_leads_path(fltrs: params["fltrs"].as_json), class: 'dropdown-item' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render "admin/leads/index", leads: @leads %>
          <div class="filter-box">
            <%= render "filters" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
