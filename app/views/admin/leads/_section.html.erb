<% hex_id = "collapseLeads#{SecureRandom.hex(4)}" %>
<section class="leads my-4 mb-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 p-0 cursor-pointer" data-toggle="collapse" href="#<%= hex_id %>" role="button" aria-expanded="false" aria-controls="<%= hex_id %>">
        <div class="table-title pt-1">
          <h2 class="title text-dark icon-set icon-users-black">
            <%= name %>
          </h2>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 p-0">
        <div class="table-btn-set float-right pb-3">
          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= leads.count %></button>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 p-0 bg-white collapseLeads collapse" id="<%= hex_id %>">
        <%= render "admin/leads/index", leads: leads %>
      </div>
    </div>
  </div>
</section>
<%= javascript_tag do %>
  $(document).ready(function(){
      var count = <%= raw leads.count %>
      if(count != 0){
        $('.collapseLeads').collapse('show')
      }
  });
<% end %>
