<section class="site_visit my-4 mb-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 p-0 cursor-pointer" data-toggle="collapse" href="#collapseCpLeadSiteSivit" role="button" aria-expanded="false" aria-controls="collapseCpLeadSiteSivit">
        <div class="table-title pt-1">
          <h2 class="title text-dark icon-set icon-file-contract-black">
            Sell Do Lead Data
          </h2>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 p-0">
        <div class="table-btn-set float-right pb-3">
          <% if (%w[admin cp_admin].include?(current_user.role)) %>
            <%= link_to "Sync Site Visit", sync_site_visit_admin_lead_path(lead), class: "db-small-btn light-blue bg-white fn-400 p-2", remote: true %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 p-0 bg-white collapse show" id="collapseCpLeadSiteSivit">
        <div class="box-card relative">
          <div class="row m-3">
            <div class="col-md-4">
              <div class="form-group">
                <label class="small"><%= t('mongoid.attributes.cp_lead_activity.selldo_lead_id') %></label>
                <div><%= lead.lead_id|| '-' %></div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label class="small"><%= t('mongoid.attributes.lead.selldo_lead_registration_date') %></label>
                <div><%= I18n.l(Date.parse(lead.selldo_lead_registration_date)) rescue '-' %></div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label class="small"><%= t('mongoid.attributes.lead.selldo_lead_stage') %></label>
                <div><%= lead.lead_stage.try(:titleize) || '-' %></div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label class="small"><%= t('mongoid.attributes.cp_lead_activity.site_visit_date') %></label>
                <div><%= I18n.l(Date.parse(lead.sitevisit_date)) rescue '-' %></div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label class="small"><%= t('mongoid.attributes.cp_lead_activity.site_visit_status') %></label>
                <div><%= lead.sitevisit_status.try(:titleize) || '-' %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
