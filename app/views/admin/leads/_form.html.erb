<%= form_for [:admin, @lead], remote: true, local: true, html: {id: "lead_form", class: "modal-remote-form validate-form", "data-resource-type": global_labels['lead'], "data-type": "json"} do |f| %>
  <div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header bg-primary">
          <h5 class="title">
            <%= t("controller.leads.#{action_name}.header") %>
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body theme-form">
          <% if policy(ThirdPartyReference).editable_field?('reference_id') %>
            <h5>CRM IDs</h5>
            <hr/>
            <%= render 'admin/crm/shared/third_party_references_form', f: f %>
          <% end %>
        </div>
        <div class="modal-footer text-end">
          <%= f.submit "Save", class: 'btn btn-primary float-end' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#lead_form"));
  });
<% end %>
