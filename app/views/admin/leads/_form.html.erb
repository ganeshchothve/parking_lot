<%= form_for [:admin, @lead], remote: true, local: true, html: {id: "lead_form", class: "modal-remote-form validate-form", "data-resource-type": global_labels['lead'], "data-type": "json"} do |f| %>
  <div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header bg-gradient-cd white">
          <h3 class="title">
            <%= t("controller.leads.#{action_name}.header") %>
          </h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="white">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h5>CRM IDs</h5>
          <hr/>
          <%= render 'admin/crm/shared/third_party_references_form', f: f %>
        </div>
        <div class="modal-footer">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#lead_form"));
  });
<% end %>
