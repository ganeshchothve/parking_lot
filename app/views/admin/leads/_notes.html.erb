<section class="notes my-4 mb-4">
  <div class="">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12">
        <div class="box-card relative">
          <div class="row">
            <% if notes.blank? %>
              <div class="col-md-12">
                <div class="mb-3">
                  <%= I18n.t("global.no_records") %>
                </div>
              </div>
            <% else %>
              <% notes.each_with_index do |remark, i| %>
                <div class="col-md-12">
                  <div class="mb-3">
                    <%= "#{i + 1}. " + remark['note']['content'] %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>