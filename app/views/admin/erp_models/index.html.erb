<section class="my-customer">
  <div class="container">
    <div class="row">
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-title pt-1">
        <i class='fa fa-cog'></i><h1 class="title"><%= global_labels['erp_models'] %></h1>
      </div>
    </div>
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-btn-set float-right pb-3">
        <div class="new-menu display-initial" >
          <% if policy([:admin, ErpModel.new]).new? %>
            <%= link_to 'New', new_admin_erp_model_path, class: 'btn btn-xs modal-remote-form-link db-small-btn light-blue bg-white fn-400' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
      <div class="box-card relative">
        <%= render 'index', {erp_models: @erp_models} %>
      </div>
    </div>
  </div>
</section>
