<section class="my-customer my-4 mb-5 pb-5">
  <div class="container">
    <div class="row">
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-title pt-4 pb-5">
      <img src="<%= asset_path 'user-black.svg' %>" alt="user icon"> <h1 class="title">Erp Models</h1>
      </div>
    </div>
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <div class="table-btn-set float-right pt-4 pb-4">
        <% if policy([:admin, ErpModel.new]).new? %>
          <%= link_to 'New', new_admin_erp_model_path, class: 'modal-remote-form-link db-small-btn light-blue bg-white fn-400' %>
        <% end %>
      </div>
    </div>
    </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'index', {erp_models: @erp_models} %>
        </div>
      </div>
    </div>
  </div>
</section>
