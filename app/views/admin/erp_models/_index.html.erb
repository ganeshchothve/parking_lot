<div class="table-responsive">
  <table class='table striped-table payment-breakup' width="100%" cellpadding="10" cellspacing="0">
    <thead class="th-default">
      <tr>
        <th>Resource Class</th>
        <th>Domain</th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @erp_models.each do |erp_model| %>
        <tr>
          <td>
            <%= erp_model.resource_class.present? ? erp_model.resource_class : "-" %>
          </td>
          <td>
            <%= erp_model.domain.present? ? erp_model.domain : "-" %>
          </td>
          <td class="text-right">
            <div class="dropdown">
              <a class="btn btn-light dropdown-toggle" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
              <div class="dropdown-menu dropdown-menu-right">
                <% if policy([:admin, ErpModel.new]).edit? %>
                  <%= link_to 'Edit', edit_admin_erp_model_path(erp_model), class: 'modal-remote-form-link dropdown-item' %>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @erp_models, list_classes: %w(pagination justify-content-center) %>

