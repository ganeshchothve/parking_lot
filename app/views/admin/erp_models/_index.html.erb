<table class='table my-customer-table responsive-tbl'>
  <thead class="th-default">
    <% labels = t('mongoid.attributes.scheme').with_indifferent_access %>
      <thead>
        <tr class="bg-gradient-cd white">
          <th>Resource Class</th>
          <th>Domain</th>
          <th>Action</th>
          <th>State</th>
          <th>Actions</th>
        </tr>
      </thead>
  </thead>
  <tbody>
    <% @erp_models.each do |erp_model| %>
        <tr>
          <td>
            <%= t("erp_models.resource_class.#{erp_model.resource_class}") %>
          </td>
          <td>
            <%= erp_model.domain.present? ? erp_model.domain : "-" %>
          </td>
          <td>
            <%= erp_model.action_name.present? ? erp_model.action_name : "-" %>
          </td>
          <td>
            <%= erp_model.is_active ? "active" : "inactive" %>
          </td>
          <td>
            <div class="dropdown show text-center">
              <a class="btn dropdown-toggle table-dropdown-btn black-clr" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span></span><span></span><span></span></a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <% if policy([:admin, ErpModel.new]).edit? %>
                  <%= link_to 'Edit', edit_admin_erp_model_path(erp_model), class: 'modal-remote-form-link dropdown-item' %>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
      <tr>
      <td colspan="6">
        <div class="mt-5 pt-5"></div>
      </td>
    </tr>
  </tbody>
</table>
<div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 pb-2">
  <%= will_paginate @erp_models, list_classes: %w(pagination justify-content-center) %>
</div>
