<table class='table my-customer-table responsive-tbl'>
  <thead class="th-default">
    <thead>
      <tr class="bg-gradient-cd white">
        <th><%= t('mongoid.attributes.erp_model.resource_class') %></th>
        <th><%= t('mongoid.attributes.erp_model.domain') %></th>
        <th><%= t('mongoid.attributes.erp_model.action_name') %></th>
        <th><%= t('mongoid.attributes.erp_model.is_active') %></th>
        <th class="text-right"><%= t('global.action', count: 3) %></th>
      </tr>
    </thead>
  </thead>
  <tbody>
    <% @erp_models.each do |erp_model| %>
        <tr>
          <td>
            <%= t("erp_models.resource_class.#{erp_model.resource_class}") %>
          </td>
          <td>
            <%= erp_model.domain || '-' %>
          </td>
          <td>
            <%= erp_model.action_name || '-' %>
          </td>
          <td>
            <%= t("mongoid.attributes.erp_model/is_active.#{erp_model.is_active || false}") %>
          </td>
          <td>
            <div class="dropdown show text-right">
              <a class="btn dropdown-toggle table-dropdown-btn black-clr" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span></span><span></span><span></span></a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <% if policy([:admin, ErpModel.new]).edit? %>
                  <%= link_to t('helpers.edit.link_name', model: ErpModel.model_name.human), edit_admin_erp_model_path(erp_model), class: 'modal-remote-form-link dropdown-item' %>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>
<div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 pb-2">
  <%= will_paginate @erp_models, list_classes: %w(pagination justify-content-center) %>
</div>
