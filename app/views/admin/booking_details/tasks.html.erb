<%= form_for([:admin, @booking_detail], local: true, remote: true, html: {class: 'modal-remote-form validate-form', "data-resource-type": Checklist.model_name.human(count: 2), "data-type": "json", id: 'booking_detail_tasks_form'}) do |f| %>
<div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="title"><%= t('controller.booking_details.tasks.header') %></h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body theme-form">
        <div class="row">
          <%= f.fields_for :tasks, @booking_detail.tasks.order('order ASC') do |task| %>
            <%= task.hidden_field :completed_by_id , id: "#{task.object.key}_by"%>
              <div class="radioStyle col-lg-12 my-2 row">
              <div class="col-1 px-0">
                <%= task.check_box :completed, autofocus: true, disabled: !policy([current_user_role_group, task.object]).editable_field?('completed'), id: "#{task.object.key}", class: 'check-input align-middle mt-1' %>
              </div>
              <div class="col-11 px-0">
                <%= task.label :completed, "<p class='pre display-block mb-0 fn-16'>#{task.object.name}</p>".html_safe, for: "#{task.object.key}" %>
              </div>
                <div class="col-12 ps-4" id = <%= "#{task.object.key}_div" %> >
                  <% if task.object.completed %>
                    <small class = 'description' >
                      <%= task.object.completed_by.try(:name) %> completed at <%= I18n.l(task.object.completed_at.localtime, format: :long) %>
                    </small>
                  <% end %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer text-end">
        <%= f.submit I18n.t("global.submit"), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
<%= javascript_tag do %>
$(document).ready(function(){
  $('#booking_detail_tasks_form .check-input').on("change", function(){
    if($(this).prop('checked') == true){
      var current_user_id = <%= raw current_user.id.to_json %>
      var current_user_name = <%= raw current_user.name.to_json %>
      var current_date = <%= raw I18n.l(DateTime.now, format: :long).to_json %>
      $("#" + $(this).attr('id') + "_by").val(current_user_id)
      var description = "<small class = 'description'>"+current_user_name+" completed at "+ current_date +"</small>"
      $("#" + $(this).attr('id') + "_div").append(description)
    }
    else{
      $("#" + $(this).attr('id') + "_div").find('.description').remove();
      $("#" + $(this).attr('id') + "_by").val('')
    }
  });
  FormInitializer.init($("#booking_detail_tasks_form"));
});
<% end %>
