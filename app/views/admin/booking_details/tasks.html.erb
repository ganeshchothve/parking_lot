<%= form_for([:admin, @booking_detail], local: true, remote: true, html: {class: 'modal-remote-form validate-form', "data-resource-type": Checklist.model_name.human(count: 2), "data-type": "json", id: 'booking_detail_form'}) do |f| %>
<div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header bg-gradient-cd white">
        <h3 class="title"><%= t('controller.booking_details.tasks.header') %></h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="white">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= f.fields_for :tasks, @booking_detail.tasks do |task| %>
          <%= task.hidden_field :completed_by_id , id: "#{task.object.key}_by"%>
          <div class="form-group">
            <div class="form-check mt-3">
              <%= task.check_box :completed, autofocus: true, class: "form-check-input", id: "#{task.object.key}" %>
              <%= task.label task.object.name, class: 'form-check-label' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
<%= javascript_tag do %>
$(document).ready(function(){
  $('.form-check-input').on("change", function(){
    if($(this).prop('checked') == true){
      var current_user_id = <%= raw current_user.id.to_json %>
      $("#" + $(this).attr('id') + "_by").val(current_user_id)
    }
    else{
      $("#" + $(this).attr('id') + "_by").val('')
    }
  });
  FormInitializer.init($("#booking_detail_form"));
});
<% end %>
