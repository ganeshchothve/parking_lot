<section class="mt-0">
  <div class="px-0">
    <div class="row g-0">
        <div class="col-lg-12 p-0">
          <% booking_details.each do |booking_detail| %>
          <div class="bg-white rounded-3 float-start wd-100 mt-4 shadow-sm position-relative">
            <div class="float-start wd-100">
              <div class="">
                <div>
                  <div class="inner-info d-flex justify-content-between">
                    <div class="ps-3 py-3">
                      <p class="fn-16 font-medium theme-txt-color mb-0 pt-2"><%= booking_detail.project_unit.project_tower_name %> | <%= booking_detail.project.name %> <span class="mx-2">-</span><span class="font-normal"><%= booking_detail.bedrooms %> BHK</span></p>
                     
                    </div>
                    <div class="pe-3 py-3">
                      <a href="javascript:;" class="border rounded py-1 px-2 me-2 txt-light-blue d-inline-block fn-14 font-medium">Raise Brokerage Invoice</a>
                      <div class="dropdown d-inline-block">
                        <a href="javascript:void(0);" id="dropdownMenuLink" data-bs-toggle="dropdown"
                          aria-haspopup="true" aria-expanded="false">
                          <i class="fa fa-ellipsis-v theme-txt-color" aria-hidden="true"></i></a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                          <%= render "#{current_user_role_group}/booking_details/links", booking_detail: booking_detail, link_name: '' %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="border-bottom col-12"></div>
                </div>
                <div class="d-flex justify-content-between">
                  <div class="ps-3 py-3">
                    <p class="mb-0 theme-txt-color mb-0 font-medium"><%= link_to booking_detail.name, [current_user_role_group, booking_detail], class: "theme-txt-color"  %></p>
                  </div>
                  <div class="inner-info">
                    <div class="pe-3 py-3  d-flex justify-content-end">
                      <p class="fn-16 secondary mb-0 font-medium"><span class="txt-light-blue">Agreement Value:</span> <span class="theme-txt-color"><%= number_to_indian_currency(booking_detail.calculate_agreement_price.round) %></span></p>
                      <span class="txt-light-blue mx-3">| </span>
                      <p class="font-medium fn-14 mb-0 theme-txt-color mb-0"><i class='fa fa-circle status_<%= BookingDetail.human_attribute_name("status.#{booking_detail.status}").downcase.gsub(' ', '_') %>  me-2 fa-sm'></i><%= BookingDetail.human_attribute_name("status.#{booking_detail.status}") %></p>
                      
                    </div>
                  </div>
                </div>
            </div>
            </div>
          </div>
            
            <% end %>
          </div>

        <!----------- Pagination ---------->
        <div class="col-lg-12 py-3 bg-white mb-2 px-3 mt-3 shadow-sm">
          <div class="row">
            <div class="col-lg-6 pt-2">
              <p class="table-entry mb-0">Showing 1 - 5 of <%= @booking_details.total_entries %> items</p>
            </div>
            <div class="col-lg-6 table-pagination">
              <%= will_paginate booking_details, list_classes: %w(pagination justify-content-end) %>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
