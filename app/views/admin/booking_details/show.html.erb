<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <%= render 'dashboard/booking_detail_overview', {booking_detail: @booking_detail, with_actions: true } %>

      <div class="mt-3"></div>
      <%= render 'sync_logs/sync', { record: @booking_detail } if current_client.external_api_integration? && policy([current_user_role_group, SyncLog.new]).index? %>

      <% if @scheme.present? %>
        <div class="mt-3"></div>
        <div class="box-card">
          <div class="box-header bg-gradient br-rd-tr-4">
            <h2>Scheme</h2>
          </div>
          <div class="box-content br-rd-bl-4 bg-white p-0 pt-1">
            <div class="pd-box">
              <div>
                Derived from scheme: <b><%= @scheme.derived_from_scheme.name %></b>
              </div>
              <br/>
              <% if @scheme.payment_adjustments.present? %>
                <h5>Payment adjustments</h5>
                <% @scheme.payment_adjustments.each do |adjustment| %>
                  <div class="box-card">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-md-4">
                          <p>Name</p>
                          <p><%= adjustment.name %></p>
                        </div>
                        <div class="col-md-4">
                          <p>Field</p>
                          <p><%= adjustment.field.titleize %></p>
                        </div>
                        <div class="col-md-4">
                          <p>Value</p>
                          <p><%= adjustment.value(@booking_detail.project_unit) %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="mt-2"></div>
      <div class="box-card">
        <div class="box-content p-0">
          <%= render 'dashboard/booking_detail_cost_sheet', booking_detail: @booking_detail %>
        </div>
      </div>
      <div class="box-card">
        <div class="box-content p-0">
          <%= render "dashboard/project_unit_payment_schedule", booking_detail: @booking_detail %>
        </div>
      </div>
    </div>
  </div>
</div>
