<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <% if current_client.cancellation_amount > 0 %>
        <div class="alert alert-danger">
          <%= t('controller.booking_details.receipts.refund_disclaimer') %>
        </div>
      <% end %>
      <div class="card">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-9">
              <% if policy([:admin, Receipt.new(user: @user, booking_detail: @booking_detail)]).new? %>
                <%= link_to t('controller.booking_details.receipts.new.link_name'), new_admin_user_booking_detail_receipt_path(@user, @booking_detail), class: 'btn btn-primary modal-remote-form-link float-left mr-2' %>
              <% end %>

              <% if policy([:admin, Receipt]).export? && @receipt.blank? %>
                <div class="dropdown float-left mr-2">
                  <a class="btn btn-light dropdown-toggle" href="javascript:;" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= t('controller.receipts.exports.link_name', name: nil)%></a>
                  <div class="dropdown-menu dropdown-menu-right">
                    <%= link_to t('controller.receipts.exports.link_name', name: t('global.all')), export_admin_receipts_path, class: 'dropdown-item' %>
                    <%= link_to t('controller.receipts.exports.link_name', name: t('global.active_filter')), export_admin_receipts_path(fltrs: params["fltrs"].as_json), class: 'dropdown-item' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <%= render 'receipts/index', {receipts: @receipts} %>
        </div>
      </div>
    </div>
  </div>
</div>
