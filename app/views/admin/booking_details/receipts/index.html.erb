<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-md-6 col-sm-12 row px-1">
        <div class="table-title pt-1 col-3 pl-0">
          <h1 class="title icon-rupee-black icon-set"><%= @receipts.total_entries %> <%= Receipt.model_name.human(count: @receipts.total_entries) %>
          </h1>
        </div>
        <div class="col-6">
          <% if current_client.cancellation_amount > 0 %>
            <div class="text-help">
              <%= t('controller.booking_details.receipts.form.refund_disclaimer') %>
            </div>
          <% end %>
        </div>

        <div class="col-3 pr-0">
          <% if policy([:admin, Receipt.new(user: @user, booking_detail: @booking_detail)]).new? %>
            <%= link_to t('controller.booking_details.receipts.new.link_name'), new_admin_user_booking_detail_receipt_path(@user, @booking_detail), class: 'btn btn-primary modal-remote-form-link float-right' %>
          <% end %>
        </div>

        <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
          <div class="box-card relative">
            <%= render 'receipts/index', {receipts: @receipts} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
