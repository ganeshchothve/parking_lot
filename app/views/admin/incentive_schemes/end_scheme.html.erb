<%= nested_form_for([:admin, @incentive_scheme], local: true, remote: true, html: {class: 'modal-remote-form validate-form', "data-resource-type": global_labels['incentive_schemes'], "data-type": "json", id: 'end_scheme_incentive_scheme_form'}) do |f| %>
<div class="modal fade right fixed-header-footer" role="dialog" id="modal-remote-form-inner">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">

      <div class="modal-header bg-gradient-cd white">
        <h3 class="title"><%= t("controller.incentive_schemes.#{action_name}.link_name") %></h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="white">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <h5> Are you sure you want to end this incentive scheme ? </h5>
        <%= f.hidden_field :ends_on, value: Date.current %>
      </div>

      <div class="modal-footer">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>

    </div>
  </div>
</div>
<% end %>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#end_scheme_incentive_scheme_form"));
});
<% end %>
