<div class="table-responsive">
  <table class='table striped-table payment-breakup' width="100%" cellpadding="10" cellspacing="0">
    <thead class="th-default">
      <tr>
        <th>Subject Class</th>
        <th>Changed By</th>
        <th>Action Type</th>
        <!-- <th>Executed Time</th> -->
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @audits.each do |audit| %>
      <tr>
        <td>
          <%= audit.subject_class %>
        </td>
        <td>
          <%= audit.user_name %>
        </td>
        <td>
          <%= audit.change_type %>
        </td>
        <!-- <td>
          <%#= audit.modified_at %>
        </td> -->

        <td class="text-right">
          <%= link_to "Show","javascript:;", data: {toggle: "modal", target: "#audit_entry_modal"}, class: "btn btn-primary btn-sm" %>
            <div class="modal fade right fixed-header-footer" role="dialog" id="audit_entry_modal">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <div class="modal-title">Audit Entries</div>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <% @audit_entries =  Audit::Entry.where(audit_id: audit.id )%>
              <%=render "admin/audit/entries/show",{audit_entries: @audit_entries} %>
            </div>
          </div>
        </div>
      </div>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @audits, list_classes: %w(pagination justify-content-center) %>
