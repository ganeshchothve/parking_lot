<% f.object.build_external_inventory_view_config if f.object.external_inventory_view_config.blank? %>
<%= f.fields_for :external_inventory_view_config do |eivc_form| %>
  <div class="card">
    <div class="card-header">
      External Inventory View Configuration
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= eivc_form.label :provider %>
            <%= eivc_form.select :provider, ExternalInventoryViewConfig.available_providers.collect{|x| [x[:text], x[:id]]}, {}, class: 'selectize', disabled: (policy(eivc_form.object).editable_field?("provider") ? false : true) %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= eivc_form.label :url %>
            <%= eivc_form.url_field :url, class: 'form-control', disabled: (policy(eivc_form.object).editable_field?("url") ? false : true) %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= eivc_form.label :status, class: 'label-required' %>
        <%= eivc_form.select :status, ExternalInventoryViewConfig.available_statuses.collect{|x| [x[:text], x[:id]]}, {}, class: 'selectize', required: 'required', disabled: (policy(eivc_form.object).editable_field?("status") ? false : true) %>
      </div>
    </div>
  </div>
<% end %>