</div>
<div class="row">
  <div class="col-md-12">
    <div class="mb-3">
      <%= f.label :team_lead_dashboard_access_roles %>
      <%= f.select :team_lead_dashboard_access_roles, filter_tl_dashboard_access_options, {}, class: 'selectize', multiple: true, disabled: !(policy([current_user_role_group, f.object]).editable_field?("team_lead_dashboard_access_roles")) %>
    </div>
  </div>
</div>
