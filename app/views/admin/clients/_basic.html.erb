<div class="row">
  <% if policy([:admin, @client]).editable_field?("name") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :name, class: 'label-required' %>
        <%= f.text_field :name, class: 'form-control', autofocus: true, required: 'required', disabled: (policy([:admin, @client]).editable_field?("name") ? false : true) %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("industry") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :industry %>
        <%= f.select :industry, I18n.t("mongoid.attributes.client/industries").collect{|k,v| [v, k.to_s]}, {}, class: 'selectize', required: true, disabled: (policy([:admin, @client]).editable_field?("industry") ? false : true) %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("email_domains") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :email_domains %>
        <%= f.select :email_domains, @client.email_domains, {}, class: 'selectize-tags domain', multiple: true, disabled: (policy([:admin, @client]).editable_field?("email_domains") ? false : true) %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("cin_number") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :cin_number %>
        <%= f.text_field :cin_number, class: 'form-control', disabled: (policy([:admin, @client]).editable_field?("cin_number") ? false : true) %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("disclaimer") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :disclaimer %>
        <%= f.text_area :disclaimer, class: 'form-control', disabled: (policy([:admin, @client]).editable_field?("disclaimer") ? false : true) %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("cp_disclaimer") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :cp_disclaimer %>
        <%= f.text_area :cp_disclaimer, class: 'form-control', disabled: (policy([:admin, @client]).editable_field?("cp_disclaimer") ? false : true) %>
        <%= f.label :cp_disclaimer_sort, class: 'txt-light-blue font-normal' %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("website_link") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :website_link %>
        <%= f.url_field :website_link, class: 'form-control', disabled: (policy([:admin, @client]).editable_field?("website_link") ? false : true) %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("preferred_login") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :preferred_login %>
        <%= f.select :preferred_login, I18n.t("mongoid.attributes.client/available_preferred_logins").collect{|k,v| [v, k.to_s]}, {}, class: 'selectize', disabled: (policy([:admin, @client]).editable_field?("preferred_login") ? false : true) %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("lead_blocking_days") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :lead_blocking_days %>
        <%= f.number_field :lead_blocking_days, class: 'form-control', disabled: !(policy([:admin, @client]).editable_field?("lead_blocking_days")) %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("incentive_gst_slabs") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :incentive_gst_slabs %>
        <%= f.select :incentive_gst_slabs, f.object.incentive_gst_slabs, {},  class: "selectize-tags", multiple: true, required: true, disabled: !policy([current_user_role_group, @client]).editable_field?("incentive_gst_slabs") %>
      </div>
    </div>
  <% end %>
  <% if policy([:admin, @client]).editable_field?("enable_lead_conflicts") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :enable_lead_conflicts %>
        <%= f.select :enable_lead_conflicts, Client::LEAD_CONFLICT.collect{|x| [t("mongoid.attributes.client/lead_conflict.#{x}"), x] }, {}, class: 'selectize', disabled: !(policy([:admin, @client]).editable_field?("enable_lead_conflicts")) %>
      </div>
    </div>
  <% end %>

  <% if policy([:admin, @client]).editable_field?("enable_direct_activation_for_cp") %>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :enable_direct_activation_for_cp, t('helpers.edit.direct_activation_for_cp_label', model: Client.model_name.human) %>
        <div class="form-check form-check-inline">
          <%= f.radio_button :enable_direct_activation_for_cp, true, class: "form-check-input wd-22" %>
          <%= f.label :enable_direct_activation_for_cp, I18n.t("global.boolean.true"), class: "form-check-label d-inline-block ms-2" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :enable_direct_activation_for_cp, false, class: "form-check-input wd-22" %>
          <%= f.label :enable_direct_activation_for_cp, I18n.t("global.boolean.false"), class: "form-check-label d-inline-block ms-2" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

