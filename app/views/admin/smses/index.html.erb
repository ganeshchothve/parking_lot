<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1">
          <h1 class="title icon-set icon-sms-black">
            <%= Sms.model_name.human(count: @smses.total_entries ) %>
          </h1>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">
          <% if policy([:admin, Sms]).sms_pulse? %>
            <%= link_to "SMS Pulse", sms_pulse_admin_smses_path, class: 'db-small-btn light-blue bg-white fn-400 btn' %>
          <% end %>
          <button disabled="disabled" class="db-small-btn light-blue bg-white fn-400"><%= t('global.total')%> : <%= @smses.total_entries %></button>
          <button class="db-filter-btn white fn-500" type="button">
            <i class="icon-set icon-filter-light-blue"></i>
          </button>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'index', {smses: @smses} %>
          <div class="filter-box">
            <%= render 'filters', url: admin_smses_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
