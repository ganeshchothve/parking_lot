<table class='table my-customer-table responsive-tbl caption-top rounded mt-2 mb-0'>
  <thead class="th-default">
      <thead>
        <tr class="bg-primary white">
          <% unless current_user.buyer? %>
            <th><%= t('mongoid.attributes.sms.to') %></th>
          <% end %>
          <th> <%= t('mongoid.attributes.sms.content') %> </th>
          <th> <%= t('mongoid.attributes.sms.status') %></th>
          <th> <%= t('mongoid.attributes.sms.sent_on') %></th>
          <th class="text-right wd-22"></th>
        </tr>
      </thead>
  </thead>
  <tbody>
    <% @smses.each do |sms| %>
        <tr>
          <% unless current_user.buyer? %>
            <td  data-title=<%= t('mongoid.attributes.sms.to') %> >
              <% sms.to.each do |s| %>
                <%= link_to s,"javascript:;", data: {toggle: "modal", target: "#sms_show_#{sms.id.to_s}"}, class: "theme-txt-color" %>
              <% end %>
            </td>
          <% end %>
          <td data-title=<%= t('mongoid.attributes.sms.content') %> ><%= truncate(sms.body, length: 30, separator: '') %></td>
          <td data-title=<%= t('mongoid.attributes.sms.status') %> >
            <%= t("mongoid.attributes.sms/status.#{sms.status}") %>
          </td>
          <td data-title=<%= t('mongoid.attributes.sms.sent_on') %> >
            <%= sms.sent_on.try(:strftime, '%b %e, %Y, %l:%M %p') || '-' %>
            <div class="modal fade right fixed-header-footer" role="dialog" id="sms_show_<%=sms.id.to_s %>">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <div class="title">SMS</div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body theme-form">
                    <% @sms = Sms.find(sms.id) %>
                    <%=render "admin/smses/show",{sms: @sms} %>
                  </div>
                </div>
              </div>
            </div>
          </td>
          <td>
          <div class="dropdown show text-end">
          <a class="btn table-dropdown-btn black-clr" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
              <%= link_to t("controller.smses.show.link_name"), "javascript:;", data: {toggle: "modal", target: "#sms_show_#{sms.id.to_s}"}, class: 'dropdown-item' %>
           </div>
        </div>
        </td>
        </tr>
      <% end %>
  </tbody>
</table>
<div class="col-lg-12 py-3 bg-white mb-2 px-2">
  <div class="row">
    <div class="col-lg-6">
      <p class="table-entry mb-0 ps-2 pt-2"><%= page_entries_info smses %></p>
    </div>
    <div class="col-lg-6 table-pagination">
      <%= will_paginate @smses, list_classes: %w(pagination justify-content-end) %>
    </div>
  </div>
</div>