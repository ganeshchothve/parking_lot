<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1">
          <h1 class="title icon-set icon-sms-black">
            SMS Pulse
          </h1>
        </div>
      </div>
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-btn-set float-right pb-3">
          <button class="db-filter-btn white fn-500" type="button">
            <i class="icon-set icon-filter-light-blue"></i>
          </button>
        </div>
      </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <% if @sms_pulse.is_a?(Hash) %>
            <table class='table my-customer-table responsive-tbl mb-5'>
              <thead class="th-default">
                  <thead>
                    <tr class="bg-gradient-cd white">
                      <th>Month</th>
                      <% Sms::SMS_GATEWAYS.sort.each do |gateway| %>
                        <th><%= gateway.titleize %></th>
                      <% end %>
                    </tr>
                  </thead>
              </thead>
              <tbody>
                <% @sms_pulse.each do |key, value| %>
                  <tr>
                    <% unless key == 'Total' %>
                      <td data-title='Month'><%= key %></td>
                      <% Sms::SMS_GATEWAYS.sort.each do |gateway| %>
                        <td class='non-action-td' data-title='<%= gateway.titleize %>'><%= value[gateway].try(:to_i) || 0 %></td>
                      <% end %>
                    <% else %>
                      <td data-title='All Time'><strong><%= key %></strong></td>
                      <% Sms::SMS_GATEWAYS.sort.each do |gateway| %>
                        <td class='non-action-td' data-title='<%= gateway.titleize %> Total'><strong><%= value[gateway].try(:to_i) || 0 %></strong></td>
                      <% end %>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <%= @sms_pulse %>
          <% end %>
          <div class="filter-box">
            <%= render 'sms_pulse_filter', url: sms_pulse_admin_smses_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
