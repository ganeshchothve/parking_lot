<section class="mb-5">
  <div class="container">
    <div class="row">
    <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
      <!--<div class="table-title pt-1">
        <img src="<%= asset_path 'file-contract-black.svg' %>" alt="user icon"> <h1 class="title"><%= ::Template.model_name.human %></h1>
      </div>-->
      <div class="filter-search">
        <input type="text" name="" placeholder="Search projects">
      </div>
      <div class="filter-popup">
        <a class="db-filter-btn fn-500" href="javascript:;">
          <i class="fa fa-filter fill-theme"></i>
        </a>
      </div>
    </div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <table class='table my-customer-table responsive-tbl caption-top rounded mt-3 mb-0'>
            <thead class="th-default">
              <tr class="bg-gradient-cd white">
                <th><%= t('mongoid.attributes.template.name') %></th>
                <th><%= t('mongoid.attributes.template.content') %></th>
                <th class="text-right">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @templates.each do |template| %>
                <tr>
                  <td>
                    <%= t("templates.#{template.name}") rescue template._type.split("::").last %>
                    <div class='small'>
                      <strong><%= template.project.try(:name) %></strong>
                    </div>
                  </td>
                  <td><%= template.content %></td>
                  <td >
                    <div class = 'dropdown show text-right'>
                      <a class="btn table-dropdown-btn black-clr" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></a>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <% if TemplatePolicy.new(current_user, template).edit? %>
                          <%= link_to t('helpers.edit.link_name', model: ::Template.model_name.human), edit_admin_client_template_path(template), class: 'dropdown-item modal-remote-form-link' %>
                        <% end %>
                      </div>
                    </div>
                   </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="col-lg-12 py-3 white mb-2 px-2">
            <div class="row">
            <div class="col-lg-6">
              <p class="table-entry">Showing 1 - 5 of <%= @templates.total_entries %> items</p>
            </div>
            <div class="col-lg-6 table-pagination">
              <%= will_paginate @templates, list_classes: %w(pagination justify-content-end) %>
            </div>
          </div>
          </div>
          <div class="filter-box">
            <%= render "filters" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

