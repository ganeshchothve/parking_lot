<table class='table my-customer-table responsive-tbl'>
  <thead class="th-default">
    <thead>
      <tr class="bg-primary white">
        <th><%= t('mongoid.attributes.phase.phase_name') %></th>
        <th><%= t('mongoid.attributes.phase.account_name') %></th>
        <th class="text-right"><%= t('global.action', count: 3)%></th>
      </tr>
    </thead>
  </thead>
  <tbody>
    <% phases.each do |phase| %>
      <tr>
        <td><%= phase.name %></td>
        <td>
          <%= phase.account.try('name') || t('global.default_account_name') %>
        </td>
        <td>
          <div class="dropdown show text-right">
          <a class="btn dropdown-toggle table-dropdown-btn black-clr" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span></span><span></span><span></span></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <%= link_to t('helpers.edit.link_name', model: Phase.model_name.human), edit_admin_phase_path(phase), class: 'modal-remote-form-link dropdown-item' %>
           </div>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 pb-2">
  <%= will_paginate phases, list_classes: %w(pagination justify-content-center) %>
</div>
