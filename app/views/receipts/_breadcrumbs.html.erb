<%= content_for :breadcrumbs do %>
  <% unless current_user.buyer? %>
  <div class="col-md-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb"   style="float:right;">
        <li class="breadcrumb-item"><a href="<%= home_path(current_user) %>">Dashboard</a></li>
        <% if user.present? %>
          <% if policy([current_user_role_group, Lead]).index? %>
            <li class="breadcrumb-item"><a href="<%= admin_leads_path %>">Deals</a></li>
          <% end %>
          <% if policy([current_user_role_group, Lead]).show? %>
            <li class="breadcrumb-item"><a href="<%= admin_lead_path(lead) %>"><%= lead.name %></a></li>
          <% end %>
        <% end %>
        <% if project_unit.present? %>
          <% if policy([current_user_role_group, Lead]).index? %>
            <li class="breadcrumb-item"><a href="<%= admin_lead_project_units_path(lead) %>"><%= "#{global_labels['project_units']}" %></a></li>
          <% end %>
        <% end %>
        <li class="breadcrumb-item active" aria-current="page"><%= global_labels['receipts'] %></li>
      </ol>
    </nav>
  </div>

  <% end %>
<% end %>
  <div class="clearfix"></div>
