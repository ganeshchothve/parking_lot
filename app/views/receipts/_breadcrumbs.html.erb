<%= content_for :breadcrumbs do %>
  <% unless current_user.buyer? %>
  <div class="col-md-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb"   style="float:right;">
        <li class="breadcrumb-item"><a href="<%= home_path(current_user) %>">Dashboard</a></li>
        <% if user.present? %>
          <% if UserPolicy.new(current_user, User).index? %>
            <li class="breadcrumb-item"><a href="<%= admin_users_path %>">Users</a></li>
          <% end %>
          <% if UserPolicy.new(current_user, user).show? %>
            <li class="breadcrumb-item"><a href="<%= admin_user_path(user) %>"><%= user.name %></a></li>
          <% end %>
        <% end %>
        <% if project_unit.present? %>
          <% if UserPolicy.new(current_user, ProjectUnit).index? %>
            <li class="breadcrumb-item"><a href="<%= admin_user_project_units_path(user) %>"><%= "#{global_labels['project_units']}" %></a></li>
          <% end %>
        <% end %>
        <li class="breadcrumb-item active" aria-current="page"><%= global_labels['receipts'] %></li>
      </ol>
    </nav>
  </div>

  <% end %>
<% end %>
  <div class="clearfix"></div>
