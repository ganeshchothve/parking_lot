<section class="projects-list device-pd">
  <div class="container">
    <div class="row">
      <div class="separate-line"></div>
      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 my-4 no-pd">
        <div class="box-card">
          <div class="box-header br-rd-tr-4 row mb-3">
            <a data-toggle="collapse" href="#my-receipts" role="button" aria-expanded="false" aria-controls="dashboard_users" class='font-weight-bold text-decoration-none col-12 p-0'>
              <h2 class="text-dark icon-set icon-rupee-black">
                <%= t('controller.buyer.dashboard.payments') %>
                <span class="badge bg-gradient white"> <%= @receipts.total_entries %></span>
              </h2>
            </a>
          </div>
          <div class="box-content collapse show br-rd-bl-4 bg-white p-0" id="my-receipts">
            <%= render "receipts/index", receipts: @receipts %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>