<table class='table my-customer-table responsive-tbl'>
  <thead class="th-default">
    <thead>
      <tr class="bg-gradient-cd white">
        <th><%= User.model_name.human %></th>
        <th><%= t('mongoid.attributes.receipt.receipt_id') %></th>
        <th><%= t('mongoid.attributes.receipt.token_number')%></th>
        <th><%= t('mongoid.attributes.receipt.status') %></th>
        <th><%= t('mongoid.attributes.receipt.total_amount') %></th>
        <th class="text-right"><%= t('global.actions', count: 3)%></th>
      </tr>
    </thead>
  </thead>
  <tbody>
    <% receipts.each do |receipt| %>
      <%= render 'receipts/details', receipt: receipt %>
    <% end %>
  </tbody>
</table>
<div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 pt-2">
  <%= will_paginate receipts, list_classes: %w(pagination justify-content-center) %>
</div>
