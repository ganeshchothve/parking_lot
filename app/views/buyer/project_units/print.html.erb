<div class="container form-group mt-3 text-right pr-0">
  <button onclick="window.print();" class="btn btn-primary d-print-none">Print</button>
</div>
<div class="container bg-light">
  <div class="pt-3"></div>
  <% if @user.present? %>
    <%= render file: 'admin/users/print' %>
    <div class="page-break"></div>
  <% else %>
    <div class="text-center">
      <%= image_tag current_client.logo.url, class: "img-thumbnail", style: "max-height: 65px;" %>
    </div>
  <% end %>
  <div class="mt-3"></div>
  <%= render 'dashboard/project_unit_overview', {project_unit: @project_unit, with_actions: false} %>
  <div class="card mt-3 card-body">
    <%= @project_unit.cost_sheet_template.parsed_content(@project_unit) %>
  </div>
  <div class="page-break"></div>
  <div class="card mt-3 card-body">
    <%= @project_unit.payment_schedule_template.parsed_content(@project_unit) %>
  </div>
  <div class="text-center text-muted small mt-3">This is an electronically generated customer form.</div>
  <div class="pt-3"></div>
</div>
<%= javascript_tag do %>
  window.print();
<% end %>
