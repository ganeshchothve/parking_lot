<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-7">
              <% if Buyer::UserKycPolicy.new(current_user, UserKyc.new(user: @user)).new? %>
                <%= link_to "Add #{global_labels['user_kyc']}", new_buyer_user_kyc_path, class: 'btn btn-primary modal-remote-form-link', data:{event_category: 'Section', event_action: 'Click', event_name: 'Add User KYC Co Applicant'} %>
              <% end %>
            </div>
            <div class="col-md-5 text-md-right">
              <h6 class="mt-2">Total <%= global_labels[:user_kycs] %>: <%= @user_kycs.total_entries %></h6>
            </div>
          </div>
          <%= render 'admin/user_kycs/index', {user_kycs: @user_kycs} %>
        </div>
      </div>
    </div>
  </div>
</div>
