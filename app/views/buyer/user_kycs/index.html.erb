<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12 no-pd">
        <div class="table-title pt-1">
          <h1 class="title">
            <%= image_tag 'file-kycs-black' %>
            <%= @user_kycs.total_entries %>
            <%= UserKyc.model_name.human(count: @user_kycs.total_entries) %>
          </h1>
        </div>
      </div>
      <div class="col-lg-4 col-xs-12 col-md-6 col-sm-12 no-pd">
      </div>
      <div class="col-lg-2 col-xs-12 col-md-6 col-sm-12 no-pd">
        <% if Buyer::UserKycPolicy.new(current_user, UserKyc.new(user: @user)).new? %>
          <%= link_to t('controller.user_requests.new.link_name'), new_buyer_user_kyc_path, class: 'btn btn-primary modal-remote-form-link float-right', data:{event_category: 'Section', event_action: 'Click', event_name: 'Add User KYC Co Applicant'} %>
        <% end %>
      </div>

      <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12 no-pd">
        <div class="box-card relative">
          <%= render 'admin/user_kycs/index', {user_kycs: @user_kycs} %>
        </div>
      </div>
    </div>
  </div>
</section>
