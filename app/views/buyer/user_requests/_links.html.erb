<% if policy([:buyer, Asset.new(assetable: user_request)]).index? %>
  <%= link_to Asset.model_name.human, assetables_path(assetable_type: user_request.class.model_name.i18n_key.to_s, assetable_id: user_request.id), class: 'dropdown-item modal-remote-form-link' %>
<% end %>

<% if Buyer::UserRequestPolicy.new(current_user, user_request).edit? && current_user.buyer? %>
  <%= link_to 'Edit', edit_buyer_user_request_path(user_request, request_type: user_request.class.model_name.element), class: 'modal-remote-form-link dropdown-item' %>
<% end %>

<% if policy([:buyer, user_request]).choose_template_for_print? %>
  <%= link_to t('controller.templates.choose_template_for_print.link_name'), choose_template_for_print_buyer_custom_templates_path(subject_class: user_request.class.model_name.i18n_key.to_s, subject_class_id: user_request.id.to_s), class: 'dropdown-item modal-remote-form-link' %>
<% end %>