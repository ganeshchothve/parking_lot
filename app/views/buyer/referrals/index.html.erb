<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-8">
              <span class="ml-2">
                <span class="float-left mr-2"> <%= t('referrals.code') %> : </span>
                <span class="usere-referral-code col-3 p-0 float-left"><%= get_referral_code %></span>
              </span>
              <span class="invite-friend-link"><%= invite_friend_link %></span>
            </div>
            <div class="col-4 text-right">
              <span>
                <%= "#{t('global.total')} #{t('referrals.name')}" %>: <%= @referrals.total_entries %>
              </span>
            </div>
          </div>
          <div class="row mt-2">
            <%= render "buyer/users/index", users: @referrals %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>