<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-8">
              <span class="ml-2">
                <span class="float-left mr-2"> <%= t('referrals.code') %> : </span>
                <span class="usere-referral-code col-3 p-0 float-left"><%= get_referral_code %></span>
              </span>
              <% if policy([:buyer, :referral]).new? %>
                <%= link_to t('referrals.new.link_name'), new_buyer_referral_path, class: 'btn btn-primary modal-remote-form-link pull-left ml-2 btn-sm', data:{ event_category: 'Section', event_action: 'Click', event_name: 'Invite Friend'} %>
              <% end %>
            </div>
            <div class="col-4 text-right">
              <span>
                <%= "#{t('global.total')} #{t('referrals.name')}" %>: <%= @referrals.total_entries %>
              </span>
            </div>
          </div>
          <div class="row mt-2">
            <%= render "buyer/users/index", users: @referrals %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>