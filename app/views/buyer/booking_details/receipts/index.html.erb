<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <% if current_client.cancellation_amount > 0 %>
        <div class="alert alert-danger">
          Refund Payments will be subject to cancellation charges
        </div>
      <% end %>
      <div class="card">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-9">
              <% if policy([:buyer, Receipt.new(user: @user, booking_detail: @booking_detail)]).new? %>
                <%= link_to "#{@booking_detail.name}", new_buyer_user_booking_detail_receipt_path(@booking_detail.user_id, @booking_detail.id), class: 'btn btn-primary modal-remote-form-link' %>
              <% end %>
            </div>
            <div class="col-3 text-md-right">
              <h6 class="mt-2">Total <%= t('global.receipts') %>: <%= @receipts.total_entries %></h6>
            </div>
          </div>
          <%= render 'receipts/index', {receipts: @receipts} %>
        </div>
      </div>
    </div>
  </div>
</div>
