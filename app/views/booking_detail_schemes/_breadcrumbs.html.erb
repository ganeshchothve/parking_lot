<%= content_for :breadcrumbs do %>
  <% unless current_user.buyer? %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%= home_path(current_user) %>">Dashboard</a></li>
      <% if scheme.present? %>
        <% if SchemePolicy.new(current_user, Scheme).index? %>
          <li class="breadcrumb-item"><a href="<%= admin_schemes_path %>">Schemes</a></li>
        <% end %>
        <% if SchemePolicy.new(current_user, scheme).show? %>
          <li class="breadcrumb-item"><a href="<%= admin_scheme_path(scheme) %>"><%= scheme.name %></a></li>
        <% end %>
      <% end %>
    </ol>
  </nav>
  <% end %>
<% end %>
