<!DOCTYPE html>
<html>
  <head>
    <title>BookingPortal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'dashboard_new' %>
    <%= javascript_include_tag 'dashboard' %>
    <%= javascript_tag do %>
      <% if user_signed_in? %>
        if(typeof App === "undefined"){
          App = {};
        }
        App.current_user = <%= raw current_user.to_json %>;
      <% end %>
    <% end %>
</head>
<body>
<div id="notify"></div>
<section class="dashboard-bg full-height">
  <div class="container">
    <div class="col-7 login-card">
    <a href="javascript:void(0);" class="logo-wrapper">
      <img src="<%= asset_path "embassy_springs_logo.png" %>" class="img-responsive" />
    </a>
    <div class="pageTitle purple text-center">Sign in</div>
      <div class="subTitle purple text-center">Welcome Back!</div>
      <div class="form-wrapper">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'validate-form'}) do |f| %>
          <div class="form-field-wrapper">
            <%#= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-field', placeholder: 'Email' %>
          </div>

          <div class="form-field-wrapper">
            <%#= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-field', placeholder: 'Password' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-field-wrapper">
              <label class="checkbox">Remember Me
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <span class="checkmark"></span>
              </label>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: 'btn pink-button' %>
          </div>
        <% end %>
      </div>
      <div class="col-12 separator relative text-center">
        <div class="part-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-12 prompts-message gradient-bg text-center">
        <p>XX people have booked a home since you last signed in</p>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>
</body>
</html>


<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#new_user"));
});
<% end %>
