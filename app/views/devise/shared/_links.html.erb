<% resource_name = resource_name || :user %>
<div class="mt-3"></div>
<div class="card">
  <div class="card-header">
    <%= booked_homes_count %> people have booked a home since you last signed in
  </div>
  <div class="card-body">
    <nav class="nav">
      <%= link_to "Register", register_path, data:{event_category: 'Section', event_action: 'Click', event_name: 'Sign Up'}, class: "nav-item nav-link" %>
      <%= link_to "Register as Channel Partner", new_channel_partner_path, data:{event_category: 'Section', event_action: 'Click', event_name: 'Register Channel Partner'}, class: "nav-item nav-link" %>

      <%- if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), data:{event_category: 'Section', event_action: 'Click', event_name: 'Log In'}, class: "nav-item nav-link" %>
      <% end -%>

      <%- if defined?(devise_mapping) %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), data:{event_category: 'Section', event_action: 'Click', event_name: 'Sign up'}, class: "nav-item nav-link" %>
        <% end -%>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name),  data:{event_category: 'Section', event_action: 'Click', event_name: 'Forgot your password?'}, class: "nav-item nav-link" %>
        <% end -%>

        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), data:{event_category: 'Section', event_action: 'Click', event_name: 'Didnt receive unlock instructions'}, class: "nav-item nav-link" %>
        <% end -%>

        <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),  data:{event_category: 'Section', event_action: 'Click', event_name: 'Didnt receive unlock instructions'}, class: "nav-item nav-link" %>
        <% end -%>

        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "nav-item nav-link" %>
          <% end -%>
        <% end -%>
      <% end -%>
    </nav>
  </div>
</div>
