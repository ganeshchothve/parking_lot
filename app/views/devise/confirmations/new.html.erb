<div class="row justify-content-center">
  <div class="col-7">
    <div class="card">
      <div class="card-body">
        <a href="javascript:void(0);" class="logo-wrapper text-center d-block mb-3">
          <img src="<%= asset_path current_client.logo.url %>" class="img-responsive" />
        </a>
        <h3 class="text-center">Resend Confirmation Instructions</h3>
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "validate-form" }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control", placeholder: "example@amuratech.com" %>
        </div>
        <div class="form-group">
          <%= f.submit "Resend confirmation instructions", class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
