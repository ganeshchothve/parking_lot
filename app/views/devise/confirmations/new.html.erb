<h2 class="font-weight-bold text-success">Resend Confirmation Instructions</h2>
<p class="text-muted">We will share a new confirmation-link on your registered email address</p>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { id: "confirmation_form", method: :post, class: "validate-form" }) do |f| %>
<%= devise_error_messages! %>
<% if current_client.preferred_login == "phone" %>
  <div class="form-group">
    <%= f.label :phone %><br />
    <%= f.phone_field :login, autofocus: true, autocomplete: "phone", class: 'form-control', placeholder: 'Phone' %>
  </div>
<% else %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :login, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
  </div>
<% end %>
<div class="form-group">
  <%= f.submit "Resend confirmation instructions", class: 'btn btn-primary' %>
</div>
<% end %>
<%= render "devise/shared/links" %>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#confirmation_form"));
});
<% end %>
