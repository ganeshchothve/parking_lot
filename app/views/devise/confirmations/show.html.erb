<div class="row">
  <div class="col-md-6">
    <%= form_for resource, :as => resource_name, :url => update_user_confirmation_path, :html => {:method => 'put', role: "form"}, :id => 'activation-form' do |f| %>
      <% if resource.errors.present? %>
      <div class="alert alert-danger">
        <%= devise_error_messages! %>
      </div>
      <% end %>
      <%= hidden_field_tag :confirmation_token, params[:confirmation_token] %>
      <% if @requires_password %>
        <div class="form-group">
          <%= f.label :password, class: "control-label label-required" %>
          <%= f.password_field :password, autofocus: true, placeholder: "Password", tabindex: "1", required: "required", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: "control-label label-required" %>
          <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", tabindex: "2", required: "required", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Activate", class: 'btn btn-primary' %>
        </div>
        <hr/>
        <div class="mt-2">
          <div class='devise-shared-links'>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
