<style type="text/css">
  @media all and (max-width: 700px){
    .prompts-message{
      top: 85px;
    }
    .login-card .subTitle{
      margin-top: 60px;
    }
    .pink-button{
      padding: 8px 10px;
      font-size: 14px;
    }
  }
</style>
<section class="dashboard-bg full-height white-bg-xs">
  <div class="container">
    <div class="col-7 login-card-wrapper">
      <div class="login-card">
        <a href="javascript:void(0);" class="logo-wrapper">
          <img src="<%= asset_path current_client.logo.url %>" class="img-responsive" />
        </a>
        <div class="subTitle purple text-center">Forgot your password?</div>
        <div class="form-wrapper">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'validate-form' }) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-field-wrapper">
                <%#= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-field', placeholder:'Email' %>
              </div>

              <div class="actions">
                <%= f.submit "Send me reset password instructions", class: 'btn btn-primary',  data:{event_category: 'Section', event_action: 'Click', event_name: 'Send me reset password instructions'}  %>
              </div>
            <% end %>
        </div>
        <div class="col-12 separator relative text-center">
          <div class="part-links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</section>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#new_user"));
});
<% end %>

<%#= render "devise/shared/links" %>
