<div class="row justify-content-center">
  <div class="col-7">
    <div class="card">
      <div class="card-body">
        <a href="javascript:void(0);" class="logo-wrapper text-center d-block mb-3">
          <img src="<%= asset_path current_client.logo.url %>" class="img-responsive" />
        </a>
        <h3 class="text-center">Reset Password</h3>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'validate-form' }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder:'Email' %>
        </div>
        <div class="form-group">
          <%= f.submit "Send reset password instructions", class: 'btn btn-primary',  data:{event_category: 'Section', event_action: 'Click', event_name: 'Send me reset password instructions'}  %>
        </div>
      <% end %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#new_user"));
});
<% end %>
