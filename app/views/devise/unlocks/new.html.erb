<section class="auth login-page">
  <div class="container no-pd">
    <div class="col-lg-5 col-xs-12 col-md-12 col-sm-12 no-pd">
      <div class="login-form-wrapper pt-5">
        <p> <strong>Resend unlock instructions</strong></p>
          <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'validate-form pb-5' }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: false %>
            </div>

            <div class="signin-btn col-lg-12 pl-0 pr-0 pt-5 pb-5">
              <%= f.submit "Resend unlock instructions", class: 'sign-in-btn' %>
            </div>
          <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
<%= javascript_tag do %>
$(document).ready(function(){
  FormInitializer.init($("#confirmation_form"));
});
<% end %>
