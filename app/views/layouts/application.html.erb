<!DOCTYPE html>
<html>
  <head>
    <title>BookingPortal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://js.pusher.com/4.1/pusher.min.js"></script>
    <%= javascript_tag do %>
      <% if user_signed_in? %>
        if(typeof App === "undefined"){
          App = {};
        }
        App.current_user = <%= raw current_user.to_json %>
      <% end %>
      <% if Rails.env.development? || Rails.env.staging? %>
      Pusher.logToConsole = true;
      <% end %>
    <% end %>
  </head>
  <body>
    <div class="container-fluid" style="<% if (params[:controller] == "channel_partners" && params[:action] == "new") || (params[:controller] == "devise/sessions" && params[:action] == "new") %>display:none;<% end %>">
      Welcome to Booking Portal
      <% unless user_signed_in? %>
        <%= link_to 'Register', register_path %>
        <%= link_to 'Sign in', new_user_session_path %>
        <%= link_to 'Register as Channel Partner', new_channel_partner_path %>
      <% else %>
        <%= link_to 'Dashboard', dashboard_path %>
      <% end %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <%= yield %>
  </body>
</html>
