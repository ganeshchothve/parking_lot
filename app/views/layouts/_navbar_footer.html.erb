<footer class="bg-white footer p-0 pt-2 pb-2">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 no-pd">
        <div class="footer-top">
          <p class="m-0 pb-2"><%= current_project.name %> is registered via MahaRERA No.: <%= current_project.rera_registration_no %> & is available on <a href="https://maharera.mahaonline.gov.in" target="_blank">https://maharera.mahaonline.gov.in</a>.</p>
        </div>
      </div>
      <div class="col-lg-6 col-md-8 col-xs-12 col-sm-12 no-pd">
        <ul class="footer-menu float-left mb-0">
          <%= bottom_navigation %>
        </ul>
      </div>
      <div class="col-lg-6 col-md-4 col-xs-12 col-sm-12 no-pd">
        <ul class="footer-menu float-right mb-0">
          <li class='nav-item'>
            <div class="btn-group dropup" style="padding: 0.29em;">
              <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= t("language.#{params[:locale] || I18n.default_locale }", default: "language.en")%>
              </a>
              <div class="dropdown-menu">
                <% ['en', 'mr'].each do |language| %>
                  <%= link_to t("language.#{language}"), url_for(params.permit!.merge(locale: language) ), class: 'dropdown-item' %>
                <% end %>
              </div>
            </div>
          </li>
          <li><%= link_to 'Powered by Amura', 'https://www.amuratech.com', class: 'footer-link', target: "_blank" %></li>
        </ul>
      </div>
    </div>
  </div>
</footer>
