                  <%= I18n.t("navbar.text.whatsapp_chat") %>
                </a>
              </h5>
            </div>
          </div>
          <% if current_client.present? %>
            <div class="card mb-3">
              <div class="card-body">
                <h6 class="card-subtitle text-muted">
                  <i class="fa fa-phone-alt fill-theme me-2 fa-sm"></i><%= I18n.t("navbar.text.reach_helpdesk") %>
                <div class="mt-3">
                  <a href="tel: <%= current_client.channel_partner_support_number %>">
                    <%= current_client.channel_partner_support_number %>
                  </a>
                </div>
                </h6>
              </div>
            </div>
          <% end %>
          <% if current_client.present? %>
            <div class="card mb-3">
              <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted"><i class="fa fa-envelope fill-theme me-2 fa-sm"></i><%= I18n.t("navbar.text.write_us") %></h6>
                <div>
                  <a href="mailto: +<%= current_client.channel_partner_support_email %>" target="_blank">
                    <%= current_client.channel_partner_support_email %>
                  </a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
