<% if user_signed_in? %>
  <% if (%w(select_client)).include?params[:action] %>
    <%= render "layouts/partials/before_login_header" %>
  <% else %>
    <header>
      <div class="header-topbar">
        <div class="header-inner">
          <div class="header-logo float-start">
            <%= link_to ((current_client.present? && current_client.logo.present?) ? (image_tag current_client.logo.url, class: 'img-fluid', alt: "Logo") : "launchpad-logo.png"), dashboard_path, class: 'navbar-brand me-0'%>
          </div>

          <div class="float-start">
            <nav class="navbar navbar-expand-lg shadow-none px-0">
              <div class="container-fluid px-0">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <%= render "layouts/navbar/#{current_user_role_group}" %>
                </div>
              </div>
            </nav>
          </div>

          <div class="float-end d-sm-inline-block">
            <div class="account-menu d-sm-inline-block dropdown">
              <% if current_user.role.in?(%w(cp_owner channel_partner)) %>
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#needHelpModal">
                  <%= I18n.t("global.link_to.need_help") %>
                </button>
              <% end %>
              <a href="javascript:;" class="dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="user-first-ltr"><%= "#{current_user.first_name.try(:[], 0)}#{current_user.last_name.try(:[], 0)}" %></span>
                <!--<span class="user-name"><%= t('welcome', name: current_user.first_name ) %></span>-->
              </a>
              <div class="dropdown-menu user-menu-top" aria-labelledby="navbarDropdown">
                <%= link_to t('controller.users.profile.link_name', role: User.human_attribute_name("role.#{current_user.role}")), [:edit, current_user_role_group, current_user], class: "dropdown-item modal-remote-form-link" %>
                <%= link_to t('controller.users.change_password.link_name'), [:update_password, current_user_role_group, current_user], class: "dropdown-item modal-remote-form-link" %>
                <% if policy([:admin, current_user]).move_to_next_state? %>
                  <% if current_user.may_break? %>
                    <%= link_to I18n.t("global.link_to.take_break"), move_to_next_state_admin_user_path(current_user, status: 'break', format: :json), method: 'patch', remote: true, data: { disable_with: 'Taking Break...' }, class: 'dropdown-item break move-to-next-state' %>
                  <% elsif current_user.may_available? %>
                    <%= link_to I18n.t("global.link_to.resume_work"), move_to_next_state_admin_user_path(current_user, status: 'available', format: :json), method: 'patch', remote: true, data: { disable_with: 'Resuming Work...' }, class: 'dropdown-item available move-to-next-state' %>
                  <% end %>
                <% end %>
                <% if policy([current_user_role_group, Client.new]).switch_client? %>
                  <%= link_to t('controller.home.select_client.link_name'), admin_select_clients_path, class: "dropdown-item" %>
                <% end %>
                <%= link_to t(I18n.t("devise.keys.sign_out"), scope: "devise"), destroy_session_path(current_user), class: "dropdown-item", method: :delete %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
  <% end %>
<% else %>
  <%= render "layouts/partials/before_login_header" %>
<% end %>

<% if user_signed_in? %>
  <div class="modal fade" id="needHelpModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%= I18n.t("global.link_to.need_help") %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <% manager = current_user.manager %>
          <% if manager.present? %>
