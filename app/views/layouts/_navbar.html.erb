</header>
<% end %>
<% else %>
<%= render "layouts/partials/before_login_header" %>
<% end %>

<%= javascript_tag do %>
$('document').ready(function(){
var alert = <%= raw alert.to_json %>
var notice = <%= raw notice.to_json %>
if(notice){
Amura.global_success_handler(notice);
} else if(alert){
Amura.global_error_handler(alert);
}
});
<% end %>