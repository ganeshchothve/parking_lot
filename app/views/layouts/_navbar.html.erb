              <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted"><%= I18n.t("mongoid.attributes.user.your_relationship_manager") %></h6>
                <div class="mt-3">
                  <label class="small text-muted"><%= I18n.t("mongoid.attributes.user.name") %></label>
                  <div><%= manager.name %></div>
                </div>
                <div class="row mt-3">
                  <div class="col-6">
                    <label class="small text-muted"><i class="fa fa-envelope fill-theme me-2 ms-2 fa-sm"></i><%= I18n.t("mongoid.attributes.user.email") %></label>
                    <div>
                      <a href="mailto: <%= manager.email %>" class=""><%= manager.email %></a>
                    </div>
                  </div>
                  <div class="col-6">
                    <label class="small text-muted"><i class="fa fa-phone-alt fill-theme me-2 fa-sm"></i><%= I18n.t("global.link_to.call") %></label>
                    <div>
                      <a href="tel: <%= manager.phone %>" class=""><%= manager.phone %></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
