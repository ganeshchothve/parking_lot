      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-198536912-1', 'auto');
      ga('require', 'displayfeatures');
      ga('require', 'ecommerce', 'ecommerce.js');
      ga('send', 'pageview'); 
    </script>
  </head>
<body>
<% if params[:controller] == 'channel_partners' %>
  <%= render 'layouts/partials/landing_page_header' %>
<% else %>
  <%= render 'layouts/partials/landing_page_default_header' %>
<% end %>


<%= yield %>

<footer class="col-app-12">
    <div class="desktop-footer col-app-12">
      <div class="container-launchpad">
        <div class="col-app-8 col-app-xs-12">
          Copyrights &copy; Amura Marketing Technologies. <%= Date.current.year %>. <%= link_to 'Privacy Policy', privacy_policy_path, class: 'footer-link' %> <span> | </span> <%= link_to 'Terms and Conditions', terms_and_conditions_path, class: 'footer-link' %>
        </div>
        <div class="col-app-4 col-app-xs-12">
          <div class="social-links">
            <a href="https://www.facebook.com/amuratech/" target="_blank">
              <img data-src="<%= asset_path 'facebook-icon.png' %>" class="lazy">
            </a>
            <a href="https://www.instagram.com/amuratech/" target="_blank">
              <img data-src="<%= asset_path 'insta-icon.png' %>" class="lazy">
            </a>
            <a href="https://twitter.com/amuratech" target="_blank">
              <img data-src="<%= asset_path 'twitter-icon.png' %>" class="lazy">
            </a>
            <a href="https://www.linkedin.com/company/amura-marketing-technologies-pvt-ltd/" target="_blank">
              <img data-src="<%= asset_path 'linkedin-icon.png' %>" class="lazy">
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="mobile-footer visible-xs visible-portrait fixed text-center col-app-12">
        <div class="mob-number col-app-6">                
            &nbsp;<a href="tel:02067082786" style="font-weight: 700; color: #000;">020 6708 2786</span>
        </div>
        <div class="enquiry col-app-6">
            <a class="green-btn mobile-enquire-button relative register-btn" data-event-category="Footer" data-event-action="Click" data-event-name="Register Now">Register Now</a>
        </div>            
    </div>
  </footer>

<div id="overlay" style="display:none;">
  <div id="popup">
    <div class="site-visit-wrapper">
    <div id="close"  data-event-category="Section" data-event-action="Click" data-event-name="Close">&times;</div>
      <%= simple_form_for(@channel_partner, local: true, html: { id: 'channel_partner_form', class: 'validate-form', multipart: true, novalidate: false }) do |form| %>
        <%= render "channel_partners/short_form_fields", {form: form} %>
        <div class="signin-btn pl-0 pr-0 pb-4">
          <%= form.submit "Register", class: "green-btn sign-in-btn", data: { disable_with: "Please wait..." } %>
        </div>
        <hr/>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>              
   </div>
</div>
<%= javascript_include_tag 'script' %>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#channel_partner_form"));
    <% if params[:action] == 'create' && @channel_partner.errors.present? %>
    $('.register-btn:first').trigger('click');
    <% end %>
  });
<% end %>
