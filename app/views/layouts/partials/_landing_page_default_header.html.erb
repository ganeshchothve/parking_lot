<header class="col-app-12 fixed left top shrink sticky-header">
    <div class="container">
        <div class="pull-left left-header nav-links">
            <a href="/" rel="home" class="brand-logo"><img src="<%= asset_path 'launchpad-blue-logo.png' %>" data-event-category="Header" data-event-action="Click" data-event-name="Logo" /></a>
        </div>
        <div class="pull-right right-header">
            <div class="pull-right upper-right-header hidden-xs hidden-portrait">
              <div class="pull-right ml-2">
                <%= link_to 'Sign in', new_user_session_path, class: 'green-btn sign-in-button' %>
              </div>
              <div class="enquire-now-wrapper pull-right">
                <a data-event-category="Header" data-event-action="Click" data-event-name="Register on Launchpad" class="enquire-now-btn green-btn register-btn">Register on Launchpad</a>
              </div>
              
              <div class="pull-right callnumber ">
                <span>Call:&nbsp;&nbsp;</span><span>020 6708 2786</span>
              </div>
              
            </div>
            <div class="clearfix"></div>               
        </div>
        <div class="clearfix"></div>
    </div>      
</header>