<div class="modal fade right fixed-header-footer" role="dialog" id="payment_schedule_modal_<%= project_unit.id %>">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">Payment Schedule</div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "dashboard/project_unit_payment_schedule", project_unit: project_unit %>
      </div>
    </div>
  </div>
</div>