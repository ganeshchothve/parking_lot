<%= content_for :breadcrumbs do %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%= home_path(current_user) %>">Dashboard</a></li>
      <% if email.present? %>
        <li class="breadcrumb-item"><a href="<%= emails_path %>">Email</a></li>
      <% else %>
        <li class="breadcrumb-item active" aria-current="page">Emails</li>
      <% end %>
    </ol>
  </nav>
<% end %>
