<p>
  <strong>To:</strong>
  <%= current_user.email %>
</p>

<p>
  <strong>Subject:</strong>
  <%= @email.subject %>
</p>

<p>
  <strong>Status:</strong>
  <%= @email.status %>
</p>

<p>
  <strong>Sent On:</strong>
  <% if @email.sent_on.blank? %>
    <%= "--" %>
  <% else %>
    <%= @email.sent_on.strftime("%d/%m/%Y") %>
  <% end %>
</p>

<p>
  <%= @email.body.html_safe %>
</p>

<%= link_to 'Back', emails_path %>
