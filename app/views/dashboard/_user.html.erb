<style type="text/css">
	.table{
		width: 100%;
	}
	.thead-default{
		background-color: #edeef0;
	}
</style>
<section class="main-wrapper full-height grey">
	<div class="container-fluid">
		<div class="clearfix"></div>
		<% if current_user.project_units.size < 1%>
		<div class="col-12 text-center banner-offer">
			<div class="col-2 green-bg pull-left">
				LAUNCHING
			</div>
			<div class="col-10 pull-right">
				<span>Embassy Edge - 1, 2 & 3 BHK Apartments from Rs. 36 Lac at Embassy Springs</span>
			</div>
			<div class="clearfix"></div>
		</div>
		<div class="clearfix"></div>
		<div class="col-12 mediaCentercontent white-bg steps-wrapper">
			<h1 class="text-center">
				Reserve your Embassy Home today by paying just Rs. 30,000*<br/> Book in 4 easy steps
			</h1>
			<div class="reasons-wrapper mtop30">
				<div class="col-3">
					<img src="<%= asset_path '4easysteps_1.png'%>" class="img-responsive">
					<div class="caption">
						Choose a<br/> type of home<br/>
						<span>(by number of bedrooms<br/> or by budget)</span>
					</div>
				</div>
				<div class="col-3">
					<img src="<%= asset_path '4easysteps_2.png'%>" class="img-responsive">
					<div class="caption">
						Choose <br/> the tower<br/>
					</div>
				</div>
				<div class="col-3">
					<img src="<%= asset_path '4easysteps_3.png'%>" class="img-responsive">
					<div class="caption">
						Select your<br/> apartment<br/>
					</div>
				</div>
				<div class="col-3 last">
					<img src="<%= asset_path '4easysteps_4.png'%>" class="img-responsive">
					<div class="caption">
						Pay agreement<br/> amount<br/>
					</div>
				</div>
				<div class="clearfix"></div>
				<div class="text-center mtop30">
					<a href="/dashboard/apartment-selector" class="pink banner-btn btn-anim">Choose Your Embassy Home</a>
				</div>
			</div>
		</div>
		<div class="col-12">
			<ul class="mediaCenterAccordion">
				<li>
					<span class="pageTitle">5 Reasons to live at Embassy Edge</span>
					<div class="mediaCentercontent">
						<% if current_user.sign_in_count > 1 %>
							<div class="reasons-wrapper">
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_1.png'%>" class="img-responsive">
									<div class="caption">
										Discover an abundance of natural air and light.
									</div>
								</div>
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_2.png'%>" class="img-responsive">
									<div class="caption">
										Smart Living - with Ample of built-in storage spaces
									</div>
								</div>
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_3.png'%>" class="img-responsive">
									<div class="caption">
										Discover a World of Amenities
									</div>
								</div>
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_4.png'%>" class="img-responsive">
									<div class="caption">
										A part of Embassy Springs Township
									</div>
								</div>
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_5.png'%>" class="img-responsive">
									<div class="caption">
										Intelligent Design and Smart Homes designed for New Mindset
									</div>
								</div>
								<div class="clearfix"></div>
								<div class="text-center mtop30">
									<a href="/dashboard/apartment-selector" class="pink banner-btn btn-anim">Choose Your Embassy Home</a>
								</div>
							</div>
						<% else %>
							<div class="reasons-wrapper">
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_1.png'%>" class="img-responsive">
									<div class="caption">
										It's located within embassy Springs - a 254-acre township in Devanahalli
									</div>
								</div>
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_2.png'%>" class="img-responsive">
									<div class="caption">
										The development itself sprawls out across 40 acres in the township
									</div>
								</div>
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_3.png'%>" class="img-responsive">
									<div class="caption">
										You get your own range of amenities, in addition to township amenities
									</div>
								</div>
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_4.png'%>" class="img-responsive">
									<div class="caption">
										Your home comes with all the benefits, high quality and assurance of buying with Embassy
									</div>
								</div>
								<div class="col-2-5">
									<img src="<%= asset_path '5reasonstolive_5.png'%>" class="img-responsive">
									<div class="caption">
										You can accomplish your dream of owing an Embassy home, at never-seen-before prices
									</div>
								</div>
								<div class="clearfix"></div>
								<div class="text-center">
									<a href="/dashboard/apartment-selector" class="pink banner-btn btn-anim">Choose Your Embassy Home</a>
								</div>
							</div>
						<% end %>
					</div>
				</li>
			</ul>
		</div>

		<div class="clearfix"></div>
		<% else %>
		<div class="col-12">
			<%= render 'project_units', {project_units: current_user.project_units.where(status: 'hold')} %>
			<%= render 'project_units', {project_units: current_user.project_units.ne(status: 'hold')} %>
		</div>
		<br/><br/>
		<div class="col-12 text-center">
			<div class="text-center">
				<br/>
				<a href="/dashboard/apartment-selector" class="pink banner-btn btn-anim">
					Book another Embassy Home
				</a>
			</div>
		</div>
		<% end %>
		<div class="clearfix"></div>
	<div class="col-12">
		<% current_user.receipts.where(status: 'clearance_pending').each do |receipt| %>
		<div>
			<% if receipt.status == 'clearance_pending' && receipt.project_unit_id.blank? && receipt.reference_project_unit_id.present? && receipt.reference_project_unit.status == 'available' %>
	        	To block chosen unit: <%= ProjectUnit.find(receipt.reference_project_unit_id).name %> <a href='<%= dashboard_checkout_via_email_url(project_unit_id: receipt.reference_project_unit_id, receipt_id: receipt.receipt_id) %>'>Click here</a>
		    	<% end %>
		</div>
		<% end %>
	</div>
</div>
</section>
