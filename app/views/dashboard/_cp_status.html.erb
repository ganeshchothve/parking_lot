<div class="box-card relative table-responsive mb-5">
  <table class="table my-customer-table responsive-tbl mb-0">
    <thead class="th-default">
      <tr class="bg-primary white">
        <th><%= t("mongoid.attributes.user/role.cp") %>Name</th>
        <th>No. of Inactive CP</th>
        <th>No. of Active CP</th>
        <th>No. of Pending CP</th>
        <th>NO. of Rejected CP</th>
      </tr>
    </thead>
    <tbody>
      <% @hash.each do |key, value| %>
          <tr>
            <td data-title='Sourcing manager Name'><%= value[:name] %></td>
            <td data-title='Sourcing manager Name'><%= value[:inactive] %></td>
            <td data-title='Sourcing manager Name'><%= value[:active] %></td>
            <td data-title='Sourcing manager Name'><%= value[:pending] %></td>
            <td data-title='Sourcing manager Name'><%= value[:rejected] %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>