<div class="box-card relative table-responsive mb-5">
  <table class="table my-customer-table responsive-tbl mb-0">
    <thead class="th-default">
      <tr class="bg-primary white">
        <th><%= t("mongoid.attributes.user/role.cp") %></th>
        <th><%= t("dashboard.cp_admin.cp_status.inactive") %></th>
        <th><%= t("dashboard.cp_admin.cp_status.active") %></th>
        <th><%= t("dashboard.cp_admin.cp_status.pending") %></th>
        <th><%= t("dashboard.cp_admin.cp_status.rejected") %></th>
        <th><%= t("global.total") %></th>
      </tr>
    </thead>
    <tbody>
      <% @channel_partners_status.each do |key, value| %>
          <tr>
            <td data-title='<%= t("mongoid.attributes.user/role.cp") %>'><%= value[:name] %></td>
            <td data-title='<%= t("dashboard.cp_admin.cp_status.inactive") %>'><%= value[:inactive] %></td>
            <td data-title='<%= t("dashboard.cp_admin.cp_status.active") %>'><%= value[:active] %></td>
            <td data-title='<%= t("dashboard.cp_admin.cp_status.pending") %>'><%= value[:pending] %></td>
            <td data-title='<%= t("dashboard.cp_admin.cp_status.rejected") %>'><%= value[:rejected] %></td>
            <td data-title='<%= t("global.total") %>'><%= value[:total_count] %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>