<style type="text/css">
.apartment-selector-wrapper .title {
  background-color: #fff;
  margin: 0px;
  border-left: 10px solid #444444;
  /* border: 2px solid #ececec; */
  border-radius: 6px;
  font-weight: 400;
  font-size: 18px;
  color: #444444;
  padding: 10px 15px;
  font-family: 'Roboto Condensed', sans-serif;
  /* font-weight: 900; */
}
.apartment-selector-wrapper .client-detail-wrapper {
  background-color: #fff;
  margin: 10px 0px;
  /* border: 2px solid #ececec; */
  border-radius: 6px;
  font-weight: 500;
  font-size: 28px;
  color: #6c6c6c;
  padding: 5px 15px;
  border-left: 15px solid #444444;
}
.client-detail {
  padding: 15px 0px 0px 0px;
}
.pull-left {
  float: left !important;
}
.tower-info-wrapper {
  padding: 20px 0px 20px 20px;
}
.pull-right {
  float: right !important;
}
.tower-info-wrapper .padding-left-30 {
  padding-left: 30px;
}
.tower-info-wrapper > div {
  font-size: 16px;
  line-height: 26px;
  font-weight: 400;
}
.clearfix {
  clear: both;
}
.f22 {
  font-size: 22px;
}
.bold {
  font-weight: 500;
}
.table-wrapper {
  border-radius: 0px;
  border-color: #ccc;
}
.payment-table, .payment-breakup {
  border: 1px solid #ddd;
}
.payment-breakup tr:nth-child(odd), .payment-table tr:nth-child(odd) {
  background: #f9f9f9;
}
.payment-breakup th {
  background-color: #efefef;
  color: #4c80bd;
  padding: 10px;
  font-size: 16px;
  font-weight: 500;
}
.text-center {
  text-align: center;
}
.payment-breakup td, .receipt-table td {
  border-bottom: 0px solid #ccc;
  padding: 15px;
  font-size: 14px;
}
.payment-breakup td.pink {
  background-color: #c3c3c3;
  color: #424242;
  font-size: 14px;
}
.payment-breakup.mediaCenterAccordion {
  border: none;
}
.payment-breakup.mediaCenterAccordion > li {
  display: inline-block;
  list-style: none;
  width: 100%;
  margin: 0px 0%;
  vertical-align: top;
  border-bottom: 1px solid #9b9b9e;
  padding: 10px 0px;
}
.payment-breakup.mediaCenterAccordion li > span {
  background-image: asset-url('Plus-Icon.png');
  background-repeat: no-repeat;
  background-position: 99.5% 6px;
  background-size: 23px;
  cursor: pointer;
  font-size: 16px;
  color: #232323;
  display: block;
  margin: 1px 3px;
  padding: 6px 0px;
  background-color: transparent;
  border: 0px;
}
.mediaCenterAccordion > li > div {
  width: 100%;
  list-style: none;
  padding: 0px 0px 0px 0px;
  /*display: none;*/
  overflow: auto;
}
.payment-breakup tr td:last-child, .payment-breakup tr th:last-child {
  text-align: right;
}
.text-center{
  text-align: center;
}
</style>
<div class="col-12">
  <div class="col-12">
    <div class="col-8 xs-100">
      <div class="apartment-selector-wrapper">
        <div class="col-12 client-detail-wrapper">
          <div class="client-detail">
            <span class="pink">Name: <%= @user.name %></span>
            <span class="pink">Flat No: <%= @project_unit.name %></span>
          </div>
          <div class="tower-info-wrapper left-padding-0">
            <div class="pull-left">Tower: <%= @project_unit.project_tower_name %><br>Floor: <%= @project_unit.floor %><br>Flat no: <%= @project_unit.name %><br></div>
            <div class="pull-left padding-left-30">
              Configuration: <%= @project_unit.bedrooms %> BHK<br/>
              Super Built-Up Area: <%= @project_unit.saleable %> Sq.Ft.<br/>
              Usable Area: <%= @project_unit.usable %> Sq.Ft.<br/>
              Carpet Area: <%= @project_unit.carpet %> Sq.Ft.<br/>
              Agreement Value: <%= number_to_indian_currency(@project_unit.agreement_price) %><br/>
              All inclusive total (excluding registration charges) : <%= number_to_indian_currency(@project_unit.all_inclusive_price) %><br/>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
  <%= render partial: "admin/project_units/payment_breakup", locals: {project_unit: @project_unit} %>
</div>
