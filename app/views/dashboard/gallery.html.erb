<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <div id="client_gallery" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
              <% current_client.gallery.assets.each_with_index do |asset, index| %>
              <div class="carousel-item <%= index == 0 ? "active" : "" %>">
                <img class="d-block w-100" src="<%= asset.file.url %>" />
              </div>
              <% end %>
            </div>
            <a class="carousel-control-prev" href="#client_gallery" role="button" data-slide="prev">
              <span class="fas fa-chevron-left text-dark" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#client_gallery" role="button" data-slide="next">
              <span class="fas fa-chevron-right text-dark" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_tag do %>
  $(document).ready(function(){
    $('#client_gallery').carousel({
      interval: 5000
    });
  });
<% end %>
