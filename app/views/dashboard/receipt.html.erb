<section class="main-wrapper">
	<div class="container padding-xs-0">
		<div class="col-12 padding-xs-0">
				<div class="col-12 padding-xs-0">
					<div class="pull-left">
						<p class="pageTitle big pink">PAYMENT SUCCESS!</p>
					</div>
					<div class="pull-right" style="padding-right:10px;">
						<!-- <a href="/dashboard/receipt-print"><img src="<%#= asset_path 'printer-outline.png'%>" class="img-responsive"></a> -->
					<%= link_to dashboard_receipt_mail_path(@receipt.id, :format => 'pdf'), target: :_blank do %>
						<img src="<%= asset_path 'printer-outline.png'%>" class="img-responsive">
					<% end%>
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="clearfix"></div>
				<div class="col-12 padding-xs-0">
					<div class="receipt-wrapper">
						<div class="applicant-wrapper pull-left text-left">
							<img src="<%= asset_path 'embassy-springs.jpg' %>" class="img-responsive">
						</div>
						<div class="pull-right text-right payment-details-wrapper">
							Date: <strong><%= @receipt.created_at.strftime('%d %b %Y') %></strong><br/>
							Receipt: <strong><%= @receipt.receipt_id %></strong><br/>
							CIN No. <strong>885110KA1995PTC01795</strong>
						</div>
						<div class="clearfix"></div>
						<div class="tower-info-wrapper pink">
							<div class="tower-specs">
								<div class="col-6">
									<span class="title">Paid By:</span>
									<span class="specs"><%= @receipt.user.name %></span><br/>
									<span class="specs"><%= @receipt.user.user_kycs.first.house_number %>, </span>
									<span class="specs"><%= @receipt.user.user_kycs.first.street %>, </span><br/>
									<span class="specs"><%= @receipt.user.user_kycs.first.city %> -  </span>
									<span class="specs"><%= @receipt.user.user_kycs.first.postal_code %>, </span><br/>
									<span class="specs"><%= @receipt.user.user_kycs.first.state %>, </span>
									<span class="specs"><%= @receipt.user.user_kycs.first.country %></span>
								</div>
								<div class="col-6">
									<span class="title">Paid To:</span>
									<span class="specs">NAM Estates Pvt. Ltd., No. 150, Embassy Point, First Floor, Infantry Road, Bangalore â€“ 560001, India</span>
								</div>
								<div class="clearfix"></div>
							</div>
							<div class="tower-specs">
								<div class="col-4">
									<span class="title">Pan Card:</span>
									<span class="specs"><%= @receipt.user.user_kycs.first.pan_number %></span>
								</div>
								<div class="col-4">
									<span class="title">Project:</span>
									<span class="specs">Embassy Edge</span>
								</div>
								<div class="col-4">
									<span class="title">Unit No:</span>
									<span class="specs"><%= @receipt.project_unit.present? ? @receipt.project_unit.name : @receipt.reference_project_unit.name%></span>
								</div>
								<div class="clearfix"></div>
							</div>
						</div>
						<div class="receipt-table-wrapper table-responsive">
							<table width="100%" cellpadding="10" cellspacing="0" border="0" outline="0" class="receipt-table" align="center">
								<tr>
									<th>
										Date
									</th>
									<th>
										Payment Mode<!-- Cheque / DD / Online -->
									</th>
									<th>
										Reference Details<!-- Bank / Branch -->
									</th>
									<th>
										Amount
									</th>
								</tr>
								<tr>
									<td><%= @receipt.processed_on %></td>
									<td><%= @receipt.payment_mode %></td>
									<td class="text-left">
								  <% if @receipt.payment_mode == "online" %>
									Reference ID: <%= @receipt.payment_identifier %>
									<% else %>
									Cheque / DD Number:<%= @receipt.payment_identifier %><br/> Bank Name: <%= @receipt.issuing_bank %> <br/> Bank Branch :<%= @receipt.issuing_bank_branch %>
									<% end %>
									</td>
									<td><%= number_to_indian_currency(@receipt.total_amount.round(2)) %></td>
								</tr>
							</table>
							<br/>
						</div>
						<div class="text-right acknowledge-wrapper">
							<p>Nam Estate Pvt. Ltd.</p>
							<br/><br/>
							<p>Authorised Signature</p>
							<span>This is a computer generated receipt no signature required</span>
							<br/><br/>
						</div>
					</div>
				</div>
		</div>
	</div>
