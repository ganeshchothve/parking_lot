<% date = (Date.today - 6.months).strftime("%d/%m/%Y") + " - " + Date.today.strftime("%d/%m/%Y") %>
<% start_date, end_date = date.split(' - ') %>
<section class="user-db-sec-5 device-pd">
  <div class="container">
    <div class='box-card'>
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mt-3 no-pd">
          <div class="table-title pt-4">
            <h1 class="title icon-set icon-building-black">Project Wise Invoice Summary</h1>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mt-3 no-pd">
          <div class="table-btn-set float-right pt-3">
            <button class="db-filter-btn white fn-500" type="button">
              <i class="icon-set icon-filter-light-blue"></i>
            </button>
          </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-pd">
          <div class="filter-box">
            <div class="filter-inner">
              <div class="filter-header">
                <span class="title">Filter</span>
                <a href="javascript:;" class="close-filter-btn">&times;</a>
              </div>
              <%= form_tag billing_team_dashboard_path, method: "get", remote: true, id: "billing_team_dashboard_filter" do %>
                <div class="filter-content">
                  <div class="row">
                    <div class="mb-3 col-12">
                      <%= label_tag "dates", "Dates", class: "control-label float-left" %>
                      <%= text_field_tag :dates, "", class: 'form-control daterangefilter', "data-start-date": start_date || '', "data-end-date": end_date || '', "data-opens": 'right', placeholder: 'dd/mm/yyyy - dd/mm/yyyy', id: "dates", auto: false, autocomplete: 'disabled' %>
                    </div>
                  </div>
                </div>
                <div class="filter-footer">
                  <%= submit_tag :Apply, class: "f-save-btn db-small-btn white bg-light-blue fn-500 float-right close-filter-btn" %>
                  <button type="button" class="f-cancel-btn status_chart_filter_cancel db-small-btn light-blue bg-white fn-500 float-right">Cancel</button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row" id = "project_wise_invoice_summary"></div>
    </div>
  </div>
</section>

<section class="user-db-sec-5 device-pd">
  <div class="container">
    <div class="row" id = "project_wise_incentive_deduction_summary">
    </div>
  </div>
</section>
<section class="user-db-sec-5 device-pd">
  <div class="container">
    <div class="row" id = "invoice_ageing_report">
    </div>
  </div>
</section>

<!-- Keeping margin at bottom, so that data can be scrolled up into viewable screen -->
<div class='mb-5 pb-5'>
</div>
<%= javascript_tag do %>
  $(document).ready(function(){
    FormInitializer.init($("#billing_team_dashboard_filter"));
    $.ajax({
      url: "/dashboard/project_wise_invoice_summary",
      type: "get"
    });
    $.ajax({
      url: "/dashboard/project_wise_incentive_deduction_summary",
      type: "get"
    });
    $.ajax({
      url: "/dashboard/invoice_ageing_report",
      type: "get"
    });
  });
<% end %>
