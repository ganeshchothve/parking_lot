<% users = DashboardDataProvider.users_dashboard(current_user, params[:user_fltrs]) %>
<div class="card box-card mb-3 border-0">
  <a data-toggle="collapse" href="#dashboard_users" role="button" aria-expanded="false" aria-controls="dashboard_users" class='font-weight-bold text-decoration-none'>
    <div class="card-header box-header border-0 ">
      <h2 class="text-dark">
        <%= image_tag "users-black.svg", alt: 'Users', class: 'wd-20' %>
        <%= User.model_name.human(count: 3) %>
      </h2>
      <%= link_to I18n.t("global.link_to.view_all") %>, admin_users_path, class: 'view-all-btn' %>
    </div>
  </a>
  <div class="card-body collapse p-0 box-content br-rd-bl-4 bg-white p-0" id="dashboard_users">
    <% if users.present? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr class="bg-primary white">
              <th>Role</th>
              <th class="text-right"><%= I18n.t("global.link_to.count") %></th>
            </tr>
          </thead>
          <tbody>
            <% users.each do |d| %>
            <tr>
              <td><%= User.human_attribute_name("role.#{d[:role]}") %></td>
              <td class="text-right"><%= d[:count] %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      No <%= global_labels[:users] %> yet.
      <% if policy([current_user_role_group, User.new(role: 'user')]).new? %>
        <%= link_to 'Add a Customer', new_admin_user_path, class: 'modal-remote-form-link' %>
      <% end %>
    <% end %>
  </div>
</div>
