<% receipts = DashboardDataProvider.receipts_dashboard(current_user) %>
<div class="card">
  <div class="card-header">
    <%= global_labels[:receipts] %>
  </div>
  <div class="card-body">
    <% if receipts.present? %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Status</th>
              <th>Payment Mode</th>
              <th class="text-right">Count</th>
              <th class="text-right">Total Amount</th>
              <th class="text-right">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% receipts.each do |d| %>
            <tr>
              <td><%= Receipt.available_statuses.find{|x| x[:id] == d[:status]}[:text] %></td>
              <td><%= Receipt.available_payment_modes.find{|x| x[:id] == d[:payment_mode]}[:text]  %></td>
              <td class="text-right"><%= d[:count] %></td>
              <td class="text-right"><%= number_to_indian_currency(d[:total_amount]) %></td>
              <td class="text-right">
                <% if policy(Receipt).index? %>
                  <%= link_to "View", user_receipts_path(fltrs: {status: d[:status], payment_mode: d[:payment_mode]}), target: "_blank" %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      No <%= global_labels[:receipts] %> yet.
    <% end %>
  </div>
</div>
