<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-pd">
  <div class="table-btn-set float-left pt-2">
    <button disabled="disabled" class="db-small-btn border-primary rounded primary bg-white px-2 py-1 fn-400 ml-0"><%= t('global.total')%> : <%= @all_schemes.count %></button>
  </div>
</div>
<div id="accordion" class='accordion col-lg-12 col-md-12 col-sm-12 col-xs-12 mt-3 no-pd'>
  <% @all_schemes.group_by {|is| is.project_name}.each_with_index do |(project, schemes), pidx| %>
    <% schemes.sort {|x, y| x.ends_on > y.ends_on ? -1 : 1}.each_with_index do |scheme, idx| %>
  <div class="accordion-item">
    <h2 class="accordion-header border-bottom-0 shadow-none" id="heading<%= idx %>">
      <button class="accordion-button border-bottom-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= scheme.id %>" aria-expanded="true" aria-controls="collapse<%= scheme.id %>">
        <%= scheme.name.titleize %>
        <div class='small float-md-end'><%= "#{scheme.starts_on.strftime('%d %b %Y')} - #{scheme.ends_on.strftime('%d %b %Y')}" %></div>
      </button>
    </h2>
    <div id="collapse<%= scheme.id %>" class="accordion-collapse collapse <%= (pidx.zero? && idx.zero?) ? 'show' : '' %>" aria-labelledby="heading<%= idx %>" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div class="list-group">
              <% scheme.ladders.asc(:stage).each do |ladder| %>
                <span class="list-group-item align-items-start">
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1 fn-16">Ladder #<%= ladder.stage %></h5>
                    <% adj = ladder.payment_adjustment %>
                    <p class="mb-1 fn-14"><%= (adj.absolute_value.blank? && adj.formula.present?) ?
                      formula_to_human(adj.formula) :
                      "<strong>#{number_to_indian_currency(adj.absolute_value)}</strong>".html_safe %></p>
                  </div>
                  <% if scheme.ladder_strategy == 'number_of_items' %>
                    <p class="mb-0"><%= ladder.end_value? ?
                      "<strong>#{ladder.start_value}</strong> - <strong>#{ladder.end_value}</strong> #{BookingDetail.model_name.human(count: 2)}".html_safe :
                      "<strong>#{ladder.start_value.ordinalize}</strong> #{BookingDetail.model_name.human} onwards".html_safe %></p>
                  <% elsif scheme.ladder_strategy == 'sum_of_value' %>
                    <p class="mb-0"><%= ladder.end_value? ?
                      "<strong>#{number_to_indian_currency(ladder.start_value, :indian)}</strong> - <strong>#{number_to_indian_currency(ladder.end_value, :indian)}</strong> #{t('global.agreement_value')}".html_safe :
                      "<strong>#{number_to_indian_currency(ladder.start_value, :indian)}</strong> #{t('global.agreement_value')} onwards".html_safe %></p>
                  <% end %>
                </span>
              <% end %>
            </div>
      </div>
    </div>
  </div>
    <% end %>
  <% end %>
</div>
