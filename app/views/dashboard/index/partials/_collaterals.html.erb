<div class="box-card col-lg-3 col-md-12 col-sm-12 col-xs-12 mt-5 collaterals">
  <div class="box-header bg-gradient-cd br-rd-tr-4">
    <h2><img src="<%= asset_path 'folder-white.svg' %>" alt="My Documents" class="wd-18">Collaterals</h2>
    <%= link_to( "View All", assetables_path(assetable_type: current_client.class.model_name.i18n_key.to_s, assetable_id: current_client.id), class: 'view-all-btn modal-remote-form-link') %>
  </div>
  <div class="box-content br-rd-bl-4 bg-white fix-ht">
    <div class="pd-box">
      <ul class="collaterals-list">
        <li><%= link_to( "1. Videos", assetables_path(assetable_type: current_client.class.model_name.i18n_key.to_s, assetable_id: current_client.id, fltrs: {document_type: 'video'}), class: 'modal-remote-form-link') %></li>
        <li><%= link_to( "2. Documents (#{current_client.assets.where(document_type: 'document').count})", assetables_path(assetable_type: current_client.class.model_name.i18n_key.to_s, assetable_id: current_client.id, fltrs: {document_type: 'document'}), class: 'modal-remote-form-link') %></li>
        <li><%= link_to( "3. Certificates (#{current_client.assets.where(document_type: 'certificate').count})", assetables_path(assetable_type: current_client.class.model_name.i18n_key.to_s, assetable_id: current_client.id, fltrs: {document_type: 'certificate'}), class: 'modal-remote-form-link') %></li>
      </ul>
    </div>
  </div>
</div>
