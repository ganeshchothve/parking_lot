<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title text-center font-weight-bold text-uppercase">
            Win more customers
          </h3>
          <h6 class="card-subtitle text-muted text-center">
            Follow these quick steps and get your customers to be one of the privileged few to own a home at HiLife
          </h6>
          <div class="mt-3"></div>
          <div class="row justify-content-center text-center">
            <% ["Register your Customer",  "Get them to Confirm Account", "Add Primary & Secondary KYCs", "Get Payment (Preferrably Online)"].each_with_index do |usp, index| %>
              <div class="col-sm-12 col-md-2">
                <svg viewBox="0 0 60 60" version="1.1" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="30" cy="30" r="20" fill="#56b654"/>
                  <text x="25" y="36" font-size="18" fill="white"><%= index + 1 %></text>
                </svg>
                <div><%= usp %></div>
                <div class="d-md-none mt-3"></div>
              </div>
            <% end %>
          </div>
          <div class="mt-5"></div>
          <div class="form-group text-center">
            <% if UserPolicy.new(current_user, User.new(role: 'user')).new? %>
              <%= link_to "Add #{User.in(referenced_channel_partner_ids: current_user.id).in(role: User.buyer_roles).present? ? '' : " your First"} Customer", new_admin_user_path, class: 'modal-remote-form-link btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="mt-3"></div>
    </div>
  </div>
</div>

<div class="container">
  <%= render "dashboard/index/partials/users" %>
  <div class="mt-3"></div>
  <%= render "dashboard/index/partials/receipts" %>
  <div class="mt-3"></div>
</div>
