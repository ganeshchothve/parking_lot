<link href="https://fonts.googleapis.com/css?family=Poppins:400,600" rel="stylesheet">
<script type="text/javascript">
	function printReceipt(){
		window.print();
	}
</script>
<style type="text/css">
	body{
		font-family: 'Poppins', sans-serif;
	}
		.dashboard-menu{
		display: none;
	}
	.mleft70{
		padding: 20px;
		padding-left: 20px;
	    margin-top: 0px;
	}
	.clearfix{
		clear: both
	}
	.col-12{
		width: 100%;
	}
	.col-6 {
	    width: 50%;
	}
	.pull-left{
		float: left;
	}
	.pull-right{
		float: right;
	}
	.col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12, .col-12-5, .w30, .w70 {
	    float: left;
	}
	.col-4 {
	    width: 33.33333333333333%;
	}
	.img-responsive{
		max-width: 100%
	}
	.tower-info-wrapper.grey .col-6 {
	    padding-right: 20px;
	    padding-bottom: 20px;
	}
	.tower-specs {
	    padding: 30px 0px 20px 10px;
	}
	.tower-info-wrapper.grey {
	    background-color: #f2f2f2;
	}
	.tower-info-wrapper {
	    padding: 20px 0px 20px 20px;
	}
	.payment-details-wrapper {
	    padding: 20px 20px 0px 20px;
	}
	.receipt-table-wrapper {
	    padding: 30px 30px 0px 30px;
	}
	.receipt-table {
	    margin-bottom: 30px;
	}
	.receipt-table th:first-child, .receipt-table td:first-child {
	    border-left: 1px solid #ccc;
	}
	.receipt-table th {
	    background-color: #f2f2f2;
	    border-right: 1px solid #ccc;
	    border-top: 1px solid #ccc;
	    border-bottom: 1px solid #ccc;
	    font-weight: normal;
	}
	.receipt-table th:first-child, .receipt-table td:first-child {
	    border-left: 1px solid #ccc;
	}
	.receipt-table td {
	    text-align: center;
	    border-right: 1px solid #ccc;
	    border-bottom: 1px solid #ccc;
	}
		.receipt-wrapper {
	    color: #74645c;
	    font-size: 16px;
	    width: 100%;
	    margin: 20px 0px;
	    background-color: #fff;
	    border: 1px solid #c7c7c7;
	    margin-bottom: 30px;
	}
	.acknowledge-wrapper {
	    padding: 30px;
	}
	.text-right{
		text-align: right;
	}
	.tower-specs .title {
	    color: #74645c;
	    font-size: 16px;
	    display: block;
	}
	.tower-specs .specs {
	    color: #000;
	    font-size: 16px;
	    font-weight: 600;
	}
	.applicant-wrapper {
	   padding: 20px 0px 20px 20px;
	}
</style>
<div class="mleft70">
	<div class="col-12">
		<div class="pull-left">
			<p class="pageTitle big pink">INVOICE</p>
		</div>
		<div class="pull-right">	
			<img src="<%= asset_path 'printer-outline.png'%>" class="img-responsive" onclick="printReceipt()">
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="clearfix"></div>
	<div class="col-12">
		<div class="receipt-wrapper">
						<div class="applicant-wrapper pull-left text-left">
							<img src="<%= asset_path 'embassy-springs.jpg' %>" class="img-responsive">
						</div>
						<div class="pull-right text-right payment-details-wrapper">
							Date: <strong><%= @receipt.created_at.strftime('%d %b %Y') %></strong><br/>
							Receipt: <strong><%= @receipt.receipt_id %></strong>
						</div>
						<div class="clearfix"></div>
						<div class="tower-info-wrapper pink">
							<div class="tower-specs">
								<div class="col-6">
									<span class="title">Paid By:</span>
									<span class="specs"><%= @receipt.user.name %></span>
									<!-- <span class="specs">B2 - Haridra, Shree Sai Samrudddhi Apts, C.V. Raman Nagar, Bengaluru - 560093</span> -->
								</div>
								<div class="col-6">
									<span class="title">Paid To:</span>
									<span class="specs">Nam Estates Pvt. Ltd. No. 150, 1st floor, Embassy Point, Infratry Road, Bengaluru - 560001</span>
								</div>
								<div class="clearfix"></div>
							</div>
							<div class="tower-specs">
								<div class="col-4">
									<span class="title">PAN Card:</span>
									<span class="specs"><%= @receipt.user.name %></span>
								</div>
								<div class="col-4">
									<span class="title">Project:</span>
									<span class="specs">Embassy Springs</span>
								</div>
								<div class="col-4">
									<span class="title">Unit No:</span>
									<span class="specs"><%= @receipt.project_unit.name %></span>
								</div>
								<div class="clearfix"></div>
							</div>
						</div>
						<div class="receipt-table-wrapper">
							<table width="100%" cellpadding="10" cellspacing="0" border="0" outline="0" class="receipt-table" align="center">
								<tr>
									<th>
										Date
									</th>
									<th>
										Cheque / DD /Online
									</th>
									<th>
										Bank / Branch
									</th>
									<th>
										Amount
									</th>
								</tr>
								<tr>
									<td><%= @receipt.processed_on %></td>
									<td><%= @receipt.payment_identifier %></td>
									<td><%= @receipt.issuing_bank %> - <%= @receipt.issuing_bank_branch %> </td>
									<td><%= number_to_indian_currency(@receipt.total_amount.round) %></td>
								</tr>
							</table>
						</div>
						<div class="text-right acknowledge-wrapper">
							<p>Nam Estate Pvt. Ltd.</p>
							<br/><br/>
							<p>Authorised Signature</p>
							<br/><br/>
						</div>
					</div>
	</div>
</div>