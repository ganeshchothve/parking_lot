<section class="mb-5">
  <% if current_user.buyer? %>
    <%= render 'dashboard/index/user' %>
  <% elsif current_user.role?('channel_partner') %>
    <%= render 'dashboard/index/channel_partner' %>
  <% elsif ['admin', 'sales'].include?(current_user.role) %>
    <%= render 'dashboard/index/admin' %>
  <% elsif current_user.role?('billing_team') %>
    <%= render 'dashboard/index/billing_team' %>
  <% elsif ['cp_admin'].include?(current_user.role) %>
    <%= render 'dashboard/index/cp_admin' %>
  <% elsif DashboardPolicy.new(current_user, :dashboard).admin_dashboard? %>
    <%= render 'dashboard/index/crm' %>
  <% end %>
</section>
