<section class="main-wrapper">
  <div class="clearfix"></div>
  <div class="container-fluid">
    <div class="col-12">
        <% if @project_unit.present? %>
          <% if flash[:notice].present? %>
            <div class="alert alert-warning"><%= flash[:notice] %></div>
          <% end %>
          <%= render partial: "project_unit_cost", locals: {project_unit: @project_unit} %>
          <div class="clearfix"></div>
          <br/>
          <div class="text-center">
            <div class="pull-left" style="margin-right:20px;">
              <%= link_to "I Agree", dashboard_payment_path(project_unit_id: @project_unit.id), class: 'checkout-btn nav-btn', style:'margin-top:0px' , data:{event_category: 'Section', event_action: 'Click', event_name: 'I Agree'}, onclick: 'alert("Rs. 5,000 processing charges will be applied on cancellation of booking")' %>
            </div>
            <% if @project_unit.status == "hold" %>
              <div class="pull-left">
              <%= form_for @project_unit, url: dashboard_update_project_unit_path(project_unit_id: @project_unit.id), method: 'post', html: {class: 'validate-form'} do |f| %>
                <%= f.hidden_field :status, value: 'available' %>
                <%= f.submit 'Cancel', class: 'cancel-btn apply-btn' , data:{event_category: 'Section', event_action: 'Click', event_name: 'Cancel'}%>
              <% end %>
              </div>
            <% end %>
          <% else %>
            <h4>You are making a payment without choosing any project_unit</h4>
            <%= link_to "I Agree", dashboard_payment_path, class: 'nav-btn', style:'margin-top:0px' , data:{event_category: 'Section', event_action: 'Click', event_name: 'I Agree'}%>
          <% end %>
          </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  ga('ec:addProduct', {
    'id': '<%= @project_unit.id %>',// Transaction ID. Required.
    'name': '<%= @project_unit.name %>',// Product name. Required.
    //'sku': '<%= @project_unit.name %>', // SKU/code.
    'category': 'Apartment',// Category or variation.
    'price': '<%= @project_unit.agreement_price %>',// Unit price.
    'quantity': '1' // Quantity.
  });
  ga('ec:setAction', 'add');  
  ChatHelp.message(App.current_user.name + " has held a unit <%= @project_unit.name %>; filled up KYC details.");
</script>
