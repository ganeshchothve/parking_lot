    line-height: 12px;
    padding: 0 14px;
}
.event-person, .prjt-name {
    font-size: 12px;
    line-height: 16px;
    color: #192951;
    margin-bottom: 2px;
    padding: 0 14px;
}
.event-person{
    white-space: break-spaces;
    max-height: 33px;
    overflow: hidden;
    min-height: 33px;
}
.prjt-location {
    font-size: 10px;
    line-height: 14px;
    color: #192951;
    padding: 0 14px;
    /* white-space: break-spaces; */
    margin-bottom: 10px;
}
.event-time {
    border-top: 1px solid #e3e3e3;
    padding: 0 14px;
}
.event-time p{
    font-size: 10px;
    line-height: 16px;
    color: #192951;
}
.clock-icon{
    color: #817F9B;
    width: 10px!important;
}
.mainAnnouncementSlider{
    padding-left: 30px;
    padding-right: 30px;
}
.mainAnnouncementSlider .carousel-item img{
    border-radius: 12px;
    max-height: 200px;
    min-height: 200px;
    object-fit: cover;
}
.mainAnnouncementSlider .carousel-item span{
    font-size: 10px;
    line-height: 14px;
    color: rgba(129,127,155,0.5);
    display: block;
    margin: 10px 0;
}
.mainAnnouncementSlider .carousel-item h2{
    font-size: 12px;
    line-height: 14px;
    color: #192951;
    white-space: break-spaces;
    max-height: 33px;
    overflow: hidden;
    min-height: 33px;
}
.mainAnnouncementSlider .carousel-item p{
    font-size: 10px;
    line-height: 16px;
    color: #817F9B;
    white-space: break-spaces;
    max-height: 33px;
    overflow: hidden;
    min-height: 33px;
}
.mainAnnouncementSlider .carousel-control-next {
    right: -18px;
}
.mainAnnouncementSlider .carousel-control-prev {
    left: -18px;
}

</style>
<section class="cp-dashboard-mob">
  <div class="container">
    <div class="col-12">
      <!-- <img src="<%#= asset_path 'user.jpg' %>" class="cp-profile-img"> -->
      <!-- <hr> -->
      <h2 class="cp-name"><%= I18n.t('global.hello') + ', ' + current_user.name %></h2>
      <!-- <p class="cp-info">Lorem Ipsum has been the industryâ€™s standard dummy text ever since the 1500s, when an unknown.</p> -->
      <div class="col-12 mt-4">
        <i class="fa fa-bell yellow fa-lg"></i>
        <h3 class="sec-title d-inline px-2"><%= I18n.t('mongoid.models.meeting.other') %></h3>
        <ul class="event-list mt-3">
          <% @meetings.each do |meeting| %>
            <li>
              <div class="cp-events-wrap">
                <div class="cp-event-inner">
                  <span class="event-date"><%= I18n.t('global.hello') + ', ' + Time.now.in_time_zone(current_user.time_zone).strftime('%d%b, %Y') %></span>
                  <h3 class="event-person"><%= (meeting.topic || "-") %></h3>
                  <span class="prjt-title"><%= I18n.t("mongoid.attributes.project.name") %></span>
                  <h3 class="prjt-name"><%= (meeting.project.try(:name) || "-") %></h3>
                  <p class="prjt-location text-truncate"><%= (meeting.project.try(:address).try(:to_sentence) || "-") %></p>
                  <div class="event-time">
                    <i class="fa fa-clock clock-icon pt-1"></i>
                    <p class="d-inline px-1"><%= (meeting.scheduled_on.in_time_zone(current_user.time_zone).strftime("%d/%m/%y %I:%M %p") rescue "-") %></p>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="col-12 my-5">
        <i class="fa fa-solid fa-calendar-day yellow fa-lg"></i>
        <h3 class="sec-title d-inline px-2"><%= I18n.t("mongoid.models.announcement.other") %></h3>
        <div id="mainAnnouncementSlider" class="carousel slide mainAnnouncementSlider mt-3" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% @announcements.each_with_index do |announcement, index| %>
                <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
                  <img src="<%= announcement.try(:assets).try(:first).try(:file).try(:url) %>" class="d-block w-100" alt="...">
                  <span><%= I18n.t("mongoid.attributes.meeting.meeting_date") + ': ' + announcement.date %></span>
                  <h2><%= announcement.title %></h2>
                  <p><%= announcement.content %></p>
                </div>
              <% end %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#mainAnnouncementSlider" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden"><%= I18n.t("global.previous") %></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#mainAnnouncementSlider" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden"><%= I18n.t("global.next") %></span>
            </button>
          </div>
        </ul>
      </div>
      <div class="col-12 text-center pb-5">
          <%= link_to I18n.t("controller.dashboard.leaderboard.view_leaderboard"), channel_partners_leaderboard_without_layout_path(user_login: params[:user_login], user_token: params[:user_token]), class: 'btn-primary btn theme-btn' %>
      </div>
    </div>
  </div>
</section>
