<header>
	<div class="container">
		<div class="col-12 text-center">
			<a href="javascript:void(0);" class="logo-wrapper">
				<img src="<%= asset_path "embassy_springs_logo.png" %>" class="img-responsive" />
			</a>
		</div>
		<div class="col-12 text-center">
			<div class="step-bar-wrapper">
				<div data-step="1" class="active">STEP 1</div>
				<div data-step="2">STEP 2</div>
				<div data-step="3">STEP 3</div>
				<div data-step="4">STEP 4</div>
				<div data-step="5">STEP 5</div>
			</div>
		</div>
	</div>
</header>

<section class="screens-wrapper" data-screen="1">
	<div class="container">
		<div class="col-12">
			<div class="col-12 text-center pageTitle big">
				Are you looking for a home?
			</div>
			<div class="col-12 conf-select-wrapper">
				<div class="col-5 text-center">
					<div class="pageTitle medium">
						Choose your configuration
					</div>
					<div class="dropdown-wrapper">
						<select class="init-selectize required" name="bedrooms">
							<option value="">Select Configuration</option>
							<option value="1">1 BHK</option>
							<option value="2">2 BHK</option>
							<option value="3">3 BHK</option>
						</select>
					</div>
				</div>
				<div class="col-2 pageTitle biggest text-center">
					OR
				</div>
				<div class="col-5 text-center">
					<div class="pageTitle medium">
						Choose your budget
					</div>
					<div class="dropdown-wrapper">
						<select class="init-selectize required" name="base_price">
							<option value="">Select Budget</option>
							<option value="0-10000000">Below 1 Cr.</option>
							<option value="10000000-50000000">1 Cr. to 5 Cr.</option>
							<option value="50000000-100000000">5 Cr. to 10 Cr.</option>
						</select>
					</div>
				</div>
			</div>
			<div class="col-12 text-center">
				<button class="btn black navigate" data-goto="2">Next &rarr;</button>
			</div>
		</div>
	</div>
</section>
<section class="screens-wrapper next" data-screen="2">
	<div class="container">
		<div class="col-12">
			<div class="col-12 text-center pageTitle black big">
				Choose tower
			</div>
			<div class="col-12 text-center" id="tower-selector">
				
			</div>
			<div class="col-12 text-center">
				<button class="btn black navigate" data-goto="1">&larr; Prev</button>
				<button class="btn black navigate" data-goto="3">Next &rarr;</button>
			</div>
		</div>
	</div>
</section>
<section class="screens-wrapper next" data-screen="3">
	<div class="container">
		<div class="col-12">
			<div class="col-12">
				<div class="col-4">
					<div class="col-12 filterBg">
						<div class="col-12">
							<div class="pageTitle medium pink">
								Filter
							</div>
						</div>
						<div class="col-12 filter-item-wrapper">
							<form id="filter-form">
								<div class="col-12 filter-item">
									<div class="col-4 text-left">
										<img src="<%= asset_path 'tower-icon.png' %>" />
									</div>
									<div class="col-8">
										<div class="filter-title">
											TOWER
										</div>
										<div class="filter-data">
											<select class="init-selectize" name="tower">
												<option value="">Select tower</option>
												<option value="1">Tower 1</option>
												<option value="2">Tower 2</option>
											</select>
										</div>
									</div>
								</div>
								<div class="col-12 filter-item">
									<div class="col-4 text-left">
										<img src="<%= asset_path 'config-icon.png' %>" />
									</div>
									<div class="col-8">
										<div class="filter-title">
											CONFIGURATION
										</div>
										<div class="filter-data">
											<select class="init-selectize" name="bedrooms">
												<option value="">Select Configuration</option>
												<option value="1">1 BHK</option>
												<option value="2">2 BHK</option>
												<option value="3">3 BHK</option>
											</select>
										</div>
									</div>
								</div>
								<div class="col-12 filter-item">
									<div class="col-4 text-left">
										<img src="<%= asset_path 'floor-icon.png' %>" />
									</div>
									<div class="col-8">
										<div class="filter-title">
											FLOOR
										</div>
										<div class="filter-data">
											<select class="init-selectize">
												<option value="">Select tower</option>
												<option value="Tower 1">Tower 1</option>
												<option value="Tower 2">Tower 2</option>
											</select>
										</div>
									</div>
								</div>
								<div class="col-12 filter-item">
									<div class="col-4 text-left">
										<img src="<%= asset_path 'budget-icon.png' %>" />
									</div>
									<div class="col-8">
										<div class="filter-title">
											Price
										</div>
										<div class="filter-data">
											<select class="init-selectize" name="base_price">
												<option value="">Select Budget</option>
												<option value="0-10000000">Below 1 Cr.</option>
												<option value="10000000-50000000">1 Cr. to 5 Cr.</option>
												<option value="50000000-100000000">5 Cr. to 10 Cr.</option>
											</select>
										</div>
									</div>
								</div>
								<div class="col-12 filter-submit-wrapper text-right">
									<button class="btn black">Submit</button>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="col-8 text-center building-main-wrapper">
					<div class="text-center pageTitle medium black">Apartment Selector</div>
					<div class="main-wrapper relative">
						<div class="caption-floor">
							Floors
						</div>
						<div class="apt-selector-wrapper" id="append-floors">
							
						</div>
						<div class="clearfix"></div>
						<div class="col-12 apt-index-wrapper">
							<div class="apt-index">
								<span class="bstatus-booked_confirmed"></span>Booked
							</div>
							<div class="apt-index">	
								<span class="bstatus-blocked"></span>Block
							</div>
							<div class="apt-index">	
								<span class="bstatus-na"></span>NA
							</div>
							<div class="apt-index">	
								<span class="bstatus-available"></span>Open
							</div>
							<div class="apt-index">	
								<span class="bstatus-selected"></span>Selected
							</div>
							<div class="clearfix"></div>
						</div>
						<div class="clearfix"></div>
					</div>
				</div>
			</div>
			<div class="col-12 text-center">
				<button class="btn black navigate" data-goto="2">&larr; Prev</button>
			</div>
		</div>
	</div>
</section>
<section class="screens-wrapper next" data-screen="4">
	<div class="container">
		<div class="col-12">
			<div class="col-12">
				<div class="col-6 text-center building-main-wrapper">
					<div class="text-center pageTitle medium black">Apartment Selector</div>
					<div class="main-wrapper relative">
						<div class="caption-floor">
							Floors
						</div>
						<div class="apt-selector-wrapper" id="append-floors-clone">
							
						</div>
						<div class="clearfix"></div>
						<div class="col-12 apt-index-wrapper">
							<div class="apt-index">
								<span class="bstatus-booked_confirmed"></span>Booked
							</div>
							<div class="apt-index">	
								<span class="bstatus-blocked"></span>Block
							</div>
							<div class="apt-index">	
								<span class="bstatus-na"></span>NA
							</div>
							<div class="apt-index">	
								<span class="bstatus-available"></span>Open
							</div>
							<div class="apt-index">	
								<span class="bstatus-selected"></span>Selected
							</div>
							<div class="clearfix"></div>
						</div>
						<div class="clearfix"></div>
					</div>
				</div>
				<div class="col-6 floor-layout-wrapper">
					<div class="text-center pageTitle medium black">Floor Layout Plan</div>
					<div class="floor-layout-plan">
						<object data="<%= asset_path 'floor-layout.svg' %>" type="image/svg+xml" id="floor-layout"></object>
					</div>
				</div>
			</div>
			<div class="col-12 text-center">
				<button class="btn black navigate" data-goto="3">&larr; Prev</button>
				<button class="btn black navigate" data-goto="5">Next &rarr;</button>
			</div>
		</div>
	</div>
</section>
<section class="screens-wrapper next" data-screen="5">
	<div class="container">
		<div class="col-12">
			<div class="col-7 floor-plan-wrapper">
				<div class="col-12 text-center black pageTitle medium">
					Floor Layout Plan
				</div>
				<div class="final-floor-plan">
					<img src="<%= asset_path 'sample-floor-plan.jpg' %>" class="img-responsive">
				</div>
			</div>
			<div class="col-5 client-details">
				<p>Hi</p>
				<div class="name-plate">
					<div class="left-top"><img src="<%= asset_path 'Bolt.png'%>" class="img-responsive"></div>
					<div class="right-top"><img src="<%= asset_path 'Bolt.png'%>" class="img-responsive"></div>
					<div class="right-bottom"><img src="<%= asset_path 'Bolt.png'%>" class="img-responsive"></div>
					<div class="left-bottom"><img src="<%= asset_path 'Bolt.png'%>" class="img-responsive"></div>
					<span class="client-name">Mr. <%= current_user.name %></span><br/>
					<span class="flat-no">Flat: 1104</span>
				</div>
				<p class="pageTitle pink medium">Selected flat<br/> details as follows:</p>
				<div class="flat-details">
					Tower: A<br/>
					Floor: 11th<br/>
					Flat no: 1104<br/>
					Configuration: 2 BHK<br/> 
					Min. Carpet Area: 1500 Sq.Ft.<br/>
					Starting Price: 3500 / Sq. Ft.<br/>
				</div>
				<div class="col-12">
					<button class="btn white navigate" data-goto="4">‚Üê Back</button><button class="btn black" data-goto="2">HOLD</button>
				</div>
			</div>
		</div>
	</div>
</section>

