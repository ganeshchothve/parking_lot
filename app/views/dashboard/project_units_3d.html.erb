<%
  data = ProjectUnit.all.collect do |x|
    {
      price: x.agreement_price,
      apartment_ID: x.sfdc_id,
      status: (x.user_based_status(current_user) == "available" ? "Available" : "Booked")
    }
  end
%>
<script>
var datajson = {
    hotspots: <%= raw data.to_json %>
};
</script>
<%= javascript_include_tag 'foyr/porthole.min' %>
<%= javascript_include_tag 'foyr/parent' %>
<section class="main-wrapper full-height">
  <div class="container-fluid">
    <div class="col-12">
    <% if ProjectUnitPolicy.new(current_user, ProjectUnit).block? %>

      <iframe id="foyrFrame1" name="foyrFrame1" width="100%" height="640px" frameborder="0" src="https://dpy2xmbjixzoe.cloudfront.net/embassy/index.html" scrolling="no" style="border:0"></iframe>
    <% else%>
       <div class="apartment-selector-wrapper">
          <div class="title">
             You cannot book more than 3 Apartments.
          </div>

        </div>
    <% end %>
    </div>
  </div>
</section>


<script type="text/javascript">
  jQuery(document).ready(function($){
    wd=jQuery("#foyrFrame1").width();
   jQuery("#foyrFrame1").css("height", wd*0.7)

  });
</script>
