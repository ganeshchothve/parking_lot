<style type="text/css">
.apartment-selector-wrapper .title {
    background-color: #fff;
    margin: 0px;
    border-left: 10px solid #6b7e34;
    /* border: 2px solid #ececec; */
    border-radius: 3px;
    font-weight: 400;
    font-size: 24px;
    color: #6b7e34;
    padding: 10px 15px;
    /*font-family: 'Roboto Condensed', sans-serif;*/
    /* font-weight: 900; */
}
.apartment-selector-wrapper .client-detail-wrapper {
    background-color: #fff;
    margin: 10px 0px;
    /* border: 2px solid #ececec; */
    border-radius: 3px;
    font-weight: 500;
    font-size: 28px;
    color: #6c6c6c;
    padding: 5px 15px;
    border-left: 15px solid #444444;
}
.client-detail {
    padding: 15px 0px 0px 0px;
}
.pull-left {
    float: left !important;
}
.tower-info-wrapper {
    padding: 20px 0px 20px 20px;
}
.pull-right {
    float: right !important;
}
.tower-info-wrapper .padding-left-30 {
    padding-left: 30px;
}
.tower-info-wrapper > div {
    font-size: 16px;
    line-height: 26px;
    font-weight: 400;
}
.clearfix {
    clear: both;
}
.f22 {
    font-size: 22px;
}
.bold {
    font-weight: 500;
}
.table-wrapper {
    border-radius: 0px;
    border-color: #ccc;
}
.payment-table, .payment-breakup {
    border: 1px solid #ddd;
}
.payment-breakup tr:nth-child(odd), .payment-table tr:nth-child(odd) {
    background: #f9f9f9;
}
.payment-breakup th {
    background-color: #d3d3d3;
    color: #252525;
    padding: 10px;
    font-size: 14px;
    font-weight: 500;
}
.text-center {
    text-align: center;
}
.payment-breakup td, .receipt-table td {
    border-bottom: 0px solid #ccc;
    padding: 15px;
    font-size: 14px;
}
.payment-breakup td.pink {
       background-color: #d8ddc8;
    color: #424242;
    font-size: 14px;
}
.payment-breakup.mediaCenterAccordion {
    border: none;
}
.payment-breakup.mediaCenterAccordion > li {
    display: inline-block;
    list-style: none;
    width: 100%;
    margin: 0px 0%;
    vertical-align: top;
    border-bottom: 1px solid #9b9b9e;
    padding: 10px 0px;
}
.payment-breakup.mediaCenterAccordion li > span {
    background-image: asset-url('Plus-Icon.png');
    background-repeat: no-repeat;
    background-position: 99.5% 6px;
    background-size: 23px;
    cursor: pointer;
    font-size: 16px;
    color: #232323;
    display: block;
    margin: 1px 3px;
    padding: 6px 0px;
    background-color: transparent;
    border: 0px;
}
.mediaCenterAccordion > li > div {
    width: 100%;
    list-style: none;
    padding: 0px 0px 0px 0px;
    /*display: none;*/
    overflow: auto;
}
.padding-top0{
    padding-top: 0px;
}
.dark-green-bg{
    background-color: #6b7e34
}
.light-green-bg{
    background-color: #d8ddc8;
}
.col-4.light-green-bg{
    padding: 20px;
    line-height: 20px;
}
.col-4.dark-green-bg{
    padding: 25px;
    color: #fff;
}
.col-4.light-green-bg span.black{
    color: #252525;
    font-weight: 500;

}
.client-details-wrapper{
    margin-top: 20px;
}
.client-detail span{
    color: #fff;
    font-size: 22px;
    font-weight: 500;
}
@media all and (max-width: 1366px){
  .col-4.light-green-bg, .col-4.dark-green-bg{
    min-height: 160px;
  }
}
@media all and (max-width: 768px){
  .col-4.light-green-bg{
    width: 50%;
  }
}
@media all and (max-width: 700px){
    .col-4.light-green-bg{
        width: 100%;
        min-height: auto;
    }
    .col-4.dark-green-bg{
        width: 100%;
        min-height: auto;
    }
}
</style>
