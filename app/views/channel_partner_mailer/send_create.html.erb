<div class="card w-100">
  <div class="card-body">
    <p>
      A new channel partner has registered for <%= current_project.name %> on your website. Please login on to the portal to approve or reject the registration request.
    </p>
  </div>
</div>
<div class="card mt-3">
  <div class="card-body">
    <h5 class="text-center"><strong><%= global_labels[:channel_partner] %> Details</strong></h5>
    <table class="table table-striped table-sm mt-3">
      <tbody>
        <tr>
          <td><%= t('mongoid.attributes.channel_partner.name') %></td>
          <td class="text-right"><%= @channel_partner.name %></td>
        </tr>
        <tr>
          <td><%= t('mongoid.attributes.channel_partner.rera_id') %></td>
          <td class="text-right"><%= @channel_partner.rera_id %></td>
        </tr>
        <tr>
          <td><%= t('mongoid.attributes.channel_partner.status') %></td>
          <td class="text-right"><%= ChannelPartner.human_attribute_name("status.#{channel_partner.status}") %></td>
        </tr>
        <tr>
          <td><%= t('mongoid.attributes.channel_partner.company_name') %></td>
          <td class="text-right"><%= @channel_partner.company_name %></td>
        </tr>
        <tr>
          <td><%= t('mongoid.attributes.channel_partner.pan_number') %></td>
          <td class="text-right"><%= @channel_partner.pan_number %></td>
        </tr>
        <tr>
          <td><%= t('mongoid.attributes.channel_partner.gstin_number') %></td>
          <td class="text-right"><%= @channel_partner.gstin_number %></td>
        </tr>
        <tr>
          <td><%= t('mongoid.attributes.channel_partner.address') %></td>
          <td class="text-right"><%= @channel_partner.aadhaar %></td>
        </tr>
        <% if @channel_partner.address.present? %>
          <tr>
            <td><%= t('mongoid.attributes.channel_partner.address') %></td>
            <td class="text-right"><%= @channel_partner.address.to_sentence %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
