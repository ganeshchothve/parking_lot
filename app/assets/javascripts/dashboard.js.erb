  sliderSelector = ".gamification_container";

  $(".tower-name-box").on("click", function(){
    $(".tower-name-box").removeClass("active");
    $(this).addClass("active");
    $('[data-stage="select-apartment"]').data("selected-towerid", $(this).data("towerid"));
    Gamification.gamifyTowerSelection(selectedTower);
  });

  $('.print').on('click', function(){
    window.print();
  })

  $('body').on('ajax:success', 'a.move-to-next-state', function(event) {
    if(typeof event.detail[0] == 'object' && event.detail[0].message != undefined) {
      Amura.global_success_handler(event.detail[0].message);
    }
  });
  $('body').on('ajax:error', 'a.move-to-next-state', function(event) {
    if(typeof event.detail[0] == 'object' && event.detail[0].errors != undefined) {
      Amura.global_error_handler(event.detail[0].errors);
    }
  });
  $('body').on('ajax:complete', 'a.move-to-next-state', function(event) {
    $(event.currentTarget).parents('.dropdown').find('.dropdown-toggle').dropdown('toggle');
  });
});
