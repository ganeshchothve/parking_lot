
.leaderboard-declare{
    height: 588px;
    background-image: url("<%= asset_path 'leaderboard/leaderboard-bg.png' %>");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    position: relative;
	font-family: 'Poppins', sans-serif;
    .rebbin-img{
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 50px;
    }
}
.leaderboard-top-wrapper{
	font-family: 'Poppins', sans-serif;
}
.leaderboard-no-list{
    text-align: center;
    margin-top: 140px;
    li{
        display:inline-block;
        position: relative;
        text-align: center;
        .carousel2, .carousel1, .carousel3{
			p{
				color: #000000;
            	font-size: 16px;
            	line-height: 18px;
				span{
					color: #000000;
					font-size: 20px;
					line-height: 30px;
					font-weight: 700;
					display: block;
				}
			}
			position: relative;
			text-align: center;
			top: -280px;
			left: 50%;
			width: 100%;
			transform: translateX(-50%);
        }
        &:first-child{
            .carousel2{
				width: calc(100% - 15px);
				left: 0;
				transform: unset;
			}
        }
		&:nth-child(2){
			.carousel1{
                width: 190px;
                top:-360px;    

            }
        }
        &:last-child{
			.carousel3{
                width: calc(100% - 15px);
                left: 16px;
                transform: unset;           
            }
        }
    }
}
.leaderboard-top-list{
    width: 90%;
    margin: -65px 0 0 5%;
    background: transparent linear-gradient(180deg, #FCC400 0%, #F8D763 100%) 0% 0% no-repeat padding-box;
    position: relative;
    border-radius: 26px;
    padding: 30px;
    float: left;
	&:after{
		height: 100px;
		width: 100%;
		position: absolute;
		bottom: -6px;
		content: '';
		background-color: #FCC400;
		left: 0;
		z-index: -1;
		border-radius: 25px;
	}
    li{
        position: relative;
        z-index: 4;
        height: 70px;
        list-style: none;
        padding: 8px 30px;
        margin-bottom: 12px;
        border-radius: 48px;
		border: 1px solid #FFE99D;
        &.list-header:before{
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            background-color: #9F4B04;
            height: 70px;
            border-radius: 55px;
            width: 100%;
            z-index: 3;
        }
        &.list-header:after{
            content: '';
            position: absolute;
            left: 0;
            bottom: -7px;
            width: 100%;
            height: 67px;
            background-color: #8B4204;
            border-radius: 41px;
            z-index: 1;
        }
        .list-rank {
            width: 80px;
            float: left;
            font-size: 24px;
            color: rgba(0,0,0,0.4);
            padding: 10px 0;
        }
        .list-name {
            width: calc(100% - 280px);
            float: left;
            text-align: left;
			height: 52px;
			position: relative;
            img{
                width: 50px;
                height: 50px;
                border-radius: 100%;
                float: left;
                margin-right: 20px;
            }
            p{
                font-size: 16px;
                line-height: 25px;
                font-weight: 700;
                color: #000000;
                margin-bottom: 0;
				position: absolute;
				top: 50%;
				transform: translateY(-50%);
                text-transform: capitalize;
            }
            span{
                font-size: 14px;
                line-height: 21px;
                font-weight: 400;
                color: #000000;
            }
        }
        .list-incentive {
            width: 200px;
            float: left;
            text-align: right;
            padding: 6px 0;
            img{
                display: inline-block;
                vertical-align: middle;
            }
            p{
                color: #000000;
                font-size: 18px;
                line-height: 27px;
                font-weight: 700;
                display: inline-block;
                margin-left: 10px;
            }
        }
        &.list-header{
            margin-bottom: 30px;
            padding: 23px 30px;
            div{
                color: #fff;
                font-size: 18px;
                line-height: 27px;
                font-weight: 700;
            }
            .list-rank, .list-incentive{
                padding: 0;
            }
        }
        div{
            position: relative;
            z-index: 8;
        }
        &:nth-child(odd){
            background: transparent linear-gradient(90deg, #FFFFFF4B 0%, #FFFFFF24 100%) 0% 0% no-repeat padding-box;
        }
        &:nth-child(even){
            background: transparent linear-gradient(270deg, #FFFFFF4B 0%, #FFFFFF24 100%) 0% 0% no-repeat padding-box;
        }
    }
}
