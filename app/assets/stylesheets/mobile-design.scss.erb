.target-wrapper{
    background-image: url("<%= asset_path 'leaderboard/target-bg.svg' %>");
    background-repeat: no-repeat;
    background-size: cover;
    padding: 30px 10px;
    width: 90%;
    margin: auto;
    border-radius: 15px;
    height: 350px;
    background-color: #1e1130;
    background-blend-mode: color-dodge;
    h2{
        font-size: 28px;
        line-height: 34px;
        color: #fff;
        font-weight: 600;
    }
    .target-box{
        position: relative;
        margin-top: 70px;
        h3{
            color: #fff;
            font-weight: 700;
            font-size: 20px;
            line-height: 24px;
        }
        .target-start{
            float: left;
        }
        .target-end{
            float: right;
        }
        .achieved-target{
            position: relative;
        }
        .rocket-img{
            position: absolute;
            top: 13px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
        }
        .rocket-power-img{
            position: absolute;
            top: -7px;
            /* left: calc(50% - 174px); */
            transform: translateX(-50%);
        }
        .target-value{
            font-size: 20px;
            line-height: 34px;
            font-weight: 700;
            color: #000;
            background-color: #fff;
            border-radius: 6px;
            position: absolute;
            left: calc(50% + 27px);
            transform: translateX(-50%);
            padding: 0px 20px;
            top: 100px;
            &::before{
                position: absolute;
                content: '';
                border-bottom: 10px solid #fff;
                border-left: 10px solid transparent;
                border-right: 10px solid transparent;
                top: -10px;
                left: 50%;
                transform: translateX(-50%);
            }
        }
		.target-no{
			width: 85%;
			margin: auto;
			display: block;
			flex: none;
		}
		.achieved-target{
			svg{
				width: 90%;
				margin: auto;
				display: block;
			}
		}
    }
}
