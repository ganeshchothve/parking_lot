project_unit = ProjectUnit.where(status: "blocked").first
user = project_unit.user
 Email.create!({
    booking_portal_client_id: project_unit.booking_portal_client_id,
    email_template_id:Template::EmailTemplate.find_by(name: "project_unit_blocked").id,
    cc: [project_unit.booking_portal_client.notification_email],
    recipients: [user],
    cc_recipients: (user.manager_id.present? ? [user.manager] : []).push(),
    triggered_by_id: project_unit.id,
    triggered_by_type: project_unit.class.to_s,
})
